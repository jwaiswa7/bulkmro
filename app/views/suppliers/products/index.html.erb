<% provide :container_fluid, true %>
<% provide :can_be_ajaxed, true %>
<% provide :wrap_whitespace, true %>

<% content_for :heading do %>
  Products
<% end %>

<% content_for :header_row do %>
  <th class="no-sort"></th>
  <th class="no-sort">Name</th>
  <th class="no-sort">SKU</th>
  <th class="no-sort desktop">Price</th>
  <th class="desktop" data-name="created_at">Created</th>
<% end %>

<div class="col-lg-12" id="supplier_products_index">
  <% if params[:view] == "list_view" %>
    <%= render partial: 'shared/layouts/datatable' %>
  <% else %>
    <%= render partial: 'grid' %>
  <% end %>
</div>
