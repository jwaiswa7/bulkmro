<% provide :container_fluid, true %>
<% provide :can_be_ajaxed, true %>
<% provide :wrap_whitespace, true %>
<% provide :use_url_as_page_title, true %>
<% content_for :page_title do %>
  RFQ
<% end %>

<% content_for :heading do %>
  RFQ's
<% end %>
<%# if Settings.reports.show_summary %>
  <div class="col-lg-12">
    <%= render partial: "shared/layouts/summary", locals: {klass: SupplierRfq, statuses: SupplierRfq.statuses, alias_name: ''} %>
  </div>
<%# end %>

<div class="col-lg-12">
    <% content_for :header_row do %>
      <th class="no-sort all"></th>
      <th class="no-sort desktop">RFQ ID#</th>
      <th class="no-sort desktop">Inquiry Number</th>
      <th class="no-sort desktop">Inquiry Subject</th>
      <th class="no-sort desktop" data-name="status_key">Status</th>
      <th class="no-sort desktop">Sent At</th>
      <th class="no-sort desktop">Line Items</th>
      <th class="no-sort desktop">Total(Excl. Tax)</th>
      <th class="no-sort desktop">Total(Incl. Tax)</th>
      <th class="no-sort desktop" data-name="created_at">Created At</th>
    <% end %>

  <% content_for :filter_row do %>
    <td data-filter="false"></td>
    <td data-filter="false"></td>
    <td data-filter="false"></td>
    <td data-filter="false"></td>
    <td class="status-filter" data-filter="dropdown"></td>
    <td data-filter="false"></td>
    <td data-filter="false"></td>
    <td data-filter="false"></td>
    <td data-filter="false"></td>
    <td data-filter="daterange"></td>
  <% end %>

  <%= render layout: 'shared/layouts/datatable' do %>
  <% end %>
</div>