    <th class="no-sort desktop">Warehouse</th>
    <th class="no-sort desktop">Line Items</th>
    <th class="no-sort desktop">PO Date</th>
    <th class="sort desktop text-left" data-name="created_at">Created Date</th>
  <% end %>

  <% content_for :filter_row do %>
    <td data-filter="false"></td>
