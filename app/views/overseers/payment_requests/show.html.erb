<div class="col-lg-12">
  <section class="pt-3 pt-lg-4 pb-2">
    <div class="d-md-flex justify-content-between">
      <h3 class="display-5 d-flex align-items-center">
        Payment Request for PO <%= format_id(@payment_request.po_request.purchase_order.po_number) %>:&nbsp;<%= status_badge(@payment_request.status) %>
      </h3>
      <% if policy(@payment_request).edit? %>
        <a href="<%= edit_overseers_po_request_payment_request_path(@payment_request.po_request, @payment_request) %>" class="btn btn-warning btn-rounded align-self-center btn-block-sm-down"><i class="fal fa-pen mr-1"></i>Edit</a>
      <% end %>
    </div>
  </section>

  <section class="mb-3">
    <div class="card mb-2">
      <div class="card-body">
        <div>
          <h6 class="text-uppercase text-black-50 mb-1">Details</h6>
          <div class="form-row">
            <% if @payment_request.po_request.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Po Request #</strong>
                <% if policy(@payment_request.po_request).show? %>
                  <%= link_to overseers_po_request_path(@payment_request.po_request), target: '_blank' do %>
                    <%= format_id(@payment_request.po_request.purchase_order_id) %>
                  <% end %>
                <% else %>
                  #<%= @payment_request.po_request.purchase_order_id %>
                <% end %>
              </div>
            <% end %>

            <% if @payment_request.purchase_order.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Purchase Order #</strong>
                <% if policy(@payment_request.purchase_order).show? %>
                  <%= link_to overseers_inquiry_purchase_order_path(@payment_request.inquiry, @payment_request.purchase_order, format: :pdf), target: '_blank' do %>
                    <%= format_id(@payment_request.purchase_order.po_number) %>
                  <% end %>
                <% else %>
                  <%= format_id(@payment_request.purchase_order.po_number) %>
                <% end %>
              </div>
            <% end %>

            <% if @payment_request.inquiry.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Inquiry #</strong>
                <% if policy(@payment_request.inquiry).edit? %>
                  <%= link_to overseers_inquiry_path(@payment_request.inquiry), target: '_blank' do %>
                    <%= format_id(@payment_request.inquiry.inquiry_number) %>
                  <% end %>
                <% else %>
                  <%= format_id(@payment_request.inquiry.inquiry_number) %>
                <% end %>
              </div>
            <% end %>

            <% if @payment_request.status.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Status</strong>
                <%= status_badge(@payment_request.status) %>
              </div>
            <% end %>

            <% if @payment_request.inquiry.present? && @payment_request.inquiry.inside_sales_owner.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Inside Sales</strong>
                <%= @payment_request.inquiry.inside_sales_owner.to_s %>
              </div>
            <% end %>

            <% if @payment_request.inquiry.present? && @payment_request.inquiry.inside_sales_owner.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Outside Sales</strong>
                <%= @payment_request.inquiry.outside_sales_owner.to_s %>
              </div>
            <% end %>

          </div>
          <% if @payment_request.attachments.attached? %>
            <div class="form-row">
              <div class="col-12 col-md-3 mb-2 mt-2">
                <strong class="d-block">Attachments </strong>
                <% @payment_request.attachments.each do |attachment| %>
                  <%= link_to url_for(attachment), class: 'ml-md-1 btn btn-success', target: '_blank', :"data-toggle" => 'tooltip', :status => attachment.filename do %>
                    <i class="fal fa-download"></i>
                    <%= link_to overseers_attachment_path(attachment.id), class: 'btn btn-outline-danger btn-sm ml-1 mr-1 mr-md-0', method: :delete, data: {confirm: 'Are you sure?'}, :"data-toggle" => 'tooltip', :status => ['Delete', ' ', attachment.filename, '?'].join('') do %>
                      <i class="fal fa-trash-alt"></i>
                    <% end if attachment.present? && policy(:attachment).destroy? %>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>


    <div class="card mb-2">
      <div class="card-body">
        <div>
          <div class="form-row">
            <% if @payment_request.utr_number.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">UTR/Cheque #</strong>
                <%= @payment_request.utr_number %>
              </div>
            <% end %>

            <% if @payment_request.payment_type.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Payment Type</strong>
                <%= @payment_request.payment_type %>
              </div>
            <% end %>

            <% if @payment_request.payment_option.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Payment Terms</strong>
                <%= @payment_request.payment_option.name %>
              </div>
            <% end %>

            <% if @payment_request.due_date.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Due Date</strong>
                <%= format_date(@payment_request.due_date) %>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <div class="flex-fill">
          <h6 class="text-uppercase text-black-50 mb-1">Comments History</h6>
        </div>

        <% if @payment_request.comments.persisted.size > 0 %>
          <div class="chats mb-3">
            <% @payment_request.comments.each do |comment| %>
              <%= format_comment(comment) %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</div>