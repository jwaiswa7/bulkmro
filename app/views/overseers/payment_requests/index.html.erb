<% provide :container_fluid, true %>
<% provide :can_be_ajaxed, true %>
<% provide :wrap_whitespace, true %>

<div class="col-lg-12">
  <%= render partial: "shared/layouts/summary", locals: {klass: PaymentRequest, statuses: PaymentRequest.statuses} %>
</div>

<% content_for :heading do %>
  <% ['Payment Requests', @status].compact.join(': ') %>
<% end %>

<% content_for(:heading_buttons) do %>
  <% if policy(:po_request).index? %>
    <a href="<%= overseers_po_requests_path %>" class=" btn btn-success btn-rounded align-self-center btn-block-sm-down mr-md-1 mb-md-0 mb-1">
      <i class="fal fa-plus-circle mr-1"></i>New <%= controller_path.split('/').last.singularize.split("_").join(" ").upcase %>
    </a>
  <% end %>
<% end %>

<% content_for :header_row do %>
  <th class="no-sort all" data-width="70px"></th>
  <th class="no-sort desktop">Req. No.</th>
  <th class="no-sort desktop" data-name="status">Status</th>
  <th class="no-sort desktop text-right">Inquiry #</th>
  <th class="no-sort all text-right">PO Request #</th>
  <th class="no-sort all">Payment Terms</th>
  <th class="no-sort all">Inside Sales</th>
  <th class="no-sort desktop text-right">Due Date</th>
  <th class="no-sort desktop text-right">Requested At</th>
  <th class="no-sort desktop text-right">Updated At</th>
  <th class="no-sort desktop">Latest Comment</th>
<% end %>

<div class="col-lg-12">
  <%= render layout: 'shared/layouts/datatable' do %>
  <% end %>
</div>