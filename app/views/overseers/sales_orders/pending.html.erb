<% provide :can_be_ajaxed, true %>
<% provide :wrap_whitespace, true %>
<% provide :container_fluid, true %>

<div class="col-lg-12">
  <%=render partial: "shared/layouts/summary", locals: {klass: SalesOrder , statuses: SalesOrder.statuses.except("Approved", "Order Deleted", "Hold by Finance", "Cancelled")} %>
</div>

<div class="col-lg-12">
  <% content_for :header_row do %>
    <th class="no-sort all"></th>
    <th class="sort all text-right" data-name="order_number">Order #</th>
    <th class="sort desktop text-right" data-name="id">Doc ID</th>
    <th class="sort desktop text-right" data-name="inquiry_number">Inquiry #</th>
    <th class="no-sort desktop" data-name="status">Status</th>
    <th class="sort desktop" data-name="sent_at">Sent At</th>
    <th class="no-sort desktop">Created By</th>
    <th class="no-sort desktop" data-name="inside_sales_executive">Inside Sales</th>
    <th class="no-sort desktop" data-name="outside_sales_executive">Outside Sales</th>
    <th class="sort all text-right">Margin</th>
    <th class="sort desktop text-right" data-name="quote_total">Quote Total</th>
    <th class="sort desktop text-right" data-name="order_total">Order Total</th>
    <th class="sort desktop text-right" data-name="created_at">Created At</th>
  <% end %>
  <% content_for :filter_row do %>
    <td data-filter="false"></td>
    <td data-filter="false"></td>
    <td data-filter="false"></td>
    <td data-filter="false"></td>
    <td class="status-filter" data-filter="dropdown"></td>
    <td data-filter="false"></td>
    <td data-filter="false"></td>
    <td data-filter="dropdown"></td>
    <td data-filter="dropdown"></td>
    <td data-filter="false"></td>
    <td data-filter="false"></td>
    <td data-filter="false"></td>
    <td data-filter="false"></td>
  <% end %>

  <%= render layout: 'shared/layouts/datatable' do %>
  <% end %>
</div>