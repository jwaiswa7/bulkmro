<% provide :can_be_ajaxed, true %>
<% provide :wrap_whitespace, true %>
<% provide :container_fluid, true %>
<% if is_authorized(:sales_order, 'resync_all_sales_orders') %>
  <% provide :heading_buttons do %>
    <a href="<%= resync_all_sales_orders_overseers_sales_orders_path %>" class="btn btn-success btn-rounded align-self-center btn-block-sm-down ml-1 mt-2"><i class="fal fa-retweet mr-1"></i>Resync
    All Sales Orders</a>
  <% end %>
<% end %>

<div class="col-lg-12">
  <% content_for :header_row do %>
    <th class="no-sort all" width="98px">Quick Actions</th>
    <th class="sort desktop text-right" data-name="id">Doc ID</th>
    <th class="sort desktop text-right" data-name="">Inquiry #</th>
    <th class="sort desktop text-right" data-name="">Order #</th>
    <th class="no-sort desktop text-left" data-name="status">Status</th>
    <th class="sort desktop text-left" data-name="sent_at">Sent At</th>
    <th class="sort desktop text-left">Approved At</th>
    <th class="no-sort desktop text-left">Created By</th>
    <th class="no-sort desktop text-left" data-name="inside_sales_executive">Inside Sales</th>
    <th class="no-sort desktop text-left" data-name="outside_sales_executive">Outside Sales</th>
    <th class="sort desktop text-left" data-name="created_at">Created At</th>
  <% end %>


  <%= render layout: 'shared/layouts/datatable' do %>
  <% end %>
</div>