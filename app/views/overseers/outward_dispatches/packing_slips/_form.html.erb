<div class="col-lg-12">

  <%= render 'shared/snippets/page_header', e: @packing_slip %>

  <%= simple_form_for([:overseers,@outward_dispatch, @packing_slip], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= render 'shared/snippets/form_errors', f: f %>
    <%= f.hidden_field :id %>
    <%#= f.hidden_field :ar_invoice_request_id %>
    <%#= f.hidden_field :sales_order_id %>
    <div class="card mb-2">
      <div class="card-body">
        <div class="">
          <h6 class="text-uppercase text-black-50 mb-1"> Entity Details</h6>
          <div class="form-row">

          </div>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-body">
        <div class="">
          <div class="form-row">
            <div class="col-4 col-md-4">
              <%= f.input :box_number%>
            </div>
            <div class="col-4 col-md-4">
              <%= f.input :box_detail %>
            </div>
          </div>
        </div>
      </div>
      <div class="card-body">
        <h6 class="text-uppercase text-black-50 mb-1">Products</h6>
        <div class="form-row d-none d-md-flex">
          <div class="col-1">
            <div class="form-group mb-0">
              <label>Sr. No.</label>
            </div>
          </div>
          <div class="col-5">
            <div class="form-group mb-0">
              <label>Product</label>
            </div>
          </div>
          <div class="col-2">
            <div class="form-group mb-0">
              <label>Qty</label>
            </div>
          </div>
        </div>
        <% if f.object.rows.present? %>
          <%= f.nested_fields_for :rows, f.object.rows, wrapper_tag: :div do |row| %>

            <div class="form-row flex-row align-items-start">
              <div class="col-1 col-md-1">
                <%= row.input :delivered_quantity, input_html: { value: row.object.delivery_quantity }, label: false %>
              </div>
              <div class="col-9 col-md-9">
                <%= row.hidden_field :packing_slip_id%>
                <%= row.input :ar_invoice_request_row, input_html: { value: row.object.ar_invoice_request_row.to_s }, disabled: row.object.ar_invoice_request_row.present? && row.object.errors.blank?, label: false %>
              </div>
              <div class="col-1 col-md-1">
                <%= row.input :delivered_quantity, input_html: { value: row.object.delivery_quantity }, label: false %>
              </div>
              <div class="col-1 col-md-1">
                <%= row.remove_nested_fields_link '', class: 'btn align-self-center delete_row far fa-times text-danger', wrapper_class: 'simple-row'%>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="card-footer">
        <div class="form-row">
          <%= button_tag(type: "submit", class: "btn btn-success btn-block submit-form") do %>
            <% if action_name.capitalize == "New" %>
              <i class="fal fa-plus-circle"></i>
            <% else %>
              <i class="fal fa-pen"></i>
            <% end %>
            <%= submit_text(@packing_slip) %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
