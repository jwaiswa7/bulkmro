<div class="col-lg-12">

  <%= render 'shared/snippets/page_header', e: @outward_dispatch %>

  <%= simple_form_for([:overseers, @outward_dispatch], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= render 'shared/snippets/form_errors', f: f %>
    <%= f.hidden_field :id %>
    <%= f.hidden_field :ar_invoice_request_id %>
    <%= f.hidden_field :sales_order_id %>
    <div class="card mb-2">
      <div class="card-body">
        <div class="">
          <h6 class="text-uppercase text-black-50 mb-1"> Entity Details</h6>
          <div class="form-row">
            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Inquiry </strong>
              <%= f.object.sales_order.inquiry %>
            </div>
            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Order </strong>
              #<%= f.object.sales_order.order_number %>
            </div>
            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">AR invoice </strong>
              #<%= f.object.ar_invoice_request.ar_invoice_number %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-footer">
        <div class="form-row">
          <%= button_tag(type: "submit", class: "btn btn-success btn-block submit-form") do %>
            <% if action_name.capitalize == "New" %>
              <i class="fal fa-plus-circle"></i>
            <% else %>
              <i class="fal fa-pen"></i>
            <% end %>
            <%= submit_text(@outward_dispatch) %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  <span>OR</span>
    <div class="card">
      <div class="card-footer">
        <div class="form-row">
          <%= link_to "Create outward dispatch and continue to create packing slip", create_with_packing_slip_overseers_outward_dispatches_path(ar_invoice_request_id: params[:ar_invoice_request_id]), :class => "btn btn-success btn-block "%>
        </div>
      </div>
    </div>
</div>
