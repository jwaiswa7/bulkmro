<div class="col-lg-12">
  <div class="page-header">
    <h2>Document Creation Form</h2>
  </div>

  <%= simple_form_for(:document_creation, :url => overseers_document_creations_path, :method => :post, :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <div class="card">
      <div class="card-body">
        <div class="mt-3">
          <div class="form-row">
            <div class="col">
              <%= f.input :option, collection: ["Purchase Order", "Sales Invoice"], input_html: {class: 'select2 select2-wrap-text'}, label: "Select Document", selected: session[:option] %>
            </div>

            <div class="col">
              <%= f.input :document_number, label: "Enter document number", input_html: { value: session[:number] } %>
            </div>
          </div>
          <div class="form-row">
            <div class="col text-center">
              <%= f.submit "Send Request", class: "btn btn-default btn-dark" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
