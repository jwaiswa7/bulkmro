<div class="col-lg-12">
  <section class="pt-3 pt-lg-4 pb-2">
    <div class="d-md-flex justify-content-between">
      <h3 class="display-5 d-flex align-items-center">
        <%= @contact.full_name.titleize %>
      </h3>
      <a href="<%= edit_overseers_contact_path(@contact) %>" class="btn btn-warning btn-rounded align-self-center btn-block-sm-down"><i class="fal fa-pen mr-1"></i>Edit
        Contact</a>
    </div>
  </section>

  <section class="mb-3">
    <div class="card">
      <div class="card-body">
        <div>
          <h6 class="text-uppercase text-black-50 mb-1">Contact Details</h6>
          <div class="form-row">
            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Name</strong>
              <%= @contact.full_name.titleize %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Account</strong>
              <%= @contact.account.name %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Designation</strong>
              <%= @contact.designation %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Telephone</strong>
              <%= @contact.telephone %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Mobile</strong>
              <%= @contact.mobile %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Email</strong>
              <%= @contact.email %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Status</strong>
              <%= @contact.status %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <table class="datatable table table-bordered dt-responsive" style="width:100%;">
    <tr>
      <th class="no-sort"></th>
      <th class="no-sort">Status</th>
      <th class="no-sort">IQ #</th>
      <th class="no-sort">Account</th>
      <th class="no-sort">Company</th>
      <th class="no-sort">Inside Sales</th>
      <th class="no-sort">Outsides Sales</th>
      <th class="no-sort">Total</th>
    </tr>
    </thead>
    <% @inquiries.each do |inquiry| %>
      <tbody>
        <tr>
          <td>
            <% if policy(inquiry).edit? %>
              <%= row_action_button(edit_overseers_inquiry_path(inquiry), 'pencil', 'Edit Inquiry', 'warning') %>
            <% end  %>
          </td>
          <td><%= inquiry.inquiry_number %></td>
          <td><%= status_helper_format_label(inquiry.status) %></td>
          <td><%= inquiry.account %></td>
          <td><%= inquiry.company.to_s %></td>
          <td><%= inquiry.inside_sales_owner.to_s %></td>
          <td><%= inquiry.outside_sales_owner.to_s %></td>
          <td><%= format_currency(inquiry.final_sales_quote.try(:calculated_total)) %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>