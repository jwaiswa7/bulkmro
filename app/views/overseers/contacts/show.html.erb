<div class="col-lg-12">
  <section class="pt-3 pt-lg-4 pb-2">
    <div class="d-md-flex justify-content-between">
      <h3 class="display-5 d-flex align-items-center">
        <%= @contact.full_name.titleize %>
      </h3>
      <a href="<%= edit_overseers_contact_path(@contact) %>" class="btn btn-warning btn-rounded align-self-center btn-block-sm-down"><i class="fal fa-pen mr-1"></i>Edit
        Contact</a>
    </div>
  </section>

  <section class="mb-3">
    <div class="card">
      <div class="card-body">
        <div>
          <h6 class="text-uppercase text-black-50 mb-1">Contact Details</h6>
          <div class="form-row">
            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Name</strong>
              <%= @contact.full_name.titleize %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Account</strong>
              <%= @contact.account.name %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Designation</strong>
              <%= @contact.designation %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Telephone</strong>
              <%= @contact.telephone %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Mobile</strong>
              <%= @contact.mobile %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Email</strong>
              <%= @contact.email %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Status</strong>
              <%= @contact.status %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>