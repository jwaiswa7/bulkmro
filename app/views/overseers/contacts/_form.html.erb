<div class="col-lg-12">
  <div class="page-header">
    <h2><%= action_name.capitalize %> Contact</h2>
    <p>This will <em>'<%= submit_text(@contact).downcase %>'</em> and log it under
      <strong><%= current_overseer.full_name %></strong>.</p>
  </div>

  <%= simple_form_for(@contact, url: action_name == 'edit' ? overseers_contact_path(@contact.to_param) : overseers_contacts_path(:company_id => @company.to_param), :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= render 'shared/snippets/form_errors', f: f %>

    <%= f.hidden_field :account_id %>

    <div class="form-row">
      <div class="col-12">
        <%= f.input :account, disabled: true %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-12">
        <%= f.input :companies, input_html: {value: format_collection(f.object.companies)}, disabled: true %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-1">
        <%= f.input :legacy_id, disabled: true %>
      </div>
      <div class="col-6">
        <%= f.input :first_name %>
      </div>
      <div class="col-5">
        <%= f.input :last_name %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-12">
        <%= f.input :role, as: :select, wrapper: :custom_multi_select, collection: enum_to_collection(Contact.roles), include_blank: false %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-4">
        <%= f.input :designation %>
      </div>
      <div class="col-4">
        <%= f.input :telephone %>
      </div>
      <div class="col-4">
        <%= f.input :mobile %>
      </div>
    </div>


    <%= f.input :email, required: true %>
    <%= f.input :legacy_email, disabled: false %>
    <%= f.input :password, required: false %>
    <%= f.input :password_confirmation, required: false %>

    <%= f.input :status, wrapper: :custom_multi_select, as: :select, collection: enum_to_collection(Contact.statuses) %>

    <div class="form-row">
      <div class="col-4">
        <%= f.input :is_active %>
      </div>
    </div>
    <% if action_name.capitalize == "New" %>
      <%= button_tag(type: "submit", class: "btn btn-success btn-block") do %>
        <i class="fal fa-plus-circle"></i> <%= submit_text(@contact) %>
      <% end %>
    <% else %>
      <%= button_tag(type: "submit", class: "btn btn-warning btn-block") do %>
        <i class="fal fa-pen"></i> <%= submit_text(@contact) %>
      <% end %>
    <% end %>
  <% end %>
</div>