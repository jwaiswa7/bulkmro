<%= provide :container_fluid, true %>
<div class="col-lg-12">
  <section class="pt-3 pt-lg-4 pb-2">
    <div class="d-md-flex justify-content-between">
      <h3 class="display-5 d-flex align-items-center">
        <%= @company_creation_request.name %>:&nbsp;<%= status_badge(@company_creation_request.status) %>
      </h3>

      <% if !@company_creation_request.company.present? && is_authorized(:company, 'new') %>
        <a href="<%= new_overseers_company_path(:ccr_id => @company_creation_request.id) %>" class="btn btn-warning btn-rounded align-self-center btn-block-sm-down"><i class="fal fa-plus mr-1"></i>Create
          New
          Company</a>
      <% end %>

    </div>
  </section>
  <section class="mb-3">
    <div class="card">
      <div class="card-body">
        <h6 class="text-uppercase text-black-50 mb-1">Company Details</h6>
        <div class="form-row">
          <div class="col-6 col-md-4 mb-2">
            <strong class="d-block">
              First Name
            </strong>
            <%= @company_creation_request.first_name %>
          </div>
          <div class="col-6 col-md-4 mb-2">
            <strong class="d-block">
              Last Name
            </strong>
            <%= @company_creation_request.last_name %>
          </div>
          <div class="col-6 col-md-4 mb-2">
            <strong class="d-block">
              Email
            </strong>
            <%= @company_creation_request.email %>
          </div>
        </div>
        <div class="form-row">
          <div class="col-6 col-md-4 mb-2">
            <strong class="d-block">
              Is supplier
            </strong>
            <%= format_boolean(@company_creation_request.is_supplier?) %>
          </div>
          <div class="col-6 col-md-4 mb-2">
            <strong class="d-block">
              Is customer
            </strong>
            <%= format_boolean(@company_creation_request.is_customer?) %>
          </div>
          <div class="col-6 col-md-4 mb-2">
            <strong class="d-block">
              Requested by
            </strong>
            <%= @company_creation_request.activity.created_by.name %>
          </div>
        </div>
        <div class="form-row">
          <div class="col-12">
            <strong class="d-block">
              Address
            </strong>
            <%= @company_creation_request.address %>
          </div>
        </div>
      </div>
    </div>
  </section>


  <% if 0 > 0 %>
    <section class="mb-3">
      <div class="card">
        <div class="card-body">
          <div>
            <h6 class="text-uppercase text-black-50 mb-1">Create OR Link Company</h6>
            <div class="form-row">
              <div class="col-4">
                <% if  !@company_creation_request.company.present? && is_authorized(:company, 'new') %>
                  <a href="<%= new_overseers_company_path(:ccr_id => @company_creation_request.id) %>" class="btn btn-warning btn-rounded align-self-center btn-block-sm-down"><i class="fal fa-plus mr-1"></i>Create
                    New
                    Company</a>
                <% end %>
              </div>
              <div class="col-2"> OR</div>
              <div class="col-6">
                <%= simple_form_for([:overseers, @company_creation_request], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
                  <div class="col-3">
                    <div class="form-group">
                      <%= f.association :company, as: :select, :include_blank => true, input_html: {class: 'select2-ajax', :'data-source' => autocomplete_overseers_companies_path} %>
                    </div>
                  </div>
                  <div class="col-3">
                    <%= submit_tag "Link", class: "btn btn-sm btn-block btn-success" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  <% end %>
</div>