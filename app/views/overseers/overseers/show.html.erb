<div class="col-lg-12">
  <section class="pt-3 pt-lg-4 pb-2">
    <div class="d-md-flex justify-content-between">
      <h3 class="display-5 d-flex align-items-center">
        <%= @overseer.full_name %>
      </h3>
      <a href="<%= edit_overseers_overseer_path(@overseer) %>" class="btn btn-warning btn-rounded align-self-center btn-block-sm-down">
        <i class="fal fa-pen mr-1"></i>Edit Overseer
      </a>
    </div>
  </section>

  <section class="mb-3">
    <div class="card">
      <div class="card-body">
        <div>
          <h6 class="text-uppercase text-black-50 mb-1">Contact Details</h6>
          <div class="form-row">
            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Name</strong>
              <%= @overseer.full_name %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Email</strong>
              <%= @overseer.email %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Role</strong>
              <%= @overseer.role %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Parent</strong>
              <%= @overseer.parent.full_name %>
            </div>

            <% if @overseer.designation.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Designation</strong>
                <%= @overseer.designation %>
              </div>
            <% end %>

            <% if @overseer.telephone.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Telephone</strong>
                <%= @overseer.telephone %>
              </div>
            <% end %>

            <% if @overseer.mobile.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Mobile</strong>
                <%= @overseer.mobile %>
              </div>
            <% end %>

            <% if @overseer.department.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Department</strong>
                <%= @overseer.department %>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </section>
</div>
</div>