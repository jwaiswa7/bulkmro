<div class="col-lg-12">
  <div class="page-header">
    <h2><%= action_name.capitalize %> Overseer</h2>
    <p>This will <em>'<%= submit_text(@overseer).downcase %>'</em> and log it under
      <strong><%= current_overseer.full_name %></strong>.</p>
  </div>

  <%= simple_form_for([:overseers, @overseer], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= f.input :role, :wrapper => :custom_multi_select, as: :select, collection: enum_to_collection(Overseer.roles), include_blank: 'Select a role' %>

    <% if @overseer.persisted? %>
      <%= f.association :parent, :wrapper => :custom_multi_select, :label_method => :to_s, collection: Overseer.except_objects(@overseer.self_and_descendants), include_blank: 'Select a parent' %>
    <% else %>
      <%= f.association :parent, :wrapper => :custom_multi_select, :label_method => :to_s, include_blank: 'Select a parent' %>
    <% end %>

    <div class="form-row">
      <div class="col-6">
        <%= f.input :first_name, :required => true %>
      </div>
      <div class="col-6">
        <%= f.input :last_name, :required => true %>
      </div>
    </div>

    <%= f.input :email, :required => true %>
    <%#= f.input :password, :required => true %>
    <%#= f.input :password_confirmation, :input_html => {:"data-parsley-error-message" => 'Passwords do not match.', :"data-parsley-equalto" => '#overseer_password'}, :required => true %>

    <% if action_name.capitalize == "New" %>
      <%= button_tag(type: "submit", class: "btn btn-success btn-block") do %>
        <i class="fal fa-plus-circle"></i> <%= submit_text(@overseer) %>
      <% end %>
    <% else %>
      <%= button_tag(type: "submit", class: "btn btn-warning btn-block") do %>
        <i class="fal fa-pen"></i> <%= submit_text(@overseer) %>
      <% end %>
    <% end %>
  <% end %>
</div>