<%= simple_form_for([:overseers, @overseer]) do |f| %>

  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.input :role, as: :select, collection: enum_to_collection(Overseer.roles), include_blank: 'Select an Overseer' %>

  <% if @overseer.persisted? %>
    <%= f.association :parent, :label_method => :to_s, collection: Overseer.except_objects(@overseer.self_and_descendants), include_blank: 'Select a parent' %>
  <% else %>
    <%= f.association :parent, :label_method => :to_s, include_blank: 'Select a parent' %>
  <% end %>

  <%= f.submit %>
<% end %>