<div class="col-lg-12">
  <div class="page-header">
    <h2>Edit Role and Permissions</h2>
    <p>This will edit role and permissions</em>
      and log it under
      <strong><%= current_overseer.full_name %></strong>.</p>
  </div>

  <%= simple_form_for([:overseers, @overseer], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= render 'shared/snippets/form_errors', f: f %>

    <div class="card">
      <div class="card-body">
        <div>
          <div class="form-row">
            <div class="col-4">
              <%= f.input :first_name, disabled: true %>
            </div>
            <div class="col-4">
              <%= f.input :last_name, disabled: true %>
            </div>
            <div class="col-4">
              <%= f.input :email, disabled: true %>
            </div>
            <!--            <div class="col-4">-->
            <%#= f.input :is_super_admin %>
            <!--            </div>-->
          </div>
        </div>
        <div class="mt-3 card-alternative ">
          <div class="form-row">
            <div class="col-12">
              <%= f.association :acl_role, label: 'Select Role', required: true, :wrapper => :custom_multi_select, as: :select, collection: AclRole.all.pluck(:role_name, :id), include_blank: true %>
            </div>
          </div>
        </div>

        <div class="mt-3 sticky-top">
          <div class="form-row">
            <div class="col-12">
              <button name="button" id="btnSave" type="button" class="btn btn-warning btn-block">
                <i class="fal fa-pen mr-1"></i><span>Update Permissions</span></button>
            </div>
          </div>
        </div>

        <div class="mt-3 card-alternative ">

          <a class="btn btn-light text-left btn-lg btn-block mt-2 lg-4" type="button" data-toggle="collapse" data-target="#acl_menu_resources">
            Menu Item Resources
            <i class="fa fa-chevron-down" aria-hidden="true"></i>
          </a>
          <div id="acl_menu_resources" class="collapse">
            <div class="mt-2 form-row d-flex flex-row align-content-stretch">
              <div class="col-12 mb-2">
                <div class="mt-1">
                  <div class="form-row">
                    <div class="col-1">
                      <button name="button" id="checkAllMenu" type="button" class="btn btn-warning btn-block">
                        <i class="fal fa-check mr-1"></i><span>&nbsp</span></button>
                    </div>
                    <div class="col-1">
                      <button name="button" id="uncheckAllMenu" type="button" class="btn btn-warning btn-block">
                        <i class="fal fa-square mr-1"></i><span></span>&nbsp;</button>
                    </div>
                    <div class="col-1">
                      <button name="button" id="collapseMenu" type="button" class="btn btn-warning btn-block">
                        <i class="far fa-plus-square mr-1"></i><span>&nbsp;</span></button>
                    </div>
                    <div class="col-1">
                      <button name="button" id="expandMenu" type="button" class="btn btn-warning btn-block">
                        <i class="far fa-minus-square mr-1"></i><span>&nbsp;</span></button>
                    </div>
                  </div>
                </div>
                <div id="menu_tree" data-overseer="<%= @overseer.id %>"></div>
              </div>
            </div>
          </div>

          <a class="btn btn-light text-left btn-lg btn-block mt-2 lg-4" type="button" data-toggle="collapse" data-target="#acl_all_resources">
            All Resources
            <i class="fa fa-chevron-down" aria-hidden="true"></i>
          </a>
          <div id="acl_all_resources" class="collapse">
            <div class="mt-2 form-row d-flex flex-row align-content-stretch">
              <div class="col-12 mb-2">
                <div class="mt-1">
                  <div class="form-row">
                    <div class="col-1">
                      <button name="button" id="checkAll" type="button" class="btn btn-warning btn-block">
                        <i class="fal fa-check mr-1"></i><span></span></button>
                    </div>
                    <div class="col-1">
                      <button name="button" id="uncheckAll" type="button" class="btn btn-warning btn-block">
                        <i class="fal fa-square mr-1"></i><span></span>&nbsp;</button>
                    </div>
                    <div class="col-1">
                      <button name="button" id="collapse" type="button" class="btn btn-warning btn-block">
                        <i class="far fa-plus-square mr-1"></i><span>&nbsp;</span></button>
                    </div>
                    <div class="col-1">
                      <button name="button" id="expand" type="button" class="btn btn-warning btn-block">
                        <i class="far fa-minus-square mr-1"></i><span>&nbsp;</span></button>
                    </div>
                  </div>
                </div>
                <div class="loader-acl col-12 d-flex justify-content-center">
                  <i class="fal fa-spinner-third fa-spin fa-3x fa-fw"></i>
                  <span class="sr-only">Loading...</span>
                </div>
                <div id="tree" data-overseer="<%= @overseer.id %>"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>