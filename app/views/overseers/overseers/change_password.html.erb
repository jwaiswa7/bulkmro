<div col-lg-12>
  <%= render 'shared/snippets/page_header', e: @overseer %>
  <%= simple_form_for([:overseers, @overseer], :url => update_password_overseers_overseer_path(@overseer), :method => 'patch', :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>


    <div class="card">
      <div class="card-body">


        <div class="form-row">
          <div class="col-lg-12">
            <%= f.input :password, input_html: {type: 'password', onpaste: 'return false'}, required: true, label: "Password" %>
          </div>
          <div class="col-lg-12">
            <%= f.input :password_confirmation, input_html: {onpaste: 'return false', autocomplete: 'off'}, required: true, label: "Confirm Password" %>
          </div>
        </div>

      </div>
      <div class="card-footer">
        <div class="form-row">
          <%#= action_button(action_name, @overseer) %>
          <%= button_tag(type: "submit", class: "btn btn-success btn-block") do %>
            <i class="fal fa-plus-circle"></i> Update
          <% end %>

        </div>
      </div>
    </div>
    </div>
  <% end %>
  </div>

  <div col-lg-10>
    <div class="col-6 col-md-3 mb-2">
      <strong class="d-block">Last Changed By</strong>
      <%= (@overseer.changed_by || @overseer.change_password.changed_by if @overseer.changed_by) %>
    </div>


    <% if @overseer.changed_at %>
      <div class="col-6 col-md-3 mb-2">
        <strong class="d-block">Changed At</strong>
        <%= format_date(@overseer.changed_at) %>
      </div>
    <% end %>
  </div>
  </div>

