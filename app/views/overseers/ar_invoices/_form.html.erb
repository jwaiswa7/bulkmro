<div class="col-lg-12">
  <%= render 'shared/snippets/page_header', e: @ar_invoice %>

  <%= simple_form_for([:overseers, @ar_invoice], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= render 'shared/snippets/form_errors', f: f %>
    <%= f.hidden_field :id %>
    <%= f.hidden_field :sales_order_id %>
    <%= f.hidden_field :inquiry_id %>
    <section class="mb-3">
      <div class="card mb-2">
        <div class="card-body">
          <h6 class="text-uppercase text-black-50 mb-1"> Entity Details</h6>
          <div class="form-row">
            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Inquiry </strong>
              <%= f.object.inquiry %>
            </div>
            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Order </strong>
              #<%= f.object.sales_order.order_number %>
            </div>
            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Customer PO </strong>
              <%= f.object.inquiry.customer_po_number.present? ? '#'+f.object.inquiry.customer_po_number : ' - ' %>
            </div>
            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Currency </strong>
              <%= f.object.inquiry.customer_order_date %>
            </div>
          </div>
          <div class="form-row">
            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Currency </strong>
              <%= f.object.sales_order.currency.name %>
            </div>
            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Payment Terms </strong>
              <%= f.object.inquiry.payment_option %>
            </div>
          </div>
        </div>
      </div>
      <div class="card mb-2">
        <div class="card-body">
          <h6 class="text-uppercase text-black-50 mb-1"> Addresses Details</h6>
          <div class="form-row">
            <div class="col-6 col-md-6 mb-2">
              <strong class="d-block">Bulk MRO Billing Address </strong>
              <% if f.object.inquiry.bill_from.present? %>
                <%= f.object.inquiry.bill_from.address.name.to_s %>
                <%= f.object.inquiry.bill_from.address.to_compact_multiline_s %><br>
                <% if f.object.inquiry.bill_from.address.phone.present? %>
                  <em>Contact</em>: <%= f.object.inquiry.contact.full_name %> - <%= f.object.inquiry.bill_from.address.phone %><br>
                <% end %>
                <% if f.object.inquiry.bill_from.address.gst %>
                  <strong><em>GST Number</em></strong>: <%= f.object.inquiry.bill_from.address.gst %><br>
                <% end %>
              <% end %>
            </div>
            <div class="col-6 col-md-6 mb-2">
              <strong class="d-block">Bulk MRO Shipping Address </strong>
              <% if f.object.inquiry.ship_from.present? %>
                <%= f.object.inquiry.ship_from.address.name.to_s %><br>
                <%= f.object.inquiry.ship_from.address.to_compact_multiline_s %><br>
                <% if f.object.inquiry.ship_from.address.mobile || f.object.inquiry.ship_from.address.telephone %>
                  <em>Contact</em>: <%= f.object.inquiry.ship_from.address.mobile || f.object.inquiry.ship_from.address.telephone %><br>
                <% end %>
                <% if f.object.inquiry.ship_from.address.gst %>
                  <strong><em>GST Number</em></strong>: <%= f.object.inquiry.ship_from.address.gst %><br>
                <% end %>
              <% end %>
            </div>
          </div>
          <div class="form-row">
            <div class="col-6 col-md-6 mb-2">
              <strong class="d-block">Customer - Billing Address</strong>
              <%= (f.object.inquiry.company.name) %><br>
              <%= f.object.sales_order.serialized_billing_address.to_compact_multiline_s %><br>
              <% if f.object.inquiry.contact.phone.present? %>
                Contact: <%= f.object.inquiry.contact.full_name %> - <%= f.object.inquiry.contact.phone %><br>
              <% end %>
              <strong><em>Email</em></strong>: <%= f.object.inquiry.contact.email if f.object.inquiry.contact.email.present? %>
              <span class="d-block"><strong><em>GST Number</em></strong>: <%= f.object.sales_order.serialized_billing_address.gst || f.object.inquiry.company.default_billing_address.gst %></span>
            </div>
            <div class="col-6 col-md-6 mb-2">
              <strong class="d-block">Customer - Shipping Address</strong>
              <span class="d-block"><%= (f.object.inquiry.shipping_company.name) %></span>
              <span class="d-block"><%= f.object.sales_order.serialized_shipping_address.to_compact_multiline_s %></span>
              <% if f.object.inquiry.shipping_contact.phone.present? %>
                <span class="d-block"><em>Contact</em>: <%= f.object.inquiry.shipping_contact.full_name %>
                  - <%= f.object.inquiry.shipping_contact.phone %></span>
              <% end %>
              <strong><em>Email</em></strong>: <%= f.object.inquiry.shipping_contact.email if f.object.inquiry.shipping_contact.email.present? %>
              <span class="d-block"><strong><em>GST Number</em></strong>: <%= f.object.sales_order.serialized_shipping_address.gst || f.object.inquiry.company.default_shipping_address.gst %></span>
            </div>
          </div>
        </div>
      </div>
      <div class="card mb-2">
        <div class="card-body">
          <h6 class="text-uppercase text-black-50 mb-1"> Products Details</h6>
          <table class="w-100 table table-bordered dt-responsive datatable wrap-whitespace" data-fixed-header="false">
            <thead>
            <tr>
              <th class="no-sort">
                <span data-toggle="tooltip" title="Serial Number">Sr.</span>
              </th>
              <th class="no-sort">
                <span data-toggle="tooltip" title="Description">Description</span>
              </th>
              <th class="no-sort">
                <span data-toggle="tooltip" title="Quantity">Qty</span>
              </th>
              <th class="no-sort">
                <span data-toggle="tooltip" title="Stock Quantity">Stock Qty</span>
              </th>
              <th class="no-sort">
                <span data-toggle="tooltip" title="Unit of Measurement">UoM</span>
              </th>
              <th class="no-sort">
                <span data-toggle="tooltip" title="Unit Cost">UC</span>
              </th>
              <th class="no-sort">
                <span data-toggle="tooltip" title="Unit Selling Price">USP</span>
              </th>
              <th class="no-sort">
                <span data-toggle="tooltip" title="Margin Percentage">%</span>
              </th>
              <th class="no-sort">
                <span data-toggle="tooltip" title="Tax Code">T. Code</span>
              </th>
              <th class="no-sort">
                <span data-toggle="tooltip" title="Tax Rate">T. Rate</span>
              </th>
              <th class="no-sort">
                <span data-toggle="tooltip" title="Tax Amount">T. Amount</span>
              </th>
              <th class="no-sort">
                <span data-toggle="tooltip" title="Total">Total</span>
              </th>
            </tr>
            </thead>
            <tbody>
            <% f.object.sales_order.rows.each do |sales_order_row| %>
              <tr>
                <td><%= sales_order_row.sr_no %></td>
                <td><%= sales_order_row.sales_quote_row.to_s %></td>
                <td><%= sales_order_row.quantity %></td>
                <td><%= sales_order_row.quantity %></td>
                <td><%= sales_order_row.measurement_unit %></td>
                <td><%= format_currency(sales_order_row.converted_unit_cost_price_with_unit_freight_cost, symbol: f.object.sales_order.currency_sign) %></td>
                <td><%= format_currency(sales_order_row.converted_unit_selling_price, symbol: f.object.sales_order.currency_sign) %></td>
                <td><%= number_with_precision(sales_order_row.margin_percentage, precision: 2) %></td>
                <td><%= sales_order_row.best_tax_code %></td>
                <td><%= sales_order_row.best_tax_rate %></td>
                <td><%= format_currency(sales_order_row.converted_total_selling_price_with_tax, symbol: f.object.sales_order.currency_sign) %></td>
                <td><%= format_currency(sales_order_row.converted_total_selling_price_with_tax, symbol: f.object.sales_order.currency_sign) %></td>
              </tr>
            <% end %>
            </tbody>
          </table>

        </div>
      </div>
    </section>
    <div class="card">

      <div class="card-body pt-0 pb-0">
        <div class="card-alternative">
          <div class="form-row">
            <div class="col-12">
              <%= f.input :status, as: :select, :wrapper => :custom_multi_select, collection: enum_to_collection(ArInvoice.statuses, alphabetical: false, keep_raw: true), :include_blank => false %>
            </div>
            <div class="col-12 ">
              <%= f.input :cancellation_reason,as: :select, :label => "AR Cancellation Reason", :wrapper => :custom_multi_select, wrapper_html: {class: @ar_invoice.display_reason('cancellation_reason')}, collection: enum_to_collection(ArInvoice.cancellation_reasons, alphabetical: false, keep_raw: true), :include_blank => 'Select Cancellation Reason'  %>
            </div>
            <div class="col-12 ">
              <%= f.input :rejection_reason, as: :select, :label => "AR Rejection Reason", :wrapper => :custom_multi_select, wrapper_html: {class: @ar_invoice.display_reason('rejection_reason')}, collection: enum_to_collection(ArInvoice.rejection_reasons, alphabetical: false, keep_raw: true), :include_blank => 'Select Reason' %>
            </div>
            <div class="col-12 ">
              <%= f.input :other_rejection_reason, :label => "AR Other Rejection Reason", :placeholder => 'Type Rejection Reason', wrapper_html: {class: @ar_invoice.display_reason('other')}, input_html: {:'data-parsely-no-valid-feedback' => ''} %>
            </div>

            <div class="col-12 ">
              <%= f.input :other_cancellation_reason, :label => "AR Other Cancellation Reason", :placeholder => 'Type Cancellation Reason', wrapper_html: {class: @ar_invoice.display_reason('other')}, input_html: {:'data-parsely-no-valid-feedback' => ''} %>
            </div>

            <div class="col-12">
              <%= f.input :ar_invoice_number, as: :string, label: "AR Invoice Number", :input_html => {:maxlength => 8} %>
            </div>
            <div class="col-6">
              <%= f.input :e_way, label: 'E-Way Bill' %>
            </div>

            <!--            <div class="col-12">-->
            <%#= f.nested_fields_for :comments, f.object.comments.build(:overseer => current_overseer) do |invoice_request_comment| %>
            <%#= invoice_request_comment.hidden_field :created_by_id %>
            <%#= invoice_request_comment.hidden_field :updated_by_id %>
            <%#= invoice_request_comment.input :message, :placeholder => 'Type message', input_html: {:'data-parsely-no-valid-feedback' => ''} %>
            <%# end %>
            <!--            </div>-->

          </div>
        </div>
      </div>
      <div class="card-footer">
        <div class="form-row">
          <%= button_tag(type: "submit", class: "btn btn-success btn-block submit-form") do %>
            <% if action_name.capitalize == "New" %>
              <i class="fal fa-plus-circle"></i>
            <% else %>
              <i class="fal fa-pen"></i>
            <% end %>
            <%= submit_text(@ar_invoice).downcase %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
