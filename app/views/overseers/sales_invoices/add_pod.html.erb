<div class="col-lg-12">
  <div class="page-header">
    <h2>Proof of Delivery for Invoice #<%= @invoice.invoice_number %></h2>
    <p>This will <em>Add/Update proof of delivery</em> and log it under
      <strong><%= current_overseer.full_name %></strong>.</p>
  </div>

  <%= simple_form_for(@invoice, url: update_pod_overseers_sales_invoice_path(@invoice), :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= render 'shared/snippets/form_errors', f: f %>

    <div class="form-row">
      <div class="col-12 col-md-6">
      <%= f.input :pod_attachment, as: :file, wrapper: :custom_file, required: false, label: 'Proof of Delivery', hint: f.object.pod_attachment.attached? ? ("#{link_to '<i class="fal fa-download"></i>'.html_safe, url_for(f.object.pod_attachment), class: 'ml-1 btn btn-success', target: '_blank', :"data-toggle" => 'tooltip', :title => f.object.pod_attachment.filename}".html_safe) : false %>
      </div>
      <div class="col-12 col-md-6">
        <%= f.input :pod_date, label: "Delivery Date", as: :string, input_html: {:'data-toggle' => 'datepicker'} %>
      </div>
      <%= button_tag(type: "submit", class: "btn btn-success btn-block") do %>
        <i class="fal fa-plus-circle"></i> Add/Update
      <% end %>
    </div>
  <% end %>
</div>