<% provide :container_fluid, true %>

<div class="col-lg-12 mb-0">
  <div class="page-header mb-0">
    <h2>Pipeline Report</h2>
  </div>
</div>

<div class="col-12">
  <%#= render layout: 'search_layout' do %>
  <table class="table-bordered table">
    <thead>
    <tr>
      <th>Month</th>
      <% @statuses.invert.each do |index, status| %>
        <th><%= status %></th>
      <% end %>
      <th></th>
      <th>Grand Total</th>
      <th>Won %</th>
    </tr>
    </thead>
    <tbody>
    <% @indexed_pipeline_report.each do |month, record_bucket| %>
      <tr>
        <td><%= format_month_without_date(month) %></td>
        <% @statuses.each do |index, status| %>
          <td>
              <p><%= record_bucket['pipeline']['buckets'].map{|bucket| bucket['key'] == status ? bucket['doc_count'] : nil}.compact.first %>, <%= record_bucket['pipeline']['buckets'].map{|bucket| bucket['key'] == status ? bucket['inquiry_value']['value'] : nil}.compact.first %> </p>
          </td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%# end %>
</div>
