<% content_for :heading_byline do %>
  This will <em>'<%= submit_text(@inquiry).downcase %>'</em> and log it under
  <strong><%= current_overseer.full_name %></strong>.
<% end %>

<div class="col-lg-12">
  <%= render layout: 'shared/layouts/form' do %>
    <%= simple_form_for(@excel_import, url: create_failed_skus_overseers_inquiry_import_path, :html => {:class => 'needs-validation mt-3', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>

      <%= render 'shared/snippets/form_errors', f: f %>

      <%= f.simple_fields_for :rows do |row| %>
        <% next if (row.object.inquiry_product.present? && row.object.inquiry_product.persisted?) || row.object.marked_for_destruction? %>
        <div class="card option-wrapper mb-3 text-right text-md-left">
          <div class="card-body">
            <%= row.hidden_field :id %>

            <%= row.simple_fields_for :inquiry_product do |inquiry_product, index| %>
              <div class="nested"> <!-- TODO: Drop dependence on the nested class -->
                <%= inquiry_product.hidden_field :id %>
                <%= inquiry_product.hidden_field :inquiry_id %>
                <%= inquiry_product.hidden_field :quantity %>

                <%= inquiry_product.hidden_field :sr_no %>
                <div class="row">
                  <div class="col-12">
                    <%= inquiry_product.simple_fields_for :product do |product| %>
                      <%= product.hidden_field :inquiry_import_row_id %>

                      <div class="form-row">
                        <div class="col-6 col-md-3">
                          <div class="d-flex flex-row">
                            <div class="custom-control custom-radio custom-control-inline align-self-center">
                              <%= radio = row.radio_button :approved_alternative_id, nil, class: 'custom-control-input' %>
                              <%= row.label :approved_alternative_id, class: 'custom-control-label', for: /id="([a-z\d_]*)"/.match(radio)[1] do %><%= '' %><% end %>
                            </div>
                            <div class="flex-grow-1">
                              <%= product.input :name, class: 'text-right' %>
                            </div>
                          </div>
                        </div>
                        <div class="col-6 col-md-2">
                          <%= product.input :sku, readonly: true %>
                        </div>
                        <div class="col-6 col-md-2">
                          <%= product.association :brand, collection: selected_option_or_nil(product, :brand), :wrapper => :custom_multi_select, input_html: { class: 'select2-ajax', :'data-source' => autocomplete_overseers_brands_path } %>
                        </div>

                        <div class="col-6 col-md-2">
                          <%= product.association :category, collection: selected_option_or_nil(product, :category), :wrapper => :custom_multi_select,  input_html: { class: 'select2-ajax', :'data-source' => autocomplete_overseers_categories_path } %>

                        </div>
                        <div class="col-6 col-md-2">
                          <%= product.association :tax_code, collection: selected_option_or_nil(product, :tax_code), label_method: :to_s, include_blank: "Type to search", input_html: { class: 'select2-ajax', :'data-source' => autocomplete_overseers_tax_codes_path } %>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>

            <%= row.hidden_field :approved_alternative_id %>

            <% row.object.approved_alternatives.each do |approved_alternative| %>
              <% if approved_alternative == row.object.approved_alternatives.first %>
                <hr class="mb-2 mt-0">
              <% else %>
                <hr class="my-2">
              <% end %>
              <div class="row text-small">
                <div class="col-12">
                  <div class="form-row">
                    <div class="col-6 col-md-3">
                      <div class="d-flex flex-row">
                        <div class="custom-control custom-radio custom-control-inline align-self-center">
                          <%= radio = row.radio_button :approved_alternative_id, approved_alternative.id, class: 'custom-control-input' %>
                          <%= row.label :approved_alternative_id, class: 'custom-control-label', for: /id="([a-z\d_]*)"/.match(radio)[1] do %><%= '' %>
                          <% end %>
                        </div>
                        <%= row.label :approved_alternative_id, class: 'mb-0 flex-grow-1', for: /id="([a-z\d_]*)"/.match(radio)[1] do %>
                          <span class="mt-2 d-block d-md-none"><strong>Name</strong></span>
                          <%= approved_alternative.name %>
                        <% end %>
                      </div>
                    </div>
                    <div class="col-6 col-md-3">
                      <%= row.label :approved_alternative_id, class: 'mb-0', for: /id="([a-z\d_]*)"/.match(radio)[1] do %>
                        <span class="mt-2 d-block d-md-none"><strong>SKU</strong></span>
                        <%= approved_alternative.sku %>
                      <% end %>
                    </div>
                    <div class="col-6 col-md-3">
                      <%= row.label :approved_alternative_id, class: 'mb-0', for: /id="([a-z\d_]*)"/.match(radio)[1] do %>
                        <span class="mt-2 d-block d-md-none"><strong>Brand</strong></span>
                        <%= approved_alternative.brand.to_s %>
                      <% end %>
                    </div>
                    <div class="col-6 col-md-3">
                      <%= row.label :approved_alternative_id, class: 'mb-0', for: /id="([a-z\d_]*)"/.match(radio)[1] do %>
                        <span class="mt-2 d-block d-md-none"><strong>Category</strong></span>
                        <%= approved_alternative.category.name %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          <div class="card-footer text-left">
            <%= link_to_remove_association row, {class: 'dynamic btn btn-danger', wrapper_class: 'option-wrapper'} do %>
              Skip
            <% end %>
          </div>
        </div>
      <% end %>

      <%= f.submit(class: 'btn btn-warning btn-block') %>
    <% end %>
  <% end %>

</div>