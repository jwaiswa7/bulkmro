<div class="col-lg-12 mb-12">


  <%= form_tag create_pending_products_overseers_inquiry_import_path do %>


    <div class="card">
      <div class="card-body">

        <% @failed_products.each do |product, index| %>
          <div class="row">

            <%= simple_fields_for "products[#{product["sku"]}]", product do |p| %>

              <div class="form-group col-md-6">
                <%= p.label :name %><br>
                <%= p.text_field :name, class: 'form-control' %>
              </div>
              <div class="form-group col-md-6">
                <%= p.label :sku %><br>
                <%= p.text_field :sku, class: 'form-control' %>
              </div>
              <div class="form-group col-md-6">
                <%= p.association :brand, include_blank: 'Select a brand' %>
              </div>
              <div class="form-group col-md-6">
                <%= p.association :category, include_blank: 'Select a category', collection: Category.leaves, label_method: :to_s %>
              </div>
            <% end %>
          </div>

        <% end %>
        <div class="actions">

          <%= submit_tag 'Submit', :class => 'btn btn-success btn-block' %>
        </div>

      </div>
    </div>
  <% end %>

</div>