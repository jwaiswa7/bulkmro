<div class="col-lg-12 mb-12">
  <%= simple_form_for(@excel_import, url: create_failed_skus_overseers_inquiry_import_path, html: {}) do |f| %>

    <% if f.object.errors.any? %>
      <% f.object.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    <% end %>
    <%= f.simple_fields_for :rows do |row| %>
      <% next if (row.object.inquiry_product.present? && row.object.inquiry_product.persisted?) || row.object.marked_for_destruction? %>

      <div class="wrapper-class">
        <%= row.hidden_field :id %>
        <%= row.simple_fields_for :inquiry_product do |inquiry_product, index| %>
          <%= inquiry_product.hidden_field :id %>
          <%= inquiry_product.hidden_field :inquiry_id %>
          <div class="row">
            <div class="col-md-10">
              <%= inquiry_product.simple_fields_for :product do |product| %>
                <div class="row">
                  <div class="col-md-1">
                    <input type="radio" name="inquiry_import[product][<%= row.object.id %>][id]" checked value="">
                  </div>
                  <%= product.hidden_field :inquiry_import_row_id %>
                  <%= product.input :name %>
                  <%= product.input :sku %>
                  <%= product.association :brand %>
                  <div class="col-md-2">
                    <%= product.association :category, collection: Category.leaves %>
                  </div>
                </div>
              <% end %>


              <%= inquiry_product.nested_fields_for :alternate do |alternate| %>
                <div class="row">
                  <div class="col-md-1">
                    <input type="radio" name="inquiry_import[product][<%= row.object.id %>][id]" value="<%= alternate.object.id %>">
                  </div>
                  <%= alternate.input :name, disabled: true %>
                  <%= alternate.input :sku, disabled: true %>
                  <%= alternate.association :brand, disabled: true %>
                  <div class="col-md-2">
                    <%= alternate.association :category, collection: Category.leaves, disabled: true %>
                  </div>
                </div>
              <% end %>


            </div>
            <div class="col-md-2">
              <%= inquiry_product.input :quantity %>
            </div>
          </div>
        <% end %>

        <div class="col-md-1 form-group">
          <%= link_to_remove_association row, {class: 'dynamic btn btn-danger', wrapper_class: 'wrapper-class'} do %>
            Skip
          <% end %>
        </div>
      </div>
    <% end %>
    <%= f.submit(class: 'btn btn-success btn-block') %>
  <% end %>

</div>