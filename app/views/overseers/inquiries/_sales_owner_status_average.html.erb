<a class="btn btn-light text-left btn-lg btn-block mt-3 mt-lg-4" type="button" data-toggle="collapse" data-target="#summary">
  Summary
</a>
<div id="summary" class="collapse show">
  <div class="mt-2 form-row d-flex flex-row align-content-stretch">

    <% @status_average.each do |avg| %>
      <div class="col-4 col-md-3 col-lg-3 col-xl-2 d-flex flex-row align-content-stretch">
        <div class="summary_box card w-100 rim rim-bottom border-red" href="#">
          <a class="summary_box card w-100  rim rim-bottom" href="#">
            <div class="card-body px-3 pt-3 pb-3">
              <p class="mb-1 text-small text-uppercase text-red">
              <div class="text-center d-flex flex-column h-100">
                <strong><%= avg[:status].titleize %>(Minutes)</strong><br>
                <strong><%= avg[:value] %></strong>
              </div>
              </p>
            </div>
          </a>
        </div>
      </div>
    <% end %>

  </div>
</div>

