<div class="modal-dialog modal-large">
  <div class="modal-content " >
    <div class="modal-header">
      <h5 class="modal-title">Search Supplier</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

    <%= hidden_field_tag :product_ids %>
    <%= simple_form_for([:overseers, @inquiry], :url => search_suppliers_overseers_inquiry_path, :html => {:class => 'needs-validation p-3', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
<!--      <div class="form-row">-->
<!--        <div class="col-12 col-md-3">-->
          <%#= f.association :brands, collection: nil, input_html: {class: 'select2-ajax inquiry_id', :'data-source' => autocomplete_overseers_brands_path}, include_blank: 'Type to Search' %>
<!--        </div>-->
<!--      </div>-->
    <% end %>
    <div class="form-row">
      <div class="col-12 col-md-3">
        <div class="d-flex">
            <span class="flex-fill">
              <%=  %>
            </span>
        </div>
      </div>
    </div>

    <div class="row">
      <% content_for :ajax_url, flush: true do %><%= overseers_suppliers_path %>
      <% end %>
      <div class="col-12">
        <% content_for :header_row do %>
          <th class="no-sort all"></th>
          <th class="no-sort all" data-name="name">Name</th>
          <th class="no-sort all" data-name="account_id">Account</th>
          <th class="no-sort all" data-name="nature_of_business">Supplier Type</th>
          <th class="no-sort desktop">Default Billing Address</th>
          <th class="no-sort desktop">Contact</th>
          <th class="no-sort all">Rating</th>
          <th class="sort desktop text-right" data-name="purchase_orders_count">No. of POs</th>
          <th class="sort desktop text-right" data-name="supplied_brands_count">No. of Brands</th>
          <th class="sort desktop text-right" data-name="supplied_products_count">No. of Products</th>
          <th class="no-sort desktop" data-name="brand_names">Brands</th>
          <th class="no-sort desktop" data-name="brand_names">Created By</th>
          <th class="desktop text-right" data-name="created_at">Created</th>
        <% end %>
        <%= render 'shared/layouts/internal_datatable', entity: nil, children: 'suppliers' %>
      </div>

    </div>

  </div>
</div>
