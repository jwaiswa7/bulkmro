<div class="col-lg-12">
  <%= render layout: 'overseers/inquiries/tabs_layout' do %>
    <%= simple_form_for([:overseers, @inquiry, @sales_quote], :html => {}) do |f| %>
      <%= f.hidden_field :inquiry_id %>
      <%= f.hidden_field :parent_id %>

      <%= render 'shared/snippets/form_errors', f: f %>

      <div class="card">
        <div class="card-header d-block d-md-flex flex-row">
          <div class="flex-fill">
            <strong>Total Selling Price (Excl. tax)</strong><br>
            <span data-v-html="calculated_total"><%= f.object.calculated_total %></span>
          </div>
          <div class="flex-fill mt-2 mt-md-0">
            <strong>Total Selling Price (Incl. tax)</strong><br>
            <span data-v-html="calculated_total_with_tax"><%= f.object.calculated_total_with_tax %></span>
          </div>
          <div class="flex-fill mt-2 mt-md-0">
            <strong>Total Tax</strong><br>
            <span data-v-html="calculated_total_tax"><%= f.object.calculated_total_tax %></span>
          </div>
          <div class="flex-fill mt-2 mt-md-0">
            <strong>Total Margin</strong><br>
            <span data-v-html="calculated_total_margin"><%= f.object.calculated_total_margin %></span>
          </div>
          <div class="flex-fill mt-2 mt-md-0">
            <strong>Total Freight Cost</strong><br>
            <span data-v-html="calculated_freight_cost_total"><%= f.object.calculated_freight_cost_total %></span>
          </div>
        </div>

        <div class="card-body">
          <div class="form-row">
            <%= f.simple_fields_for :inquiry_currency do |inquiry_currency| %>
              <div class="col-md-6">
                <%= inquiry_currency.association :currency, collection: Currency.all.map {|currency| [currency.to_s, currency.id, {'data-conversion-rate' => currency.conversion_rate}]}, include_blank: false, input_html: {"data-v-model": "", "data-v-on:change": "dropdownChanged"} %>
              </div>
              <div class="col-md-6">
                <%= inquiry_currency.input :conversion_rate, input_html: {"data-v-model": "", } %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <% f.object.rows.group_by(&:inquiry_product).each do |inquiry_product, rows| %>
        <div class="card mt-3">
          <div class="card-body accordion" id="ac-<%= inquiry_product.id %>">
            <h6 class="text-uppercase">
              <span class="lead text-black-50 text-small mt-1 mr-1">#<%= inquiry_product.sr_no %></span>
              <strong><%= inquiry_product.product.sku %> - <%= inquiry_product.bp_catalog_name? ? inquiry_product.bp_catalog_name : inquiry_product.product.name %></strong>
              <%= inquiry_product.bp_catalog_sku? ? '(' + inquiry_product.bp_catalog_sku + ')' : '' %>
              <span class="lead text-black-50 text-small mt-1 mr-1 d-block"><%= inquiry_product.product.brand %> <%= inquiry_product.product.sku? ? '(' + inquiry_product.product.sku + ')' : '' %></span>
            </h6>

            <%= f.simple_fields_for :rows, rows.sort_by(&:unit_cost_price), wrapper_tag: :div do |row| %>
              <%= row.hidden_field :inquiry_product_id %>
              <%= row.hidden_field :sales_quote_id %>
              <%= row.hidden_field :id %>

              <% if f.object.rows.first != row.object.product %>
                <hr class="my-3">
              <% end %>
              <div class="form-row simple-row" data-index="<%= row.index %>">
                <%= row.hidden_field :inquiry_product_supplier_id, "data-bind": "" %>
                <div class="col-12">
                  <div class="d-flex flex-row">
                    <div class="custom-control custom-radio align-self-center mr-2">
                      <%= radio = radio_button_tag ['[sales_quote][selected_suppliers]', row.object.inquiry_product.id].join, row.object.inquiry_product_supplier.id, (f.object.persisted? && row.object.persisted?) || (rows.select {|r| r.new_record?}.size == rows.size && rows[-1] == row.object), "data-bind": "select_supplier_#{row.object.inquiry_product.id}", :class => 'custom-control-input' %>
                      <%= row.label '', class: 'custom-control-label', for: /id="([a-z\d_]*)"/.match(radio)[1] do %><%= '' %>
                      <% end %>
                    </div>
                    <div class="flex-grow-1">
                      <div class="" data-toggle="collapse" data-target="#c-<%= row.object.inquiry_product_supplier_id %>">
                        <%= row.label '', for: /id="([a-z\d_]*)"/.match(radio)[1], :class => 'd-block' do %>
                          <h6 class="text-black-50 mb-1 text-uppercase">
                            <%= row.object.inquiry_product_supplier %>
                          </h6>
                          <div class="row">
                            <div class="col-12 d-block d-md-flex flex-row">
                              <div class="flex-fill">
                                <strong>Unit Cost</strong><br>
                                <span data-bind-html="unit_cost_price"><%= row.object.unit_cost_price %></span>
                              </div>
                              <div class="flex-fill mt-2 mt-md-0">
                                <strong>Unit Cost with Freight</strong><br>
                                <span data-bind-html="unit_cost_price_with_unit_freight_cost"><%= row.object.unit_cost_price_with_unit_freight_cost %></span>
                              </div>
                              <div class="flex-fill mt-2 mt-md-0">
                                <strong>Total Selling Price</strong><br>
                                <span data-bind-html="total_selling_price"><%= row.object.total_selling_price %></span>
                              </div>
                              <div class="flex-fill mt-2 mt-md-0">
                                <strong>Total Selling Price with Tax</strong><br>
                                <span data-bind-html="total_selling_price_with_tax"><%= row.object.total_selling_price_with_tax %></span>
                              </div>
                              <div class="flex-fill mt-2 mt-md-0">
                                <strong>Unit Selling Price (in $)</strong><br>
                                <span data-bind-html="converted_unit_selling_price"><%= row.object.converted_unit_selling_price %></span>
                              </div>
                            </div>
                          </div>
                        <% end %>
                      </div>
                      <div id="c-<%= row.object.inquiry_product_supplier_id %>" class="collapse <%= (f.object.persisted? && row.object.persisted?) || (rows.select {|r| r.new_record?}.size == rows.size && rows[-1] == row.object) ? 'show' : '' %>" data-parent="#ac-<%= inquiry_product.id %>">
                        <div class="form-row mt-2">
                          <div class="col-md-1 col-4"><%= row.input :quantity, input_html: {"data-bind": ""} %></div>
                          <div class="col-md-1 col-4"><%= row.input :margin_percentage, label: 'Margin', input_html: {min: 0, max: 99.99, "data-bind": ""} %></div>
                          <div class="col-md-2 col-4"><%= row.input :unit_selling_price, label: 'USP', input_html: {min: 0, "data-bind": ""} %></div>
                          <div class="col-md-1 col-6"><%= row.input :unit_freight_cost, input_html: {"data-bind": "", min: 0}, label: 'UFC' %></div>
                          <div class="col-md-2 col-6"><%= row.input :freight_cost_subtotal, input_html: {"data-bind": "", min: 0}, label: 'Total Freight' %></div>

                          <div class="col-md-3"><%= row.association :tax_code, collection: selected_option_or_nil(row, :tax_code), input_html: {:'data-source' => autocomplete_overseers_tax_codes_path, "data-bind": ""} %></div>
                          <%= row.hidden_field :unit_cost_price, "data-bind": "", disabled: true %>
                          <%= row.hidden_field :unit_cost_price_with_unit_freight_cost, "data-bind": "", disabled: true %>
                          <%= row.hidden_field :total_selling_price, "data-bind": "", disabled: true %>
                          <%= row.hidden_field :total_selling_price_with_tax, "data-bind": "", disabled: true %>
                          <%= row.hidden_field :tax_percentage, "data-bind": "", disabled: true %>
                          <div class="col-md-2"><%= row.association :lead_time_option %></div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <div class="card mt-3">
        <div class="card-header d-block d-md-flex flex-row">
          <div class="flex-fill">
            <strong>Total Selling Price (Excl. tax)</strong><br>
            <span data-v-html="calculated_total"><%= f.object.calculated_total %></span>
          </div>
          <div class="flex-fill mt-2 mt-md-0">
            <strong>Total Selling Price (Incl. tax)</strong><br>
            <span data-v-html="calculated_total_with_tax"><%= f.object.calculated_total_with_tax %></span>
          </div>
          <div class="flex-fill mt-2 mt-md-0">
            <strong>Total Tax</strong><br>
            <span data-v-html="calculated_total_tax"><%= f.object.calculated_total_tax %></span>
          </div>
          <div class="flex-fill mt-2 mt-md-0">
            <strong>Total Margin</strong><br>
            <span data-v-html="calculated_total_margin"><%= f.object.calculated_total_margin %></span>
          </div>
          <div class="flex-fill mt-2 mt-md-0">
            <strong>Total Freight Cost</strong><br>
            <span data-v-html="calculated_freight_cost_total"><%= f.object.calculated_freight_cost_total %></span>
          </div>
        </div>
        <div class="card-body">
          <div class="form-row">
            <div class="col-6">
              <%= button_tag(type: "submit", name: "save", class: "btn btn-warning btn-block") do %>
                <i class="fal fa-pen mr-1"></i> Save as Draft
              <% end %>
            </div>
            <div class="col-6">
              <%= button_tag(type: "submit", name: "save_and_send", class: "btn btn-success btn-block") do %>
                <i class="fal fa-paper-plane mr-1"></i> Save and Send
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>