<div class="col-12">
  <%= render layout: 'overseers/inquiries/tabs_layout' do %>
    <%= simple_form_for([:overseers, @inquiry, @sales_quote], :html => {:class => 'needs-validation mt-3', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
      <%= f.hidden_field :inquiry_id %>
      <%= f.hidden_field :parent_id %>

      <% if f.object.errors.any? %>
        <% f.object.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      <% end %>
      <%= render 'overseers/inquiries/sales_quotes/show_summary', sales_quote: f.object %>
      <div class="card-footer">
        <div class="form-row">
          <div class="col-6">
            <%= button_tag(type: "submit", name: "edit", class: "btn btn-warning btn-block") do %>
              <i class="fal fa-pen mr-1"></i> Edit
            <% end %>
          </div>
          <div class="col-6">
            <%= button_tag(type: "submit", name: "update_sent_at_field", class: "btn btn-success btn-block") do %>
              <i class="far fa-check mr-1"></i> Save and Confirm
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
