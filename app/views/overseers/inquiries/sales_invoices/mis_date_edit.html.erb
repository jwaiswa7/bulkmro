<div class="col-12">
  <%= render layout: 'overseers/inquiries/tabs_layout' do %>
    <%= simple_form_for([:overseers, @inquiry, @sales_invoice], :html => {:class => 'needs-validation mt-3', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>

      <%= render 'shared/snippets/form_errors', f: f %>

      <div class="card">
        <div class="card-header">
          <div class="form-row">
            <div class="col-8 col-md-3">
              <strong>Invoice Number</strong><br>
              <span data-v-html="calculated_total"><%= f.object.invoice_number %></span>
            </div>

            <div class="col-12 col-md-4">
              <%= f.input :mis_date, as: :string, input_html: {:'data-toggle' => 'datepicker'} %>
            </div>

          </div>
        </div>
      </div>
      </div>

      </div>
      <%= button_tag(type: "submit", name: "save", class: "btn btn-warning btn-block") do %>
        <i class="fal fa-pen mr-1"></i> Save as Draft
      <% end %>
    <% end %>
  <% end %>