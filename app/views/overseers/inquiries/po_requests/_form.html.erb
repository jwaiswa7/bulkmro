<%= provide :container_fluid, true %>
<div class="col-lg-12">
  <div class="page-header">
    <h2><%= action_name.capitalize %> Stock PO Request for Stock Inquiry <%= format_id(@po_request.inquiry.inquiry_number) %>
      &nbsp;<%#= status_badge(@po_request.status) %></h2>
    <p>This will <em>'<%= submit_text(@po_request).downcase %>'</em> and log it under
      <strong><%= current_overseer.full_name %></strong>.</p>
  </div>

  <%= simple_form_for([:overseers, @inquiry, @po_request], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= render 'shared/snippets/form_errors', f: f %>

    <div class="card mb-2">
      <div class="card-body">
        <%= render 'shared/snippets/form_errors', f: f %>
        <%= f.hidden_field :id %>
        <%= f.hidden_field :inquiry, as: :string %>

        <div class="form-row">
          <div class="form-group col-6">
            <strong class="d-block">Inquiry</strong>
            <%= link_to overseers_inquiry_path(f.object.inquiry) do %>
              <%= f.object.inquiry %>
            <% end %>
          </div>
          <br>
          <div class="form-group col-6">
            <strong class="d-block">Company Name</strong>
            <%= link_to overseers_company_path(f.object.inquiry.company) do %>
              <%= f.object.inquiry.company %>
            <% end %>
          </div>
          <br>
          <div class="col-md-6">
            <%= f.association :requested_by, as: :select, :include_blank => true %>
          </div>
          <div class="col-md-6">
            <%= f.association :approved_by, as: :select, :include_blank => true, label: "Request Approved By" %>
          </div>
          <div class="col-md-9">
            <%= f.input :reason_to_stock, :include_blank => true, label: "Reason to stock", required: true %>
          </div>
          <div class="col-md-3">
            <%= f.input :estimated_date_to_unstock, as: :string, input_html: {:'data-toggle' => 'datepicker', :class => 'supplier-committed-date'}, label: "Estimated date to Unstock", required: true%>
          </div>
        </div>
      </div>
    </div>

    <div class="card col-12">
      <div class="card-body">
        <div class="simple-row">
          <%= f.hidden_field :id %>
          <div class="col-12 col-md-4">
            <%= f.association :supplier, label_method: :to_s, include_blank: "Type Supplier", input_html: {class: 'select2-ajax select2-wrap-text', :'data-source' => autocomplete_overseers_suppliers_path, :'data-parsley-errors-messages-disabled' => '', :'data-parsely-no-valid-feedback' => ''}, label: "Supplier" %>
          </div>
          <%#= link_to_remove_association po_request, {class: 'btn btn-danger align-self-center', wrapper_class: 'simple-row', "data-v": "", "data-v-on:click": "dropRow(_index_)"} do %>
          <!--                  Remove Supplier-->
          <%# end %>


          <%= render 'overseers/inquiries/po_requests/rows_form', f: f, product_path: autocomplete_overseers_products_path%>

          <%= f.add_nested_fields_link :rows, class: 'btn btn-success btn-outline-success btn-block mb-2 mb-md-0', role: 'button' do %>
            <i class="fal fa-plus-circle mr-1"></i>Add a product
          <% end %>
        </div>
      </div>
    </div>

    <% if action_name.capitalize == "New" %>
      <%= button_tag(type: "submit", class: "btn btn-success btn-block") do %>
        <i class="fal fa-plus-circle"></i> Create PO Request
      <% end %>
    <% else %>
      <%= button_tag(type: "submit", class: "btn btn-warning btn-block mb-2") do %>
        <i class="fal fa-pen"></i> Update PO Request
      <% end %>
    <% end %>
  <% end %>

  <% if @po_request.comments.persisted.size > 0 %>
    <div class="card">
      <div class="card-body">
        <div class="flex-fill">
          <h6 class="text-uppercase text-black-50 mb-1">Comments History</h6>
        </div>
        <div class="chats mb-3">
          <% @po_request.comments.each do |comment| %>
            <% if comment.persisted? %>
              <%= format_comment(comment) %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
