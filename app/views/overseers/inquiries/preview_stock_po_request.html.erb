<div class="col-lg-12">

  <div class="page-header">
    <h2>PO Requests for Stock</h2>
    <p>This will <em>Create purchase order requests</em> and log it under
      <strong><%= current_overseer.full_name %></strong>.</p>
  </div>

  <%=  simple_form_for(@inquiry, url: create_purchase_orders_requests_overseers_inquiries_path, method: :POST, :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= render 'shared/snippets/form_errors', f: f %>
    <%= f.hidden_field :id %>
    <div class="card mb-2">
      <div class="card-body">

        <h6 class="text-uppercase text-black-50 mb-1">Details</h6>
        <div class="form-row">

          <% if @inquiry.present? %>
            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Inquiry #</strong>
              <%= @inquiry.to_s %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
    <%= render 'overseers/po_requests/rows_preview', f: f, order: @inquiry %>
  <% end %>
</div>