<a class="card text-black-50 shipment" target="_blank" href="/overseers/inquiries/<%= shipment.inquiry.to_param %>/sales_shipments/<%= shipment.to_param %>.pdf">
  <div class="card-header p-1 text-center text-black">
    <strong>Sales Shipment</strong>
  </div>
  <div class="card-body p-1 text-center text-black">
    <div>
      <%= status_badge(shipment.status) %>
    </div>
    <hr class="my-1">
    <div>
      #<%= shipment.shipment_number %>
    </div>
    <hr class="my-1">
    <div>
      <strong><%= shipment.rows.size %></strong> line item(s)
    </div>
    <hr class="my-1">
    <div>
      <%= format_date(shipment.created_at) %>
    </div>
  </div>
</a>