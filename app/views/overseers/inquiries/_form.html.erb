<%= simple_form_for([:overseers, @inquiry], :html => {:class => 'needs-validation mt-3', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
  <%= f.hidden_field :company_id %>

  <%= render 'shared/snippets/form_errors', f: f %>

  <div class="card">
    <div class="card-body">
      <div>
        <h6 class="text-uppercase text-black-50 mb-1">Opportunity Details</h6>

        <%= f.input :company, as: :string, disabled: true %>
        <div class="form-row">
          <div class="col-4">
            <%= f.association :contact, :wrapper => :custom_multi_select, collection: f.object.company.contacts, include_blank: "Select a contact", input_html: { class: 'select2-single'}  %>
          </div>
          <div class="col-8">
            <%= f.input :subject %>
          </div>
        </div>

        <div class="form-row">
          <div class="col-md-8">
            <div class="form-row">
              <div class="col-6 col-md-3">
                <%= f.input :status, as: :select, :wrapper => :custom_multi_select, collection: enum_to_collection(Inquiry.statuses) %>
                <!-- TODO commercial_status need to be added -->
              </div>
              <div class="col-6 col-md-3">
                <%= f.input :opportunity_type, :wrapper => :custom_multi_select, as: :select, collection: enum_to_collection(Inquiry.opportunity_types) %>
              </div>
              <div class="col-6 col-md-3">
                <%= f.input :opportunity_source, :wrapper => :custom_multi_select, as: :select, collection: enum_to_collection(Inquiry.opportunity_sources) %>
              </div>
              <div class="col-6 col-md-3">
                <%= f.input :is_sez, as: :select, :wrapper => :custom_multi_select, label: 'Is SEZ' %>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-row">
              <div class="col-6 col-md-8">
                <%= f.input :potential_amount %>
              </div>
              <div class="col-6 col-md-4">
                <%= f.input :gross_profit_percentage, label: 'Gross profit %' %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="mt-3 card-alternative ">
        <h6 class="text-uppercase text-black-50 mb-1">Billing / Shipping Details</h6>
        <div class="form-row">
          <div class="col-12 col-md-6">
            <%= f.association :bill_from, :wrapper => :custom_multi_select, label_method: :to_s, include_blank: "Select a bill from" %>
          </div>
          <div class="col-12 col-md-6">
            <%= f.association :ship_from, :wrapper => :custom_multi_select, label_method: :to_s, include_blank: "Select a ship from" %>
          </div>
        </div>
        <div class="form-row">
          <div class="col-12 col-md-6">
            <%= f.association :billing_address, :wrapper => :custom_multi_select, collection: @inquiry.company.addresses.includes(:state), label_method: :to_s, include_blank: "Select a billing address" %>
          </div>
          <div class="col-12 col-md-6">
            <%= f.association :shipping_address, :wrapper => :custom_multi_select, collection: @inquiry.company.addresses.includes(:state), label_method: :to_s, include_blank: "Select a shipping address" %>
          </div>
        </div>
      </div>

      <div class="mt-3">
        <h6 class="text-uppercase text-black-50 mb-1">Owner Details</h6>
        <div class="form-row">
          <div class="col-6 col-md-3">
            <%= f.association :inside_sales_owner, :wrapper => :custom_multi_select, include_blank: 'Select an Inside Sales Owner', input_html: { class: 'select2-single'} %>
          </div>
          <div class="col-6 col-md-3">
            <%= f.association :outside_sales_owner, :wrapper => :custom_multi_select, include_blank: 'Select an Outside Sales Owner', input_html: { class: 'select2-single'}  %>
          </div>
          <div class="col-12 col-md-3">
            <%= f.association :sales_manager, :wrapper => :custom_multi_select, include_blank: 'Select a Sales Manager', input_html: { class: 'select2-single'}  %>
          </div>
          <div class="col-12 col-md-3">
            <%= f.input :quote_category, :wrapper => :custom_multi_select, as: :select, collection: enum_to_collection(Inquiry.quote_categories, all_caps: true) %>
          </div>
        </div>
      </div>

      <div class="card-alternative mt-3">
        <h6 class="text-uppercase text-black-50 mb-1">Important Dates</h6>
        <div class="form-row">
          <div class="col-12 col-md-6">
            <% if f.object.created_at %>
              <div class="form-group">
                <label class="form-control-label d-block">Created at</label>
                <%= format_date(f.object.created_at) %>
              </div>
            <% end %>
          </div>
          <div class="col-12 col-md-6">
            <% if f.object.updated_at %>
              <div class="form-group">
                <label class="form-control-label d-block">Updated at</label>
                <%= format_date(f.object.updated_at) %>
              </div>
            <% end %>
          </div>
          <div class="col-12 col-md-4">
            <%= f.input :quotation_date, as: :string, input_html: {:'data-toggle' => 'datepicker'} %>
          </div>
          <div class="col-12 col-md-4">
            <%= f.input :expected_closing_date, as: :string, input_html: {:'data-toggle' => 'datepicker'} %>
          </div>
          <div class="col-12 col-md-4">
            <%= f.input :quotation_followup_date, as: :string, input_html: {:'data-toggle' => 'datepicker'} %>
          </div>
        </div>
      </div>

      <div class="mt-3">
        <h6 class="text-uppercase text-black-50 mb-1">Order Details</h6>
        <div class="form-row">
          <div class="col-12 col-md-6">
            <%= f.input :customer_po_number, label: 'Customer PO number' %>
          </div>
          <div class="col-12 col-md-6">
            <%= f.input :customer_po_sheet, wrapper: :custom_file, label: 'Customer PO sheet', :class => 'flex-grow-1' %>
            <% if f.object.customer_po_sheet.attached? %>
              <%= link_to url_for(f.object.customer_po_sheet), target: :_blank, :class => 'btn btn-dark' do %>
                <i class="fal fa-download"></i>
              <% end %>
            <% end %>
          </div>
          <div class="col-12 col-md-6">
            <%= f.input :copy_of_email, as: :file, wrapper: :custom_file, required: false, label: 'Email attachment' %>
            <% if f.object.copy_of_email.attached? %>
              <%= link_to url_for(f.object.copy_of_email), target: :_blank, :class => 'btn btn-dark' do %>
                <i class="fal fa-download"></i>
              <% end %>
            <% end %>
          </div>
          <div class="col-12 col-md-6">
            <%= f.input :suppler_quote, wrapper: :custom_file, label: 'Supplier quote' %>
            <% if f.object.suppler_quote.attached? %>
              <%= link_to url_for(f.object.suppler_quote), target: :_blank, :class => 'btn btn-dark' do %>
                <i class="fal fa-download"></i>
              <% end %>
            <% end %>
          </div>
          <div class="col-12 col-md-6">
            <%= f.input :final_supplier_quote, wrapper: :custom_file, label: 'Final supplier quote' %>
            <% if f.object.final_supplier_quote.attached? %>
              <%= link_to url_for(f.object.final_supplier_quote), target: :_blank, :class => 'btn btn-dark' do %>
                <i class="fal fa-download"></i>
              <% end %>
            <% end %>
          </div>
          <div class="col-12 col-md-6">
            <%= f.input :calculation_sheet, wrapper: :custom_file, label: 'Calculation sheet' %>
            <% if f.object.calculation_sheet.attached? %>
              <%= link_to url_for(f.object.calculation_sheet), target: :_blank, :class => 'btn btn-dark' do %>
                <i class="fal fa-download"></i>
              <% end %>
            <% end %>
          </div>
          <div class="col-12 col-md-4">
            <%= f.input :customer_order_date, as: :string, input_html: {:'data-toggle' => 'datepicker'} %>
          </div>
          <div class="col-12 col-md-4">
            <%= f.input :customer_committed_date, as: :string, input_html: {:'data-toggle' => 'datepicker'} %>
          </div>
          <div class="col-12 col-md-4">
            <%= f.input :procurement_date, as: :string, input_html: {:'data-toggle' => 'datepicker'} %>
          </div>
          <div class="col-4">
            <%= f.input :procurement_date, as: :string %>
          </div>
        </div>
      </div>

      <div class="mt-2 card-alternative">
        <h6 class="text-uppercase text-black-50 mb-1">Terms and Conditions</h6>
        <div class="form-row">
          <div class="col-12 col-md-4">
            <%= f.input :price_type, as: :select, :wrapper => :custom_multi_select, collection: enum_to_collection(Inquiry.price_types) %>
          </div>
          <div class="col-12 col-md-4">
            <%= f.association :payment_option, :wrapper => :custom_multi_select, include_blank: 'Select a Payment Option' %>
          </div>
          <div class="col-12 col-md-4">
            <%= f.input :packing_and_forwarding_option, as: :select, :wrapper => :custom_multi_select, collection: enum_to_collection(Inquiry.packing_and_forwarding_options) %>
          </div>
          <div class="col-12 col-md-4">
            <%= f.input :freight_option, as: :select, :wrapper => :custom_multi_select, collection: enum_to_collection(Inquiry.freight_options) %>
          </div>
          <div class="col-6 col-md-4">
            <%= f.input :freight_cost %>
          </div>
          <div class="col-6 col-md-4">
            <%= f.input :weight_in_kgs %>
          </div>
        </div>
        <%= f.input :commercial_terms_and_conditions %>
      </div>

      <div class="mt-3">
        <% if f.object.persisted? %>
          <h6 class="text-uppercase text-black-50 mb-1">Products</h6>
        <% end %>
        <%= f.nested_fields_for :inquiry_products, wrapper_tag: :div do |inquiry_product| %>
          <div class="form-row flex-row align-items-center">
            <%= inquiry_product.hidden_field :id %>
            <div class="col-2">
              <div class="d-flex flex-row">
                <div class="form-group align-self-center mr-2">
                  <% if inquiry_product.object.persisted? && inquiry_product.object.product.approved? %>
                    <a href="<%= overseers_product_comments_path(inquiry_product.object.product) %>" target="_blank" class="text-success" data-toggle="tooltip" title="Approved product
                  <% if inquiry_product.object.product.last_comment %>;  <%= inquiry_product.object.product.last_comment.message %>
                  <% end %>"><i class="far fa-comment-lines"></i></a>
                  <% elsif inquiry_product.object.persisted? && inquiry_product.object.product.rejected? %>
                    <a href="<%= overseers_product_comments_path(inquiry_product.object.product) %>" target="_blank" class="text-danger" data-toggle="tooltip" title="Rejected product
                  <% if inquiry_product.object.product.last_comment %>; <%= inquiry_product.object.product.last_comment.message %>
                  <% end %>"><i class="far fa-comment-lines"></i></a>
                  <% elsif inquiry_product.object.persisted? %>
                    <a href="<%= overseers_product_comments_path(inquiry_product.object.product) %>" target="_blank" class="text-warning" data-toggle="tooltip" title="Discuss product
                  <% if inquiry_product.object.product.last_comment %>;  <%= inquiry_product.object.product.last_comment.message %>
                  <% end %>"><i class="far fa-comment-lines"></i></a>
                  <% else %>
              <span class="text-success" data-toggle="tooltip" title="Approved product">
                <i class="far fa-check"></i>
              </span>
                  <% end %>
                </div>
                <div class="flex-grow-1">
                  <%= inquiry_product.input :sr_no, label: false, placeholder: placeholder_for(inquiry_product, :sr_no), input_html: {:'data-parsley-errors-messages-disabled' => '', :'data-parsely-no-valid-feedback' => ''} %>
                </div>

              </div>
            </div>
            <div class="col-4">
              <%= inquiry_product.association :product, collection: [inquiry_product.object.product], label_method: :to_s, include_blank: "Type SKU number, name, or brand", input_html: {class: 'select2-ajax', :'data-source' => autocomplete_overseers_products_path, :'data-parsley-errors-messages-disabled' => '', :'data-parsely-no-valid-feedback' => ''}, label: false %>
            </div>
            <div class="col-2">
              <%= inquiry_product.input :bp_catalog_name, as: :string, :label => false, placeholder: placeholder_for(inquiry_product, :bp_catalog_name) %>
            </div>
            <div class="col-2">
              <%= inquiry_product.input :bp_catalog_sku, as: :string, :label => false, placeholder: placeholder_for(inquiry_product, :bp_catalog_sku) %>
            </div>
            <div class="col-2">
              <div class="d-flex flex-row align-items-center">
                <div>
                  <%= inquiry_product.input :quantity, :label => false, placeholder: placeholder_for(inquiry_product, :quantity), input_html: {:'data-parsley-errors-messages-disabled' => '', :'data-parsely-no-valid-feedback' => ''} %>
                </div>
                <%= inquiry_product.remove_nested_fields_link do %>
                  <div class="form-group align-self-center flex-grow-1 ml-2">
                    <i class="far fa-times text-danger"></i>
                  </div>
                <% end if policy(inquiry_product.object).destroy? %>
              </div>
            </div>
          </div>
        <% end %>
        <% if !f.object.persisted? %>
          <%#= f.add_nested_fields_link :inquiry_products, 'Add a product', class: 'btn btn-outline-success btn-block' %>
        <% else %>
          <div class="form-row">
            <div class="col-md-4">
              <a href="<%= new_excel_import_overseers_inquiry_imports_path(@inquiry) %>" class="btn btn-success btn-outline-success btn-block mb-2 mb-md-0"><i class="fal fa-file-excel mr-1"></i>Add
                products using excel</a>
            </div>
            <div class="col-md-4">
              <a href="<%= new_list_import_overseers_inquiry_imports_path(@inquiry) %>" class="btn btn-outline-success btn-block mb-2 mb-md-0"><i class="fal fa-clipboard-list mr-1"></i>Add
                products through list</a>
            </div>
            <div class="col-md-4">
              <%= f.add_nested_fields_link :inquiry_products, class: 'btn btn-outline-success btn-block mb-2 mb-md-0' do %>
                <i class="fal fa-plus-circle mr-1"></i>Add a product
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="card-footer">
      <% if action_name.capitalize == "New" %>
        <%= button_tag(type: "submit", class: "btn btn-success btn-block") do %>
          <i class="fal fa-plus-circle"></i> <%= submit_text(@inquiry) %>
        <% end %>
      <% else %>
        <%= button_tag(type: "submit", class: "btn btn-warning btn-block") do %>
          <i class="fal fa-pen"></i> <%= submit_text(@inquiry) %>
        <% end %>
      <% end %>

      <% if policy(@inquiry).new_email_message? %>
        <a href="<%= new_overseers_inquiry_email_message_path(@inquiry) %>" class="btn-block btn btn-dark"><i class="fal fa-envelope mr-1"></i>Send Acknowledgement</a>
      <% end %>
    </div>
  </div>
<% end %>