<%= simple_form_for(:kra_report, :url => kra_report_overseers_inquiries_path, :method => :get, :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
  <div class="card">
    <div class="card-body">
      <div class="mt-3">
        <div class="form-row">
          <div class="col">
            <%= f.input :date_range, as: :string, input_html: {:'data-toggle' => 'daterangepicker'}, required: true, label: 'Select Date Range' %>
          </div>

        </div>
        <div class="form-row">
          <div class="col text-center">
            <%= f.submit "get report", class: "btn btn-default btn-dark" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>


<%#= yield %>