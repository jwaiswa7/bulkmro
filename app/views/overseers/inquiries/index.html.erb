<% provide :container_fluid, true %>
<% provide :can_be_ajaxed, true %>
<% provide :wrap_whitespace, true %>

<div class="col-lg-12">
  <div class="form-row mt-3 mt-lg-4 d-flex flex-row align-content-stretch">
    <% Inquiry.statuses.each do |status, v| %>
      <div class="col-4 col-md-3 col-lg-2 col-xl-1 d-flex flex-row align-content-stretch">
        <div class="card w-100 mb-2 rim rim-bottom border-<%= status_helper_color(status) %>">
          <div class="card-body px-3 pt-3 pb-3">
            <div class="text-center d-flex flex-column h-100">
              <p class="mb-1 text-small"><strong><%= status %></strong></p>
              <h5 class="mb-0 mt-auto text-<%= status_helper_color(status) %>"><%= Inquiry.send(status).size %></h5>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% content_for :header_row do %>
  <th class="no-sort"></th>
  <th class="no-sort">Status</th>
  <th class="no-sort" data-name="inquiry_number">#</th>
  <th class="no-sort">Account</th>
  <th class="no-sort">Company</th>
  <th class="no-sort">Contact</th>
  <th class="no-sort">Inside Sales</th>
  <th class="no-sort">Outside Sales</th>
  <th class="no-sort">Total</th>
  <th class="no-sort" data-name="created_at">Created</th>
<% end %>

<div class="col-lg-12">
  <%= render layout: 'shared/layouts/datatable' do %>
  <% end %>
</div>