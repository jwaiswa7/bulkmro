<% provide :container_fluid, true %>
<% provide :can_be_ajaxed, true %>
<% provide :wrap_whitespace, true %>

<div class="col-lg-12">
  <div class="row mt-3 mt-lg-4">
    <% Inquiry.statuses.each do |status, v| %>
      <div class="col-md-2">
        <div class="card mb-3 rim rim-bottom border-success">
          <div class="card-body">
            <div class="text-center">
              <p class="text-uppercase text-black-50 mb-1"><strong><%= format_status_label(status) %></strong></p>
              <h3 class="mb-0"><%= Inquiry.send(status).size %></h3>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% content_for :header_row do %>
  <th class="no-sort"></th>
  <th class="no-sort">Status</th>
  <th class="no-sort" data-name="inquiry_number">#</th>
  <th class="no-sort">Account</th>
  <th class="no-sort">Company</th>
  <th class="no-sort">Contact</th>
  <th class="no-sort">Inside Sales</th>
  <th class="no-sort">Outside Sales</th>
  <th class="no-sort">Total</th>
  <th class="no-sort" data-name="created_at">Created</th>
<% end %>

<div class="col-lg-12">
  <%= render layout: 'shared/layouts/datatable' do %>
  <% end %>
</div>