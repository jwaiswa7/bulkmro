<div class="col-lg-12">
  <%= render 'shared/snippets/page_header', e: @acl_role %>

  <%= simple_form_for([:overseers, @acl_role], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= render 'shared/snippets/form_errors', f: f %>

    <div class="card">
      <div class="card-body">
        <div>
          <div class="form-row">
            <div class="col-4">
              <%= f.input :role_name %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="card-footer">
      <% if action_name.capitalize =="New" %>
        <%= button_tag(type:"submit", class:"btn btn-success btn-block") do %>
          <i class="fal fa-plus-circle"></i> <%= submit_text(@acl_role) %>
        <% end %>
      <% else %>
        <%= button_tag(type:"submit", class:"btn btn-warning btn-block") do %>
          <i class="fal fa-pen"></i> <%= submit_text(@acl_role) %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>