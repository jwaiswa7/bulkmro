<div class="col-lg-12">
  <div class="page-header">
    <h2><%= action_name.capitalize %> Overseer</h2>
    <p>This will <em>'<%= submit_text(@product).downcase %>'</em> and log it under <strong><%= current_overseer.full_name %></strong>.</p>
  </div>

  <%= simple_form_for([:overseers, @product], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <% if f.object.errors.any? %>
      <% f.object.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    <% end %>

    <%= f.input :name %>
    <%= f.input :sku %>
    <%= f.input :best_tax_code, disabled: true %>
    <%= f.association :measurement_unit %>
    <%= f.association :tax_code, label_method: :to_s, include_blank: "Type to search", input_html: { class: 'select2-ajax', :'data-source' => autocomplete_overseers_tax_codes_path } %>

    <div class="form-row">
      <div class="col-6">
        <%= f.association :brand, :wrapper => :custom_multi_select, include_blank: 'Select a brand' %>
      </div>
      <div class="col-6">
        <%= f.association :category, :wrapper => :custom_multi_select, include_blank: 'Select a category', collection: Category.leaves, label_method: :to_s %>
      </div>
    </div>

    <% if action_name.capitalize == "New" %>
      <%= button_tag(type: "submit", class: "btn btn-success btn-block") do %>
        <i class="fal fa-plus-circle"></i> <%= submit_text(@product) %>
      <% end %>
    <% else %>
      <%= button_tag(type: "submit", class: "btn btn-warning btn-block") do %>
        <i class="fal fa-pen"></i> <%= submit_text(@product) %>
      <% end %>
    <% end %>
  <% end %>
</div>
