<div class="col-lg-12">
  <div class="page-header">
    <h2><%= action_name.capitalize %> Product</h2>
    <p>This will <em>'<%= submit_text(@product).downcase %>'</em> and log it under
      <strong><%= current_overseer.full_name %></strong>.</p>
  </div>

  <%= simple_form_for([:overseers, @product], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= render 'shared/snippets/form_errors', f: f %>

    <div class="form-row">
      <div class="col-12">
        <%= f.input :name %>
      </div>
      <div class="col-6">
        <%= f.input :sku %>
      </div>
      <div class="col-6">
        <%= f.input :mpn, label: "Manufacturer Part Number" %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-6">
        <%= f.association :tax_code, collection: selected_option_or_nil(f,:tax_code), label_method: :to_s, include_blank: "Type to search", input_html: { class: 'select2-ajax', :'data-source' => autocomplete_overseers_tax_codes_path } %>
      </div>
      <div class="col-6">
        <%= f.input :best_tax_code, disabled: true %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-12 col-md-4">
        <%= f.association :measurement_unit, include_blank: false, input_html: { class: 'select2-single'} %>
      </div>
      <div class="col-6 col-md-4">
        <%= f.association :brand, collection: selected_option_or_nil(f,:brand), :wrapper => :custom_multi_select, include_blank: 'Select a brand' , input_html: { class: 'select2-ajax', :'data-source' => autocomplete_overseers_brands_path }%>
      </div>
      <div class="col-6 col-md-4">
        <%= f.association :category, collection: selected_option_or_nil(f,:category), :wrapper => :custom_multi_select, include_blank: 'Select a category', label_method: :to_s, input_html: { class: 'select2-ajax', :'data-source' => autocomplete_overseers_categories_path } %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-12 col-md-4">
        <%= f.input :is_service %>
      </div>

    </div>

    <% if action_name.capitalize == "New" %>
      <%= button_tag(type: "submit", class: "btn btn-success btn-block") do %>
        <i class="fal fa-plus-circle"></i> <%= submit_text(@product) %>
      <% end %>
    <% else %>
      <%= button_tag(type: "submit", class: "btn btn-warning btn-block") do %>
        <i class="fal fa-pen"></i> <%= submit_text(@product) %>
      <% end %>
    <% end %>
  <% end %>
</div>
