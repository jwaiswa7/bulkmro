<%= simple_form_for([:overseers, @product]) do |f| %>
  <% if f.object.errors.any? %>
    <% f.object.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  <% end %>

  <%= f.input :created_by, disabled: true %>
  <%= f.input :created_at, disabled: true %>
  <%= f.input :updated_by, disabled: true %>
  <%= f.input :updated_at, disabled: true %>

  <%= f.input :name %>
  <%= f.input :sku %>
  <%= f.association :brand, include_blank: 'Select a brand' %>
  <%= f.association :category, include_blank: 'Select a category', collection: Category.leaves, label_method: :to_s %>
  <%= f.input :best_tax_code, disabled: true %>
    <%= f.association :tax_code, collection: TaxCode.all.map { |tax_code| [tax_code.to_s, tax_code.id, { 'data-tax-rate' => tax_code.rate }] }, include_blank: 'Choose a Tax Code' %>
  <%= f.submit %>
<% end %>