<div class="col-lg-12 mb-12">

  <% @product.comments.persisted.each do |comment| %>
    <div><%= comment.message %> by <%= comment.created_by.full_name %> <% if comment.approval.present? %>and approved it wut<% end %></div>
  <% end %>

  <%= simple_form_for([:overseers, @comment]) do |f| %>

    <% if f.object.errors.any? %>
      <% f.object.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    <% end %>

    <%= f.input :message %>

    <%= f.submit 'Reply', name: 'reply' %>
    <%= f.submit 'Reply and Approve', name: 'approve' if policy(@product).approve? %>
    <%= f.submit 'Reply and Disapprove', name: 'disapprove' if policy(@product).disapprove?  %>
    <%= f.submit 'Reply and Reject', name: 'reject' if policy(@product).reject? %>
  <% end %>


</div>