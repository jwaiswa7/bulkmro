<% if @product.inquiry_products.first.try(:inquiry) %>
  <% content_for :heading_button do %>
    <%= link_to edit_overseers_inquiry_path(@product.inquiry_products.first.try(:inquiry)), target: '_blank', class: "d-sm-block btn btn-dark btn-rounded align-self-center btn-block-sm-down" do %>
      <i class="fal fa-external-link mr-1"></i> Check Inquiry
    <% end %>
  <% end %>
<% end %>


<% content_for :heading_byline do %>
  This will <em>'update/approve/reject <%= @product %>'</em> and log it under
  <strong><%= current_overseer.full_name %></strong>.
<% end %>

<%= render layout: 'shared/layouts/form' do %>
  <%= simple_form_for([:overseers, @new_comment], :html => {:class => 'card needs-validation mt-3', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <div class="card-body">
      <% if @comments.persisted.size > 0 %>
        <div class="chats mb-3">
          <% @comments.persisted.each do |comment| %>
            <div class="media chat-item">
              <div class="media-body">
                <div class="chat-item-title">
                  <span class="chat-item-author"><%= comment.created_by.full_name %></span>
                  <span><span class="mr-1"><strong><% if comment.approval.present? %><span class="badge badge-success">Approved</span><% end %>
                    <% if comment.rejection.present? %><span class="badge badge-danger">Rejected</span><% end %></strong></span><%= time_ago_in_words(comment.created_at) %>
                    ago</span>
                </div>
                <div class="chat-item-body">
                  <p><%= comment.message %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>

      <% if f.object.errors.any? %>
        <% f.object.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      <% end %>

      <%= f.input :message, required: true, :placeholder => 'Type message' %>

      <div class="flex-fill">
        <div class="row">
          <div class="col-lg-6">
            <%= f.submit 'Reply', name: 'reply', class: 'btn btn-dark' %>
            <%= f.submit 'Reply and Approve', name: 'approve', class: 'btn btn-success' if policy(@product).approve? %>
            <%= f.submit 'Reply and Reject', name: 'reject', class: 'btn btn-danger' if policy(@product).reject? %>
          </div>
          <div class="col-lg-6">

              <%= content_tag :div, class:'row' do %>
                <div class="col-lg-8">
                  <%= f.input :merge_product, :wrapper => :custom_multi_select, collection: Product.approved.all, label_method: :to_s, include_blank: "Type SKU number, name, or brand", input_html: {class: 'select2-ajax', :'data-source' => autocomplete_overseers_products_path}, label: false %>
                </div>
                <div class="col-lg-4">
                  <%= f.submit 'Merge Product', name: 'merge', class: 'btn btn-warning float-right' %>
                </div>
              <% end if policy(@product).merge? %>



          </div>
        </div>


      </div>
    </div>
  <% end %>
<% end %>
