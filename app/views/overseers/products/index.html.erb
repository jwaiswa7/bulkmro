<%= provide :container_fluid, true %>
<% provide :can_be_directly_exported, true if policy(:download).allowed? %>
<% provide :can_be_directly_exported_filtered_records, true %>
<% provide :can_be_directly_created, true %>
<% provide :can_be_ajaxed, true %>
<% provide :wrap_whitespace, true %>
<% provide :show_date_filter, true %>

<% content_for :heading_buttons do %>
  <a href="<%= new_overseers_product_import_path %>" class="btn btn-sm btn-block btn-success bmro-button" >
    Bulk upload
  </a>
<% end %>


<div class="col-lg-12 bmro-table-layout">
<% content_for :header_row do %>
  <th class="no-sort all" data-width="100px">Quick Actions</th>
  <th class="no-sort desktop text-left" width="220px" data-name="product_id">Name</th>
  <th class="no-sort all text-left" width="82px" data-name="product_id">SKU</th>
  <th class="no-sort desktop text-left" width="95px" data-name="brand_id">Brand</th>
  <th class="no-sort desktop text-left" width="120px">Category</th>
  <th class="no-sort desktop text-left" width="82px" data-name="product_id">MPN</th>
  <th class="sort desktop text-right" width="80px" data-name="total_pos">Total Purchase<br> Orders</th>
  <th class="sort desktop text-right" width="80px" data-name="total_quotes">Total Sales<br> Quotes</th>
  <th class="no-sort desktop text-right" width="33px" data-name="is_service"> Service</th>
  <th class="no-sort desktop text-left" width="65px">SAP</th>
  <th class="no-sort desktop text-right" width="33px" data-name="is_active"> Active</th>
  <th class="no-sort desktop text-left" width="88px">Available Qty</th>
  <th class="sort desktop text-left" width="75px" data-name="created_at">Created</th>
  <th class="no-sort all text-left" width="88px">Created By</th>
  <th class="no-sort desktop text-left" width="88px">Approved By</th>
  <th class="sort desktop text-left" width="55px" data-name="approved_at">Approved</th>
<% end %>

<% content_for :filter_row do %>
  <td data-filter="false"></td>
  <td data-filter="ajax"></td>
  <td data-filter="ajax"></td>
  <td data-filter="ajax"></td>
  <td data-filter="false"></td>
  <td data-filter="ajax"></td>
  <td data-filter="false"></td>
  <td data-filter="false"></td>
  <td data-filter="false"></td>
  <td data-filter="false"></td>
  <td data-filter="false"></td>
  <td data-filter="false"></td>
  <td data-filter="daterange">
  <td data-filter="false"></td>
  <td data-filter="false"></td>
  <td data-filter="false"></td>
<% end %>

  <%= render layout: 'shared/layouts/datatable' do %>
  <% end %>
</div>

<!-- Qty modal -->

<div class="modal fade" id="inStock" role="dialog">
  <div class="modal-dialog modal-lg">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header pb-0">
        <h4 class="modal-title">Product Inventory</h4>
      </div>
      <div class="modal-body py-0 px-2">
        <table class="table table-bordered dt-responsive datatable w-100" width="780px" data-sort="false" id="stock-table">
          <thead>
          <tr>
            <th class="no-sort">Warehouse</th>
            <th class="no-sort text-right">In Stock</th>
            <th class="no-sort text-right">Committed</th>
            <th class="no-sort text-right">Ordered</th>
            <th class="no-sort text-right">Available</th>
          </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn bmro-button btn-outline-danger btn-block" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<!-- end Qty modal -->