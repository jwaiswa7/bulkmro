<div class="col-lg-12">
  <%= render 'shared/snippets/page_header', e: @payment_option %>

  <%= simple_form_for([:overseers, @payment_option], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <div class="bmro-card bmro-card-padding">
      <div class="form-group">
        <%= f.input :name, label: 'Payment Terms Name',  :placeholder => 'e.g. 90 days after delivery', input_html: { class: 'bmro-form-input' }, :required => 'true', :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.input :credit_limit, label: 'Credit Limit', input_html: { class: 'bmro-form-input' }, :required => 'true', :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.input :general_discount, label: 'General Discount', input_html: { class: 'bmro-form-input' }, :required => 'true', :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.input :load_limit, label: 'Load Limit', input_html: { class: 'bmro-form-input' }, :required => 'true', :class => 'form-control' %>
      </div>
      <%= f.input :is_active %>
      <div class="bmro-button-parent">
        <%= action_button(action_name, @payment_option) %>
      </div>
    </div>
  <% end %>
</div>