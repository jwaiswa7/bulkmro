<div class="col-lg-12">
  <%= render 'shared/snippets/page_header', e: @payment_option %>

  <%= simple_form_for([:overseers, @payment_option], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <div class="form-group">
      <%= f.input :name, label: 'Payment Terms Name', :placeholder => 'e.g. 90 days after delivery', :required => 'true', :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.input :credit_limit, label: 'Credit Limit', :required => 'true', :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.input :general_discount, label: 'General Discount', :required => 'true', :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.input :load_limit, label: 'Load Limit', :required => 'true', :class => 'form-control' %>
    </div>

    <%= action_button(action_name, @payment_option) %>
  <% end %>
</div>