<div class="col-lg-12">
  <div class="page-header">
    <h2><%= action_name.capitalize %> purchase_order_queue Product</h2>
    <p>This will <em>'<%= submit_text(@purchase_order_queue).downcase %>'</em> and log it under
      <strong><%= current_overseer.full_name %></strong>.</p>
  </div>

  <%= simple_form_for([:overseers, @purchase_order_queue], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= render 'shared/snippets/form_errors', f: f %>

    <%= f.simple_fields_for :purchase_order_queue do |purchase_order_queue| %>
      <%= purchase_order_queue.hidden_field :id %>

      <div class="form-row">
        <div class="col-12">
          <%= purchase_order_queue.input :sales_order %>
        </div>
        <div class="col-6">
          <%= purchase_order_queue.input :inquiry %>
        </div>
        <div class="col-6">
          <%= purchase_order_queue.input :status%>
        </div>
      </div>

    <% end %>

    <% if action_name.capitalize == "New" %>
      <%= button_tag(type: "submit", class: "btn btn-success btn-block") do %>
        <i class="fal fa-plus-circle"></i> <%= submit_text(@purchase_order_queue) %>
      <% end %>
    <% else %>
      <%= button_tag(type: "submit", class: "btn btn-warning btn-block") do %>
        <i class="fal fa-pen"></i> <%= submit_text(@purchase_order_queue) %>
      <% end %>
    <% end %>
  <% end %>
</div>
