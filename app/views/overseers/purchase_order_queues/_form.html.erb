<div class="col-lg-12">
  <div class="page-header">
    <h2><%= action_name.capitalize %> Purchase Order Request</h2>
    <p>This will <em>'<%= submit_text(@purchase_order_queue).downcase %>'</em> and log it under
      <strong><%= current_overseer.full_name %></strong>.</p>
  </div>

  <%= simple_form_for([:overseers, @purchase_order_queue], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= render 'shared/snippets/form_errors', f: f %>

    <%= f.hidden_field :id %>

    <div class="form-row">
      <div class="col-6">
        <%= f.association :sales_order, collection: [f.object.sales_order], label_method: :to_s, include_blank: "Type Order Number", input_html: {class: 'select2-ajax select2-wrap-text', :'data-source' => autocomplete_overseers_sales_orders_path, :'data-parsley-errors-messages-disabled' => '', :'data-parsely-no-valid-feedback' => ''}, label: "Order Number" %>
      </div>
      <div class="col-6">
        <%= f.association :inquiry, collection: [f.object.inquiry], label_method: :to_s, include_blank: "Type Inquiry Number", input_html: {class: 'select2-ajax select2-wrap-text', :'data-source' => autocomplete_overseers_inquiries_path, :'data-parsley-errors-messages-disabled' => '', :'data-parsely-no-valid-feedback' => ''}, label: "Inquiry Number" %>
      </div>
      <div class="col-6">
        <%= f.input :purchase_order_number %>
        <%#= f.association :purchase_order_number, collection: [PurchaseOrder.find_by_po_number(:purchase_order_number)], label_method: :to_s, include_blank: "Type Inquiry Number", input_html: {class: 'select2-ajax select2-wrap-text', :'data-source' => autocomplete_overseers_purchase_orders_path, :'data-parsley-errors-messages-disabled' => '', :'data-parsely-no-valid-feedback' => ''}, label: "Purchase Order Number" %>
      </div>
      <div class="col-6">
        <%= f.input :status, as: :select, :wrapper => :custom_multi_select, collection: enum_to_collection(PurchaseOrderQueue.statuses) %>
      </div>
    </div>

    <% if action_name.capitalize == "New" %>
      <%= button_tag(type: "submit", class: "btn btn-success btn-block") do %>
        <i class="fal fa-plus-circle"></i> <%= submit_text(@purchase_order_queue) %>
      <% end %>
    <% else %>
      <%= button_tag(type: "submit", class: "btn btn-warning btn-block") do %>
        <i class="fal fa-pen"></i> <%= submit_text(@purchase_order_queue) %>
      <% end %>
    <% end %>
  <% end %>

  <% if action_name.capitalize != "New" %>
  <%= simple_form_for @purchase_order_queue, :url => new_comment_overseers_purchase_order_queue_path, :method => 'post', :html => {:class => 'needs-validation mt-3', :'novalidate' => '', :'data-parsley-validate' => ''} do |f| %>

    <%#= render 'shared/snippets/form_errors', f: f %>

    <div class="card">
      <div class="card-body">
        <div class="flex-fill">
          <h6 class="text-uppercase text-black-50 mb-1">Comments History</h6>
        </div>

        <% if @purchase_order_queue.purchase_order_comments.persisted.size > 0 %>
          <div class="chats mb-3">
            <% @purchase_order_queue.purchase_order_comments.each do |comment| %>
              <div class="media chat-item">
                <div class="media-body">
                  <div class="chat-item-title">
                    <span class="chat-item-author"><%= comment.created_by.full_name if comment.created_by.present? %></span>
                    <span><%= time_ago_in_words(comment.created_at) if comment.created_at.present? %> ago</span>
                  </div>
                  <div class="chat-item-body">
                    <p><%= comment.message %></p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>

        <%= f.input :message, required: true, :placeholder => 'Type message', input_html: {:'data-parsely-no-valid-feedback' => ''} %>

        <div class="flex-fill">
          <%= f.submit 'Comment', name: 'reply', class: 'btn btn-dark' %>
        </div>
      </div>
    </div>
  <% end %>
  <% end %>
</div>
