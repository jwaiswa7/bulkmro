<div class="container-fluid">
  <div class="row justify-content-end">
    <a target="_blank" data-toggle="modal" data-target="#myModal" class="d-sm-block btn btn-dark btn-rounded align-self-center btn-block-sm-down mr-md-1 mt-3">
      <i class="fal fa-download mr-1"></i>Download Excel Template
    </a>
  </div>
</div>


<%= render layout: 'shared/layouts/form' do %>
  <%= simple_form_for(:bible_upload, url: create_bible_records_overseers_bible_imports_path, :html => {:class => 'needs-validation mt-3', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%#= render 'shared/snippets/form_errors', f: f %>

    <div class="card">
      <div class="card-body">
        <div class="form-row">
          <div class="col-md-2">
            <%= f.input :import_type, as: :select, collection: enum_to_collection(BibleUpload.import_types, keep_raw: true), include_blank: true, required: true, label: 'Import type', input_html: {class: "select2-single"} %>
          </div>

          <div class="col-md-10">
            <%= f.input :file, required: true, wrapper: :custom_file, label: 'Bible Excel File', accept: 'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet', input_html: {type: "file"} %>
          </div>
        </div>

        <div class="form-group mb-0">
          <%= f.submit(class: 'btn btn-success btn-block', value: 'Upload Bible') %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

<div class="col-12 mt-2">
  <% content_for :header_row do %>
    <!-- <th class="no-sort"></th>-->
    <th class="no-sort all">Id</th>
    <th class="no-sort all">Import Type</th>
    <th class="no-sort all text-right">File Name</th>
    <th class="no-sort desktop text-right">Status</th>
    <th class="no-sort desktop text-right">Updated By</th>
    <th class="no-sort desktop">Time</th>
    <th class="no-sort desktop">Log</th>
  <% end %>
  <% content_for :filter_row do %>
    <td data-filter="false"></td>
    <td data-filter="dropdown"></td>
    <td data-filter="false"></td>
    <td data-filter="false"></td>
    <td data-filter="false"></td>
    <td data-filter="false"></td>
    <td data-filter="false"></td>
  <% end %>

  <%= render layout: 'shared/layouts/datatable' do %>
  <% end %>
</div>

<div class="modal fade" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <h4 class="modal-title">Bible Import</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

        <!-- Modal body -->
        <div class="modal-body">
          <%= form_tag download_bible_order_template_overseers_bible_imports_path(format: :xlsx) , multipart: true do %>
            <div class="card">
              <div class="card-body">
                <div class="form-group mt-3">
                  <!-- Default inline 1-->
                  <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" class="custom-control-input" id="bible-invoices-radio" name="bible-sheet-type" value="invoices">
                    <label class="custom-control-label" for="bible-invoices-radio">Invoices</label>
                  </div>

                  <!-- Default inline 2-->
                  <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" class="custom-control-input" id="bible-salesorder-radio" name="bible-sheet-type" value="salesorder">
                    <label class="custom-control-label" for="bible-salesorder-radio">Sales Orders</label>
                  </div>
                </div>

                <div class="form-group mb-0">
                  <div class="modal-footer">
                    <%= submit_tag "Download", class: 'btn btn-success btn-block' %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>




