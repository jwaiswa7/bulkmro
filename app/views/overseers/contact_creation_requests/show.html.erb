<%= provide :container_fluid, true %>
<div class="col-lg-12">
  <section class="pt-3 pt-lg-4 pb-2">
    <div class="d-md-flex justify-content-between">
      <h3 class="display-5 d-flex align-items-center">
        <%= @contact_creation_request.first_name %>:&nbsp;<%= status_badge(@contact_creation_request.status) %>
      </h3>

      <% if !@contact_creation_request.contact.present? && is_authorized(:contact, 'new') && @contact_creation_request.activity.company_id.present? %>
        <a href="<%= new_overseers_contact_path(:ccr_id => @contact_creation_request.id) %>" class="btn btn-warning btn-rounded align-self-center btn-block-sm-down"><i class="fal fa-plus mr-1"></i>Create
          New
          Contact</a>
      <% end %>

    </div>
  </section>
  <section class="mb-3">
    <div class="card">
      <div class="card-body">
        <h6 class="text-uppercase bmro-form-heading text-black-50 mb-1">Contact Details</h6>
        <div class="form-row">
          <div class="col-6 col-md-4 mb-2">
            <strong class="d-block bmro-summary-head">
              First Name
            </strong>
            <%= @contact_creation_request.first_name %>
          </div>
          <div class="col-6 col-md-4 mb-2">
            <strong class="d-block bmro-summary-head">
              Last Name
            </strong>
            <div class="bmro-summary-data">
             <%= @contact_creation_request.last_name %>
          </div>
          </div>
          <div class="col-6 col-md-4 mb-2">
            <strong class="d-block bmro-summary-head">
              Email
            </strong>
            <div class="bmro-summary-data">
              <%= @contact_creation_request.email %>
            </div>
          </div>
        </div>
        <div class="form-row">
          <div class="col-6 col-md-4 mb-2">
            <strong class="d-block bmro-summary-head">
              Telephone
            </strong>
            <div class="bmro-summary-data">
               <%= @contact_creation_request.telephone %>
             </div>
          </div>
          <div class="col-6 col-md-4 mb-2">
            <strong class="d-block bmro-summary-head">
              Mobile Number
            </strong>
            <div class="bmro-summary-data">
            <%= @contact_creation_request.mobile %>
          </div>  
          </div>
          <div class="col-6 col-md-4 mb-2">
            <strong class="d-block bmro-summary-head">
              Requested by
            </strong>
            <div class="bmro-summary-data">
            <%= @contact_creation_request.activity.created_by.name %>
          </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>