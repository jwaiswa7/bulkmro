<div class="col-lg-12">
  <section class="pt-3 pt-lg-4 pb-2">
    <div class="d-md-flex justify-content-between">
      <h3 class="display-5 d-flex align-items-center">
        <%= @kit.name %>
      </h3>
      <% if policy(@kit).edit? %>
        <a href="<%= edit_overseers_product_path(@kit) %>" class="btn btn-warning btn-rounded align-self-center btn-block-sm-down"><i class="fal fa-pen mr-1"></i>Edit
          Product</a>
      <% end %>
    </div>
  </section>

  <section class="mb-3">
    <div class="card">
      <div class="card-body">
        <div>
          <h6 class="text-uppercase text-black-50 mb-1">Product Details</h6>
          <div class="form-row">
            <% if @kit.sku? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">BM Number</strong>
                <%= @kit.sku %>
              </div>
            <% end %>

            <% if @kit.category.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Category</strong>
                <%= @kit.category %>
              </div>
            <% end %>

            <% if @kit.brand.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Brand</strong>
                <%= @kit.brand %>
              </div>
            <% end %>

            <% if @kit.mpn? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Manufacturer Part Number</strong>
                <%= @kit.mpn %>
              </div>
            <% end %>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Is Service?</strong>
              <%= format_boolean(@kit.is_service) %>
            </div>

          </div>
        </div>
        <div class="mt-3">
          <h6 class="text-uppercase text-black-50 mb-1 d-block">Accounting and Logistics</h6>
          <div class="form-row">
            <% if @kit.tax_code.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Tax Code</strong>
                <%= @kit.tax_code %>
              </div>
            <% end %>

            <% if @kit.measurement_unit %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Unit of Measurement</strong>
                <%= @kit.measurement_unit %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
