<div class="col-lg-12">
  <section class="pt-3 pt-lg-4 pb-2">
    <div class="d-md-flex justify-content-between">
      <h3 class="display-5 d-flex align-items-center">
        <%= @kit.product.name %>
      </h3>
      <% if policy(@kit).edit? %>
        <a href="<%= edit_overseers_kit_path(@kit) %>" class="btn btn-warning btn-rounded align-self-center btn-block-sm-down"><i class="fal fa-pen mr-1"></i>Edit
          Kit</a>
      <% end %>
    </div>
  </section>

  <section class="mb-3">
    <div class="card">
      <div class="card-body">
        <div>
          <h6 class="text-uppercase text-black-50 mb-1">Kit Details</h6>
          <div class="form-row">
            <% if @kit.inquiry.inquiry_number? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Inquiry</strong>
                <%= conditional_link(@kit.inquiry.inquiry_number, edit_overseers_inquiry_path(@kit.inquiry), policy(@kit.inquiry).edit?) %>
              </div>
            <% end %>

            <% if @kit.product.sku? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">BM Number</strong>
                <%= @kit.product.sku %>
              </div>
            <% end %>

            <% if @kit.product.category.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Category</strong>
                <%= @kit.product.category %>
              </div>
            <% end %>

            <% if @kit.product.brand.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Brand</strong>
                <%= @kit.product.brand %>
              </div>
            <% end %>

            <% if @kit.product.mpn? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Manufacturer Part Number</strong>
                <%= @kit.product.mpn %>
              </div>
            <% end %>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Service</strong>
              <%= format_boolean(@kit.product.is_service) %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Kit SAP Status</strong>
              <%= format_boolean(@kit.synced?) %>
            </div>


            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Product SAP Status</strong>
              <%= format_boolean(@kit.product.synced?) %>
            </div>

          </div>
        </div>

        <div class="mt-3 card-alternative">
          <h6 class="text-uppercase text-black-50 mb-1 d-block">Accounting and Logistics</h6>
          <div class="form-row">
            <% if @kit.product.tax_code.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Tax Code</strong>
                <%= @kit.product.tax_code %>
              </div>
            <% end %>

            <% if @kit.product.measurement_unit %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Unit of Measurement</strong>
                <%= @kit.product.measurement_unit %>
              </div>
            <% end %>
          </div>
        </div>

        <div class="mt-3">
          <h6 class="text-uppercase text-black-50 mb-1">Product Details</h6>
          <table class="table table-bordered dt-responsive wrap-whitespace w-100 mb-0 datatable" data-fixed-header="false">
            <thead>
            <tr>
              <th class="text-right" data-toggle="tooltip" title="Serial Number">Sr. No</th>
              <th>SKU</th>
              <th>Product</th>
              <th class="text-right">Quantity</th>
              <th class="text-right">Tax Code</th>
              <th class="text-right">Tax Rate</th>
            </tr>
            </thead>
            <tbody>
              <% @kit.kit_product_rows.each_with_index do |kit_product, index| %>
                <tr>
                  <td><%= (index + 1) %></td>
                  <td><%= kit_product.product.sku %></td>
                  <td><%= kit_product.product.name %></td>
                  <td><%= kit_product.quantity %></td>
                  <td><%= kit_product.tax_code.code if kit_product.tax_code.present? %></td>
                  <td><%= kit_product.tax_rate.to_s %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
</div>