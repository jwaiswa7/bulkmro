<div class="col-lg-12">
  <section class="pt-3 pt-lg-4 pb-2">
    <div class="d-md-flex justify-content-between">
      <h3 class="display-5 d-flex align-items-center">
        <%= @kit.product.name %>
      </h3>
      <% if policy(@kit).edit? %>
        <a href="<%= edit_overseers_kit_path(@kit) %>" class="btn btn-warning btn-rounded align-self-center btn-block-sm-down"><i class="fal fa-pen mr-1"></i>Edit
          Product</a>
      <% end %>
    </div>
  </section>

  <section class="mb-3">
    <div class="card">
      <div class="card-body">
        <div>
          <h6 class="text-uppercase text-black-50 mb-1">Kit Details</h6>
          <div class="form-row">
            <% if @kit.product.sku? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">BM Number</strong>
                <%= @kit.product.sku %>
              </div>
            <% end %>

            <% if @kit.product.category.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Category</strong>
                <%= @kit.product.category %>
              </div>
            <% end %>

            <% if @kit.product.brand.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Brand</strong>
                <%= @kit.product.brand %>
              </div>
            <% end %>

            <% if @kit.product.mpn? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Manufacturer Part Number</strong>
                <%= @kit.product.mpn %>
              </div>
            <% end %>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Is Service?</strong>
              <%= format_boolean(@kit.product.is_service) %>
            </div>

          </div>
        </div>

        <div class="mt-3 card-alternative">
          <h6 class="text-uppercase text-black-50 mb-1 d-block">Accounting and Logistics</h6>
          <div class="form-row">
            <% if @kit.product.tax_code.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Tax Code</strong>
                <%= @kit.product.tax_code %>
              </div>
            <% end %>

            <% if @kit.product.measurement_unit %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Unit of Measurement</strong>
                <%= @kit.product.measurement_unit %>
              </div>
            <% end %>
          </div>
        </div>

        <div class="mt-3">
          <h6 class="text-uppercase text-black-50 mb-1">Product Details</h6>
          <table class="datatable table table-bordered dt-responsive wrap-whitespace w-100" data-fixed-header="false">
            <thead>
            <tr>
              <td><strong class="d-block">Sr No</strong></td>
              <td><strong class="d-block">Product</strong></td>
              <td><strong class="d-block">Quantity</strong></td>
            </tr>
            </thead>
            <tbody>
            <% @kit.kit_product_rows.each_with_index do |kit_product, index| %>
              <tr>
                <td><%= (index + 1) %></td>
                <td><%= kit_product.product.name %></td>
                <td><%= kit_product.quantity %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
</div>