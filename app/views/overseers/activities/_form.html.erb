<div class="col-lg-12">
  <div class="page-header">
    <h2><%= action_name.capitalize %> Activity</h2>
    <p>This will <em>'<%= submit_text(@activity).downcase %>'</em> and log it under <strong><%= current_overseer.full_name %></strong>.</p>
  </div>

  <%= simple_form_for([:overseers, @activity], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= f.association :inquiry, collection: selected_option_or_nil(f, :inquiry), :wrapper => :custom_multi_select,  input_html: { class: 'select2-ajax', :'data-source' => autocomplete_overseers_inquiries_path }, include_blank: 'Leave blank if no inquiry connected' %>
    <%= f.association :company, collection: selected_option_or_nil(f, :company), :wrapper => :custom_multi_select,  input_html: { class: 'select2-ajax', :'data-source' => autocomplete_overseers_companies_path }, include_blank: 'Leave blank if no company connected' %>
    <%= f.association :contact, collection: selected_option_or_nil(f, :contact), :wrapper => :custom_multi_select,  input_html: { class: 'select2-ajax', :'data-source' => autocomplete_overseers_contacts_path }, include_blank: 'Leave blank if no contact connected' %>

    <%= f.input :company_type, as: :select, collection: enum_to_collection(Activity.company_types) %>
    <%= f.input :purpose, as: :select, collection: enum_to_collection(Activity.purposes) %>
    <%= f.input :activity_type, as: :select, collection: enum_to_collection(Activity.activity_types) %>

    <%= f.input :overseer_ids, as: :select, label: 'Colleagues', collection: Overseer.all.collect {|x| [x.to_s, x.id] }, input_html: { :multiple => true }, :class => 'form-control select2-multiple', :"data-placeholder" => 'Select Other Overseers' %>

    <%= f.input :subject %>
    <%= f.input :points_discussed %>
    <%= f.input :actions_required %>

    <% if action_name.capitalize == "New" %>
      <%= button_tag(type: "submit", class: "btn btn-success btn-block") do %>
        <i class="fal fa-plus-circle"></i> <%= submit_text(@activity) %>
      <% end %>
    <% else %>
      <%= button_tag(type: "submit", class: "btn btn-warning btn-block") do %>
        <i class="fal fa-pen"></i> <%= submit_text(@activity) %>
      <% end %>
    <% end %>
  <% end %>
</div>