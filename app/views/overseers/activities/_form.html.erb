<div class="col-lg-12">
  <div class="page-header">
    <h2><%= action_name.capitalize %> Activity</h2>
    <p>This will <em>'<%= submit_text(@activity).downcase %>'</em> and log it under <strong><%= current_overseer.full_name %></strong>.</p>
  </div>

  <%= simple_form_for([:overseers, @activity], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= f.association :inquiry, collection: selected_option_or_nil(f, :inquiry),  input_html: { class: 'select2-ajax', :'data-source' => autocomplete_overseers_inquiries_path }, include_blank: 'Leave blank if no inquiry connected' %>
    <div class="row" >
      <div class="col-12 col-md-12 ">
        <button type="button" class="btn btn-info btn-block existing-company d-none" >
          add existing company
        </button>
       </div>
      <div class="col-12 col-md-12" >
        <button type="button" class="btn btn-info btn-block new-company" >
          add new company
        </button>
      </div>
    </div>
    <h6 class="mt-2 text-center">
      OR
    </h6>
    <div class="existing-company-form mt-3" >
      <%= f.association :company, collection: selected_option_or_nil(f, :company),  input_html: { class: 'select2-ajax', :'data-source' => autocomplete_overseers_companies_path }, include_blank: 'Leave blank if no company connected' %>
    </div>
    
    <div class="new-company-form d-none mt-3" >
      <h6 class="text-uppercase text-black-50 mb-1">Company Details</h6>
      <%= f.fields_for :company_creation_request do |company_creation_request_field|%>
         <%= company_creation_request_field.association :account, collection: selected_option_or_nil(company_creation_request_field, :account),  input_html: { class: 'select2-ajax', :'data-source' => autocomplete_overseers_accounts_path, include_blank: 'Create new account if no company connected to existing account'  }%>
        <%= company_creation_request_field.fields_for :account_creation_request do |account_creation_request_field|%>
            <%= account_creation_request_field.input :name, label: 'account name' %>
            <%= account_creation_request_field.input :account_type, label: 'account type' %>
        <%end %>
        <div class="form-row">
          <div class="col-12 col-md-12">
            <%= company_creation_request_field.input :name %>
          </div>
        </div>
        <%= company_creation_request_field.hidden_field :activity_id %>
        <div class="form-row">
          <div class="col-6 col-md-4">
            <%= company_creation_request_field.input :first_name %>
           </div>
          <div class="col-6 col-md-4">
            <%= company_creation_request_field.input :last_name %>
          </div>
          <div class="col-12 col-md-4">
            <%= company_creation_request_field.input :email %>
          </div>
        </div>
        <%= company_creation_request_field.input :address %>

      <% end %>
    </div>

    
    <%= f.association :contact, collection: selected_option_or_nil(f, :contact),  input_html: { class: 'select2-ajax ', :'data-source' => autocomplete_overseers_contacts_path }, include_blank: 'Leave blank if no contact connected' %>

    <%= f.input :subject %>

    <div class="form-row">
      <div class="col-6 col-md-4">
        <%= f.input :company_type, as: :select, include_blank: false, :wrapper => :custom_multi_select, collection: enum_to_collection(Activity.company_types) %>
      </div>
      <div class="col-6 col-md-4">
        <%= f.input :activity_type, as: :select, include_blank: false, :wrapper => :custom_multi_select, collection: enum_to_collection(Activity.activity_types) %>
      </div>
      <div class="col-12 col-md-4">
        <%= f.input :purpose, as: :select, include_blank: false, :wrapper => :custom_multi_select, collection: enum_to_collection(Activity.purposes) %>
      </div>
    </div>

    <div class="form-group">
      <div class="select2-wrapper">
        <%= f.input :overseer_ids, as: :select, label: 'Colleagues', collection: Overseer.all.collect {|x| [x.to_s, x.id] }, input_html: { :multiple => true, :class => 'form-control select2-multiple', :"data-placeholder" => 'Select other overseers'} %>
      </div>
    </div>

    <%= f.input :points_discussed %>
    <%= f.input :actions_required %>

    <% if action_name.capitalize == "New" %>`
      <%= button_tag(type: "submit", class: "btn btn-success btn-block") do %>
        <i class="fal fa-plus-circle"></i> <%= submit_text(@activity) %>
      <% end %>
    <% else %>
      <%= button_tag(type: "submit", class: "btn btn-warning btn-block") do %>
        <i class="fal fa-pen"></i> <%= submit_text(@activity) %>
      <% end %>
    <% end %>
  <% end %>
</div>