<div class="mt-3 card-alternative">
    <div class="row" >
      <div class="col-12 col-md-12 ">
        <button type="button" class="btn btn-success btn-block existing-company <%= (@activity.company_creation_request.id.present? && !@activity.company.present?)  ? "" : "d-none"%> " >
          add existing company
        </button>
      </div>
      <div class="col-12 col-md-12 " >
        <button type="button" class="btn btn-warning btn-block new-company <%= (@activity.company_creation_request.id.present?&& !@activity.company.present?)  ? "d-none" : ""%>" >
          add new company
        </button>
      </div>
    </div>
    <h6 class="mt-2 text-center">
      OR
    </h6>
  <div class="new-company-form <%= (@activity.company_creation_request.id.present? && !@activity.company.present?)  ? "" : "d-none"%> mt-3" >
    <h6 class="text-uppercase mb-1 font-weight-bold">Add new company details</h6>
    <%= f.fields_for :company_creation_request do |company_creation_request_field|%>
      <div class="form-row">
        <div class="col-12 col-md-12">
          <%= company_creation_request_field.input :name %>
        </div>
      </div>
      <%= company_creation_request_field.hidden_field :activity_id %>
      <div class="form-row">
        <div class="col-6 col-md-6">
          <%= company_creation_request_field.input :first_name %>
        </div>
        <div class="col-6 col-md-6">
          <%= company_creation_request_field.input :last_name %>
        </div>
        <div class="col-12 col-md-6">
          <%= company_creation_request_field.input :email %>
        </div>
        <div class="col-12 col-md-6">
          <%= company_creation_request_field.input :account_type, as: :select, include_blank: false, collection: enum_to_collection(CompanyCreationRequest.account_types) %>
        </div>
      </div>
      <%= company_creation_request_field.input :address %>
    <% end %>
  </div>
  <div class="existing-company-form mt-3 <%= (@activity.company_creation_request.id.present? && !@activity.company.present?)  ? "d-none" : ""%> mt-3" >
    <%= f.association :company, label: "Existing company", collection: selected_option_or_nil(f, :company),  input_html: { class: 'select2-ajax', :'data-source' => autocomplete_overseers_companies_path }, include_blank: 'Leave blank if no company connected' %>
  </div>
</div>

