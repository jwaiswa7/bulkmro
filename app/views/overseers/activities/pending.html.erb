<% provide :container_fluid, true %>
<% provide :can_be_ajaxed, true %>
<% provide :wrap_whitespace, true %>

<% content_for :heading do %>
  Pending Activities
<% end %>

<% provide :heading_buttons do %>
  <% if is_authorized(:activity, 'approve_selected') %>
    <button type="button" id="approve_selected" class=" btn btn-success btn-rounded align-self-center btn-block-sm-down ml-1 mb-md-0 mb-1">
      <i class="fal fa-check mr-1"></i>Approve Selected
    </button>
  <% end %>
  <% if is_authorized(:activity, 'reject_selected') %>
    <button type="button" id="reject_selected" class=" btn btn-danger btn-rounded align-self-center btn-block-sm-down ml-1 mb-md-0 mb-1">
      <i class="fal fa-times mr-1"></i>Reject Selected
    </button>
  <% end %>
<% end %>

<div class="col-lg-12 bmro-table-layout">

<% content_for :header_row do %>
  <th class="no-sort" width="45px">
    <% if is_authorized(:activity, 'perform_actions') %>
      <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" name="all_activities" id="all_activities">
        <label class="custom-control-label" for="all_activities"></label>
      </div>
    <% end %>
  </th>
  <th class="no-sort" width="98px">Quick Actions</th>
  <th class="no-sort text-left" width="70px" data-name="created_by_id">Created By</th>
  <th class="sort text-right" width="70px" data-name="activity_date">Activity Date</th>
  <th class="no-sort text-left" width="130px" data-name="account_id">Account</th>
  <th class="no-sort text-left" width="130px" data-name="company_id">Company</th>
  <th class="no-sort text-left" width="50px">Is Supplier</th>
  <th class="no-sort text-left" width="60px">Is Customer</th>
  <th class="no-sort text-left" width="100px">Company Creation Request Status</th>
  <th class="no-sort text-left" width="100px">Contact Creation Request Status</th>
  <th class="sort text-right" width="78px" data-name="inquiry_number">Inquiry</th>
  <th class="no-sort text-left" width="88px" data-name="contact_id">Contact Name</th>
  <th class="no-sort text-left" width="12px" data-name="purpose_id">Purpose</th>
  <th class="no-sort text-left" width="82px" data-name="activity_type_id">Type</th>
  <th class="no-sort text-right" width="75px">Misc Expenses</th>
  <th class="no-sort text-left" width="230px">Points Discussed</th>
  <th class="no-sort text-left" width="120px">Actions Required</th>
  <th class="sort text-left" width="70px" data-name="created_at">Created</th>
<% end %>


<% content_for :filter_row do %>
  <td data-filter="false"></td>
  <td data-filter="false"></td>
  <td data-filter="dropdown"></td>
  <td data-filter="daterange"></td>
  <td data-filter="ajax"></td>
  <td data-filter="ajax"></td>
  <td data-filter="false"></td>
  <td data-filter="false"></td>
  <td data-filter="false"></td>
  <td data-filter="false"></td>
  <td data-filter="false"></td>
  <td data-filter="ajax"></td>
  <td data-filter="dropdown"></td>
  <td data-filter="dropdown"></td>
  <td data-filter="false"></td>
  <td data-filter="false"></td>
  <td data-filter="false"></td>
  <td data-filter="daterange"></td>
<% end %>

<div class="col-lg-12">
  <%= render layout: 'shared/layouts/datatable' do %>
  <% end %>
</div>
</div>
