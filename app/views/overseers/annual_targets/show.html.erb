<div class="col-lg-12">
  <section class="pt-3 pt-lg-4 pb-2">
    <div class="d-md-flex justify-content-between">
      <h3 class="display-5 d-flex align-items-center">
        Annual Target
      </h3>
      <a href="<%= edit_overseers_annual_target_path(@annual_target) %>" class="btn btn-warning btn-rounded align-self-center btn-block-sm-down">
        <i class="fal fa-pen mr-1"></i>Edit Annual Target
      </a>
    </div>
  </section>
  <section class="mb-3">
    <div class="card">
      <div class="card-body">
        <div>
          <div class="form-row">
            <div class="col-6 col-md-3 mb-3">
              <strong class="d-block">Name</strong>
              <%= link_to @annual_target.overseer.try(:full_name), overseers_overseer_path(@annual_target.overseer) %>
            </div>
            <div class="col-6 col-md-3 mb-3">
              <strong class="d-block">Manager</strong>
              <%= @annual_target.manager.try(:full_name) %>
            </div>

            <div class="col-6 col-md-3 mb-3">
              <strong class="d-block">Business Head</strong>
              <%= @annual_target.business_head.try(:full_name) %>
            </div>
          </div>
          <div class="form-row">
            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Inquiry Target</strong>
              <%= @annual_target.inquiry_target %>
            </div>

<!--            <div class="col-6 col-md-3 mb-2">-->
<!--              <strong class="d-block">Company Target</strong>-->
              <%#= @annual_target.company_target %>
<!--            </div>-->

<!--            <div class="col-6 col-md-3 mb-2">-->
<!--              <strong class="d-block">Invoice Target</strong>-->
              <%#= @annual_target.invoice_target %>
<!--            </div>-->

<!--            <div class="col-6 col-md-3 mb-2">-->
<!--              <strong class="d-block">Invoice Margin Target</strong>-->
              <%#= @annual_target.invoice_margin_target %>
<!--            </div>-->

<!--            <div class="col-6 col-md-3 mb-2">-->
<!--              <strong class="d-block">Inquiry Target</strong>-->
              <%#= @annual_target.order_target %>
<!--            </div>-->

<!--            <div class="col-6 col-md-3 mb-2">-->
<!--              <strong class="d-block">Order Margin Target</strong>-->
              <%#= @annual_target.order_margin_target %>
<!--            </div>-->

<!--            <div class="col-6 col-md-3 mb-2">-->
<!--              <strong class="d-block">New Cilent Target</strong>-->
              <%#= @annual_target.new_client_target %>
<!--            </div>-->

          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="mb-3">
    <div class="card">
      <div class="card-body">
        <table class="datatable table table-bordered dt-responsive" style="width:100%;">
          <thead>
          <tr>
            <th class="no-sort"></th>
            <th class="no-sort">Month</th>
            <th class="no-sort">Inquiry Target</th>
          </tr>
          </thead>
          <tbody>
          <% if @targets.present? %>
            <% @targets.each do |target| %>
              <tr>
                <td></td>
                <td><%= target.target_period.to_s %></td>
                <td><%= target.try(:target_value).round(2) %></td>
              </tr>
            <% end %>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </section>
</div>
