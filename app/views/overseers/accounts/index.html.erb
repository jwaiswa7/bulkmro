<div class="col-lg-11">
  <section class="pt-3 pt-lg-4 pb-2 pb-lg-3">
    <div class="d-md-flex justify-content-between">
      <h1 class="display-5 mb-1">Accounts</h1>
      <a href="<%= new_overseers_account_path %>" class="d-sm-block btn btn-success btn-rounded align-self-center btn-block-sm-down"><i class="fal fa-plus-circle mr-1"></i>New Account</a>
    </div>
    <p class="lead mt-1">
      All company accounts filterable in any way that we want.
    </p>
  </section>
  <section class="pb-4 pb-lg-5">
    <table class="datatable table table-bordered dt-responsive" data-search="Filter by x, y or z">
      <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
      </tr>
      </thead>
      <tbody>
      <% @accounts.each do |account| %>
          <tr>
            <td><%= account.id %></td>
            <td><%= account.name %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </section>
</div>