
<h4>Companies</h4>

<a href="<%= new_overseers_account_company_path(@account) %>">
  <button type="button" class="btn btn-primary m-t-10">+ Add Company</button>
</a>

<div class="table-responsive">
  <table id="datatable-buttons" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Contacts</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @account.companies.each do |company| %>
      <tr>
        <td><%= company.id %></td>
        <td><%= company.name %></td>
        <td><%= format_collection(company.contacts) %></td>
        <td><a href="<%= edit_overseers_account_company_path(company.account, company) %>">Edit</a></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<hr />

<h4>Contacts</h4>

<a href="<%= new_overseers_account_contact_path(@account) %>">
  <button type="button" class="btn btn-primary m-t-10">+ Add Contact</button>
</a>

<div class="table-responsive">
  <table id="datatable-buttons" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Companies</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @account.contacts.each do |contact| %>
      <tr>
        <td><%= contact.id %></td>
        <td><%= contact.full_name %></td>
        <td><%= format_collection(contact.companies) %></td>
        <td><a href="<%= edit_overseers_account_contact_path(contact.account, contact) %>">Edit</a></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>