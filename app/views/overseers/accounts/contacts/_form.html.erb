<div class="col-lg-12">
  <div class="page-header">
    <h2><%= action_name.capitalize %> Contact</h2>
    <p>This will <em>'<%= submit_text(@account).downcase %>'</em> and log it under <strong><%= current_overseer.full_name %></strong>.</p>
  </div>

  <%= simple_form_for([:overseers, @account, @contact]) do |f| %>
    <%= f.hidden_field :account_id %>

    <div class="form-row">
      <div class="col-2">
        <%= f.input :prefix %>
      </div>
      <div class="col-5">
        <%= f.input :first_name %>
      </div>
      <div class="col-5">
        <%= f.input :last_name %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-6">
        <%= f.input :role, as: :select, wrapper: :custom_multi_select , collection: enum_to_collection(Contact.roles) %>
      </div>
      <div class="col-6">
        <%= f.input :contact_group, wrapper: :custom_multi_select, as: :select, collection: enum_to_collection(Contact.contact_groups) %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-4">
        <%= f.input :designation %>
      </div>
      <div class="col-4">
        <%= f.input :telephone %>
      </div>
      <div class="col-4">
        <%= f.input :mobile %>
      </div>
    </div>

    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>

    <div class="form-group">
      <%= f.label :company_ids, 'Companies' %>
      <div class="select2-wrapper">
        <%= f.select :company_ids, @account.companies.collect {|x| [x.to_s, x.id]}, {}, :multiple => true, :class => 'form-control select2-multiple', :"data-placeholder" => 'Select Categories' %>
      </div>
    </div>

    <%= f.input :status, wrapper: :custom_multi_select, as: :select, collection: enum_to_collection(Contact.statuses) %>

    <% if action_name.capitalize == "New" %>
      <%= button_tag(type: "submit", class: "btn btn-success btn-block") do %>
        <i class="fal fa-plus-circle"></i> <%= submit_text(@contact) %>
      <% end %>
    <% else %>
      <%= button_tag(type: "submit", class: "btn btn-warning btn-block") do %>
        <i class="fal fa-pen"></i> <%= submit_text(@contact) %>
      <% end %>
    <% end %>
  <% end %>
</div>