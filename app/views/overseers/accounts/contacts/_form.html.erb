Account under <%= @contact.account.name %>

<%= simple_form_for([:overseers, @account, @contact]) do |f| %>
  <%= f.hidden_field :account_id %>
  <%= f.input :created_by, disabled: true %>
  <%= f.input :created_at, disabled: true %>
  <%= f.input :updated_by, disabled: true %>
  <%= f.input :updated_at, disabled: true %>

  <%= f.input :first_name %>
  <%= f.input :last_name %>

  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.select :company_ids, @account.companies.collect {|x| [x.to_s, x.id]}, {}, :multiple => true %>

  <%= f.input :email %>
  <%= f.input :prefix %>
  <%= f.input :designation %>
  <%= f.input :telephone %>
  <%= f.input :mobile %>

  <%= f.input :role, as: :select, collection: enum_to_collection(Contact.roles) %>
  <%= f.input :status, as: :select, collection: enum_to_collection(Contact.statuses) %>
  <%= f.input :contact_group, as: :select, collection: enum_to_collection(Contact.contact_groups) %>

  <%= f.select :company_ids, @account.companies.collect { |x| [x.to_s, x.id] }, {}, :multiple => true %>

  <%= f.submit %>
<% end %>