<div class="col-lg-12 pk">
  <%= render 'shared/snippets/page_header', e: @account %>
  <%= simple_form_for([:overseers, @account], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= render 'shared/snippets/form_errors', f: f %>
    <div class="bmro-card bmro-card-padding">
      <div class="form-row">
        <div class="form-group col-md-3">
          <%= f.input :name, label: 'Alias', :placeholder => 'e.g. Reliance Industries', :required => 'true', input_html: {class: 'bmro-form-input'}, :class => 'form-control' %>
        </div>
        <div class="form-group col-md-3">
          <%= f.input :account_type, :wrapper => :custom_multi_select, input_html: {class: 'bmro-form-input bmro-dropdown-icon bmro-bg'}, :class => 'form-control', as: :select, collection: enum_to_collection(Account.account_types) %>
        </div>
        <div class="form-group col-md-3">
          <%= f.input :logo, wrapper: :custom_file, required: false, accept: 'image/png, image/jpeg', label: 'Account Logo' %>
        </div>
        <div class="bmro-button-parent col-md-3 bmro-update-pt">
          <%= action_button(action_name, @account) %>
        </div>
      </div>
    </div>
  <% end %>
</div>




