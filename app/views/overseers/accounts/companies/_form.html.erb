<div class="col-lg-12">
  <%= render 'shared/snippets/page_header', e: @company %>

  <p class="alert alert-info" data-dismiss="false">
    <% if @account.is_supplier? %>
      This company will be synced as a supplier because it's under a customer supplier.
    <% elsif @account.is_customer? %>
      This company will be synced as a customer because it's under a customer account.
    <% end %>
  </p>

  <%= simple_form_for([:overseers, @account, @company], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= render 'overseers/companies/common_form', :f => f %>
  <% end %>
</div>