<% provide :container_fluid, true %>
<% provide :can_exported_report, true %>

<style>
  .sticky {
    position: sticky !important;
    top: 36.6094px !important;
    z-index: 1020 !important;
  }
</style>


<div class="col-lg-12 mb-0">
  <div class="page-header mb-0">
    <h2>Monthly Sales Report</h2>
    <p>Monthly sales report from <strong><%= format_date_without_time(Date.new(2018, 04, 01)) %></strong> to <strong><%= format_date_without_time(Date.today.end_of_day) %></strong>.</p>
  </div>
</div>

<div class="sticky-top" style="width: 100%;display: none" id="stick-tid">
    <table class="table text-center mt-3" style="margin-top: 0px !important;margin-bottom: 0px" >
      <thead >
      <tr>
        <th>Month</th>
        <th class="text-uppercase text-black-50">No of Inquiries</th>
        <th class="text-uppercase text-black-50">No of Sales Orders</th>
        <th class="text-uppercase text-black-50">Sales Total</th>
        <th class="text-uppercase text-black-50">No of Inquiry Product sku</th>
        <th class="text-uppercase text-black-50">Inquiry Product Quantity</th>
      </tr>
      </thead>
    </table>
</div>

  <table class="table text-center mt-3" id="sticky-nav">
    <thead >
    <tr>
      <th>Month</th>
      <th class="text-uppercase text-black-50">No of Inquiries</th>
      <th class="text-uppercase text-black-50">No of Sales Orders</th>
      <th class="text-uppercase text-black-50">Sales Total</th>
      <th class="text-uppercase text-black-50">No of Inquiry Product sku</th>
      <th class="text-uppercase text-black-50">Inquiry Product Quantity</th>
    </tr>
    </thead>
    <tbody>
    <% @data.entries.each do |month, values| %>
      <tr>
        <th><%= month == :total ? 'Total' : format_month_without_date(month) %></th>
        <% values.each do |key,value| %>
          <td class="text-uppercase text-black-50"><%=  format_currency(value, precision: 0, show_symbol: false) %></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>


