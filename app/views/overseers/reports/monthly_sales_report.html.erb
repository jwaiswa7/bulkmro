<% provide :container_fluid, true %>

<div class="col-lg-12 mb-0">
  <div class="page-header mb-0">
    <h2>Monthly Sales Report</h2>
    <p>Monthly sales report from <strong><%= format_date_without_time(Date.new(2018, 04, 01)) %></strong> to <strong><%= format_date_without_time(Date.today.end_of_day) %></strong>.</p>
  </div>
</div>

<table class="table text-center mt-3">
  <thead data-toggle="sticky">
  <tr>
    <th>Month</th>
    <th class="text-uppercase text-black-50">No of Inquiries</th>
    <th class="text-uppercase text-black-50">No of Sales Orders</th>
    <th class="text-uppercase text-black-50">Sales Total</th>
  </tr>
  </thead>
  <tbody>
  <% @data.entries.each do |month, values| %>
    <tr>
      <th><%= format_month_without_date(month) %></th>
      <% values.each do |key,value| %>
        <td class="text-uppercase text-black-50"><%= key == :total ? format_currency(value) : value %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>