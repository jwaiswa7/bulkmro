<div class="col-lg-12">
  <section class="pt-3 pt-lg-4 pb-2">
    <div class="d-md-flex justify-content-between">
      <h3 class="display-5 d-flex align-items-center">
        <%= @customer_order.company.name %>
      </h3>
    </div>
  </section>

  <section class="mb-3">
    <div class="card">
      <div class="card-body">
        <div>
          <h6 class="text-uppercase text-black-50 mb-1">Order Details</h6>
          <% if @customer_order.company.inside_sales_owner || @customer_order.company.outside_sales_owner || @customer_order.company.sales_manager %>
            <div class="mt-3">
              <h6 class="text-uppercase text-black-50 mb-1 d-block">Owners and managers</h6>
              <div class="form-row">
                <% if @customer_order.company.inside_sales_owner %>
                  <div class="col-12 col-md-3 mb-2">
                    <strong class="d-block">Inside sales</strong>
                    <%= @customer_order.company.inside_sales_owner %>
                  </div>
                <% end %>

                <% if @customer_order.company.outside_sales_owner %>
                  <div class="col-12 col-md-3 mb-2">
                    <strong class="d-block">Outside sales</strong>
                    <%= @customer_order.company.outside_sales_owner %>
                  </div>
                <% end %>

                <% if @customer_order.company.sales_manager %>
                  <div class="col-12 col-md-3 mb-2">
                    <strong class="d-block">Manager</strong>
                    <%= @customer_order.company.sales_manager %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <% if @customer_order.billing_address || @customer_order.shipping_address %>
            <div class="mt-3">
              <h6 class="text-uppercase text-black-50 mb-1 d-block">Addresses</h6>
              <div class="form-row">
                <% if @customer_order.billing_address.present? %>
                  <div class="col-12 col-md-6 mb-2 mb-md-0">
                    <strong class="d-block">Billing address</strong>
                    <%= @customer_order.billing_address.to_multiline_s %>
                  </div>
                <% end %>

                <% if @customer_order.shipping_address.present? %>
                  <div class="col-12 col-md-6">
                    <strong class="d-block">Shipping address</strong>
                    <%= @customer_order.shipping_address.to_multiline_s %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <% if @customer_order.rows %>
            <div class="mt-3">
              <h6 class="text-uppercase text-black-50 mb-1 d-block">Products</h6>
              <div class="form-row d-none d-md-flex">

                <div class="col-5">
                  <div class="form-group mb-0">
                    <label>Product</label>
                  </div>
                </div>

                <div class="col-1">
                  <div class="form-group mb-0">
                    <label>SAP Status</label>
                  </div>
                </div>

                <div class="col-1">
                  <div class="form-group mb-0">
                    <label>Quantity</label>
                  </div>
                </div>
              </div>
              <% @customer_order.rows.each do |row| %>
                <div class="form-row flex-row align-items-start">

                  <div class="col-5">
                    <div class="d-flex flex-row">
                      <div class="form-group align-self-center mr-1">
                          <%= row.product.name %>
                      </div>
                    </div>
                  </div>
                  <div class="col-1">
                    <div class="d-flex flex-row align-items-start">
                      <%= format_boolean_label(row.product.synced?, 'synced') %>
                    </div>
                  </div>

                  <div class="col-1">
                    <div class="d-flex flex-row align-items-center">
                      <%= row.quantity %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>
</div>