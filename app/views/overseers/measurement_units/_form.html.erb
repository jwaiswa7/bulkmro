<div class="col-lg-12">
  <div class="page-header">
    <h2><%= action_name.capitalize %> Measurement Unit</h2>
    <p>This will <em>'<%= submit_text(@measurement_units).downcase %>'</em> and log it under
      <strong><%= current_overseer.full_name %></strong>.</p>
  </div>

  <%= simple_form_for([:overseers, @measurement_units], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= f.input :name %>

    <%= action_button(action_name, @measurement_units) %>
  <% end %>
</div>