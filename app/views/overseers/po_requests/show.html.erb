<div class="col-lg-12">
  <section class="pt-3 pt-lg-4 pb-2">
    <div class="d-md-flex justify-content-between">
      <h3 class="display-5 d-flex align-items-center">
        PO Request for Sales Order #<%= @po_request.sales_order.order_number %>
      </h3>
      <% if policy(@po_request).edit? %>
        <a href="<%= edit_overseers_po_request_path(@po_request) %>" class="btn btn-warning btn-rounded align-self-center btn-block-sm-down"><i class="fal fa-pen mr-1"></i>Edit</a>
      <% end %>
    </div>
  </section>

  <section class="mb-3">
    <div class="card mb-2">
      <div class="card-body">
        <div>
          <h6 class="text-uppercase text-black-50 mb-1">Details</h6>
          <div class="form-row">
            <% if @po_request.sales_order.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Sales Order #</strong>
                <%= @po_request.sales_order.order_number %>
              </div>
            <% end %>

            <% if @po_request.inquiry.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Inquiry #</strong>
                <%= @po_request.inquiry.inquiry_number %>
              </div>
            <% end %>

            <% if @po_request.status.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Status</strong>
                <%= @po_request.status %>
              </div>
            <% end %>

            <% if @po_request.inquiry.present? && @po_request.inquiry.inside_sales_owner.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Inside Sales</strong>
                <%= @po_request.inquiry.inside_sales_owner.to_s %>
              </div>
            <% end %>

            <% if @po_request.purchase_order_number.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">PO #</strong>
                <%= @po_request.purchase_order_number %>
              </div>
            <% end %>
          </div>
          <% if @po_request.attachments.attached? %>
            <div class="form-row">
              <div class="col-12 col-md-3 mb-2">
                <strong class="d-block">Attachments </strong>
                <% @po_request.attachments.each do |attachment| %>
                  <%= link_to url_for(attachment), class: 'ml-md-1 btn btn-success', target: '_blank', :"data-toggle" => 'tooltip', :title => attachment.filename do %>
                    <i class="fal fa-download"></i>
                    <%= link_to overseers_attachment_path(attachment.id), class: 'btn btn-outline-danger btn-sm ml-1 mr-1 mr-md-0', method: :delete, data: {confirm: 'Are you sure?'}, :"data-toggle" => 'tooltip', :title => ['Delete', ' ', attachment.filename, '?'].join('') do %>
                      <i class="fal fa-trash-alt"></i>
                    <% end if attachment.present? && policy(:attachment).destroy? %>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <div class="flex-fill">
          <h6 class="text-uppercase text-black-50 mb-1">Comments History</h6>
        </div>

        <% if @po_request.comments.persisted.size > 0 %>
          <div class="chats mb-3">
            <% @po_request.comments.each do |comment| %>
              <%= format_comment(comment) %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</div>