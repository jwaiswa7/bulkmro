<div class="col-lg-12">
  <div class="page-header">
    <h2><%= action_name.capitalize %> PO Request for Stock &nbsp;</h2>
    <p>This will <em>'<%= submit_text(@po_request).downcase %>'</em> and log it under
      <strong><%= current_overseer.full_name %></strong>.</p>
  </div>

  <%= simple_form_for([:overseers, @po_request], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= render 'shared/snippets/form_errors', f: f %>

    <%= f.hidden_field :id %>
    <%= f.hidden_field :inquiry_id %>

    <div class="form-row">
      <div class="col-6">
        <%= f.association :inquiry, disabled: true, collection: [f.object.inquiry], label_method: :to_s, include_blank: "Type Inquiry Number", input_html: {class: 'select2-ajax select2-wrap-text', :'data-source' => autocomplete_overseers_inquiries_path, :'data-parsley-errors-messages-disabled' => '', :'data-parsely-no-valid-feedback' => ''}, label: "Inquiry Number" %>
      </div>

      <div class="col-6">
        <%= f.association :purchase_order, collection: [f.object.purchase_order], label_method: :to_s, include_blank: "Type Supplier PO Number", input_html: {class: 'select2-ajax select2-wrap-text', :'data-source' => autocomplete_overseers_purchase_orders_path(:inquiry_number => f.object.inquiry.inquiry_number), :'data-parsley-errors-messages-disabled' => '', :'data-parsely-no-valid-feedback' => ''}, label: "Supplier PO Number" %>
      </div>
      <div class="col-6">
        <%= f.input :stock_status, as: :select, :wrapper => :custom_multi_select, collection: enum_to_collection(PoRequest.stock_statuses.reject {|status| ["Stock Rejected","Stock Supplier PO Created"].include?(status)}, alphabetical: false), :include_blank => false %>
      </div>

      <div class="col-md-6">
        <%= f.association :requested_by, as: :select, :include_blank => true %>
      </div>
      <div class="col-md-6">
        <%= f.association :approved_by, as: :select, :include_blank => true %>
      </div>
      <div class="col-md-6">
        <div class="d-flex flex-row align-items-end">
          <div class="flex-grow-1">
            <%= f.input :attachments, wrapper: :custom_file, input_html: {multiple: true}, label: 'Attachments' %>
          </div>
          <div class="form-group">
            <% f.object.attachments.each do |attachment| %>
              <%= link_to url_for(attachment), class: 'ml-md-1 btn btn-success', target: '_blank', :"data-toggle" => 'tooltip', :status => attachment.filename do %>
                <i class="fal fa-download"></i>
                <%= link_to overseers_attachment_path(attachment.id), class: 'btn btn-outline-danger btn-sm ml-1 mr-1 mr-md-0', method: :delete, data: {confirm: 'Are you sure?'}, :"data-toggle" => 'tooltip', :status => ['Delete', ' ', attachment.filename, '?'].join('') do %>
                  <i class="fal fa-trash-alt"></i>
                <% end if attachment.present? && policy(:attachment).destroy? %>
              <% end %>
            <% end if f.object.attachments.attached? %>
          </div>
        </div>
      </div>

      <div class="col-12">
        <%= f.nested_fields_for :comments, f.object.comments.build(:overseer => current_overseer) do |po_request_comment| %>
          <%= po_request_comment.hidden_field :created_by_id %>
          <%= po_request_comment.hidden_field :updated_by_id %>
          <%= po_request_comment.input :message, :placeholder => 'Type message', input_html: {:'data-parsely-no-valid-feedback' => ''} %>
        <% end %>
      </div>

      <div class="card col-12">
        <div class="card-body">
          <h6 class="text-uppercase text-black-50 mb-1">Products</h6>
          <%= f.nested_fields_for :rows, f.object.rows.build, wrapper_tag: :div do |po_request_row| %>
            <%= po_request_row.hidden_field :id %>
            <div class="form-row flex-row simple-row col-12">
              <div class="form-row flex-row align-items-start">
                <div class="col-12 col-md-2">
                  <div class="select2-wrap">
                    <%= po_request_row.association :product, collection: [po_request_row.object.product], label_method: :to_s, include_blank: "Type SKU number, name, or brand", input_html: {class: 'select2-ajax select2-wrap-text', :'data-source' => autocomplete_overseers_products_path, :'data-parsley-errors-messages-disabled' => '', :'data-parsely-no-valid-feedback' => ''}, label: f.object.rows.first == po_request_row.object ? "Product" : false %>
                  </div>
                </div>
                <div class="col-12 col-md-1">
                  <%= po_request_row.input :brand, input_html: {value: po_request_row.object.product.try(:brand).to_s}, label: f.object.rows.first == po_request_row.object ? "Make" : false, disabled: po_request_row.object.field_disabled? %>
                  <%#= po_request_row.association :brand, label_method: :to_s, collection: selected_option_or_nil(po_request_row, :brand), include_blank: "Type to search", input_html: {class: 'select2-ajax', :'data-source' => autocomplete_overseers_brands_path}, disabled: po_request_row.object.field_disabled?, label: po_request.object.rows.first == po_request_row.object ? "Make" : false  %>
                </div>
                <div class="col-12 col-md-1">
                  <%#= po_request_row.input :tax_code, label: po_request.object.rows.first == po_request_row.object ? "HSN" : false, disabled: po_request_row.object.field_disabled? %>

                  <%= po_request_row.association :tax_code, label_method: :to_s, collection: selected_option_or_nil(po_request_row, :tax_code), include_blank: "Type to search", input_html: {class: 'select2-ajax select2-wrap-text', :'data-source' => autocomplete_overseers_tax_codes_path(is_service: !po_request_row.object.field_disabled?)}, label: f.object.rows.first == po_request_row.object ? "HSN" : false  %>
                </div>
                <div class="col-12 col-md-1">
                  <%#= po_request_row.input :tax_rate, label: po_request.object.rows.first == po_request_row.object ? "T. rate" : false, disabled: po_request_row.object.field_disabled? %>
                  <%= po_request_row.association :tax_rate, collection: TaxRate.all, label_method: :to_s, include_blank: false, label: f.object.rows.first == po_request_row.object ? "T. rate" : false %>
                </div>
                <div class="col-12 col-md-1">
                  <%= po_request_row.input :quantity, input_html: {value: po_request_row.object.quantity, max: po_request_row.object.quantity, min: 0 }, label: f.object.rows.first == po_request_row.object ? "Qty" : false, disabled: false %>
                </div>
                <div class="col-12 col-md-1">
                  <%= po_request_row.input :measurement_unit, label: f.object.rows.first == po_request_row.object ? "UOM" : false, disabled: true %>
                  <%#= po_request_row.association :measurement_unit, label_method: :to_s, collection: selected_option_or_nil(po_request_row, :measurement_unit), include_blank: "Type to search", input_html: {class: 'select2-ajax select2-wrap-text', :'data-source' => autocomplete_overseers_measurement_units_path(is_service: !po_request_row.object.field_disabled?)}, disabled: po_request_row.object.field_disabled?, label: f.object.rows.first == po_request_row.object ? "UOM" : false  %>
                </div>
                <div class="col-12 col-md-1">
                  <%= po_request_row.input :converted_unit_selling_price, label: f.object.rows.first == po_request_row.object ? "UP" : false, disabled: po_request_row.object.field_disabled? %>
                </div>
                <div class="col-12 col-md-1">
                  <%= po_request_row.input :converted_total_selling_price, input_html: {value: po_request_row.object.converted_total_selling_price }, label: f.object.rows.first == po_request_row.object ? "TP" : false, disabled: true %>
                </div>
                <div class="col-12 col-md-1">
                  <%= po_request_row.input :converted_total_tax, input_html: {value: po_request_row.object.converted_total_tax }, label: f.object.rows.first == po_request_row.object ? "TT" : false, disabled: true %>
                </div>
                <div class="col-12 col-md-1">
                  <%= po_request_row.input :converted_total_selling_price_with_tax, input_html: {value: po_request_row.object.converted_total_selling_price_with_tax }, label: f.object.rows.first == po_request_row.object ? "TP with tax" : false, disabled: true %>
                </div>
                <div class="col-12 col-md-1">
                  <div class="d-flex flex-row align-items-center">

                    <%= po_request_row.remove_nested_fields_link do %>
                      <div class="form-group align-self-center flex-grow-1 ml-2">
                        <i class="far fa-times text-danger"></i>
                      </div>
                    <% end %>
                  </div>
                </div>

              </div>

              <hr/>
            </div>


          <% end %>

          <%# if policy(f.object).add_products? %>
          <%= f.add_nested_fields_link :rows, class: 'btn btn-success btn-outline-success btn-block mb-2 mb-md-0', role: 'button' do%>
            <i class="fal fa-plus-circle mr-1"></i>Add a product
          <% end %>
        </div>
      </div>

    </div>

    <% if action_name.capitalize == "New" %>
      <%= button_tag(type: "submit", class: "btn btn-success btn-block") do %>
        <i class="fal fa-plus-circle"></i> Create PO Request
      <% end %>
    <% else %>
      <%= button_tag(type: "submit", class: "btn btn-warning btn-block mb-2") do %>
        <i class="fal fa-pen"></i> Update PO Request
      <% end %>
    <% end %>
  <% end %>

  <% if @po_request.comments.persisted.size > 0 %>
    <div class="card">
      <div class="card-body">
        <div class="flex-fill">
          <h6 class="text-uppercase text-black-50 mb-1">Comments History</h6>
        </div>
        <div class="chats mb-3">
          <% @po_request.comments.each do |comment| %>
            <% if comment.persisted? %>
              <%= format_comment(comment) %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>