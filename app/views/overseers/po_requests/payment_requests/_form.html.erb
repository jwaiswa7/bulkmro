<div class="col-lg-12">
  <div class="page-header">
    <h2><%= action_name.capitalize %> Payment Request for PO<%= format_id(@payment_request.po_request.purchase_order.present? ? @payment_request.po_request.purchase_order.po_number : nil) %>&nbsp;<%= status_badge(@payment_request.status) %></h2>
    <p>This will <em>'<%= submit_text(@payment_request).downcase %>'</em> and log it under
      <strong><%= current_overseer.full_name %></strong>.</p>
  </div>

  <%= simple_form_for([:overseers, @po_request, @payment_request], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => '', :id => 'payment_request_form_id'}) do |f| %>
    <%= render 'shared/snippets/form_errors', f: f %>

    <%= f.hidden_field :id %>
    <%= f.hidden_field :po_request_id %>
    <%= f.hidden_field :purchase_order_id %>
    <%= f.hidden_field :inquiry_id %>
    <div class="card">
      <div class="card-header">
        <div class="form-row">
          <% if action_name.capitalize == "New" %>
            <%= button_tag(type: "submit", class: "btn btn-success btn-block payment_request_submit") do %>
              <i class="fal fa-plus-circle"></i> Create Payment Request
            <% end %>
          <% else %>
            <%= button_tag(type: "submit", class: "btn btn-warning btn-block mb-2 payment_request_submit") do %>
              <i class="fal fa-pen"></i> Update Payment Request
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="card-body pb-0">
        <div class="form-row">
          <div class="col-6">
            <%= f.association :purchase_order, disabled: true, collection: [f.object.purchase_order], label_method: :to_s, include_blank: "Supplier PO Number", input_html: {class: 'select2-ajax select2-wrap-text', :'data-source' => autocomplete_overseers_purchase_orders_path(:inquiry_number => f.object.inquiry.inquiry_number), :'data-parsley-errors-messages-disabled' => '', :'data-parsely-no-valid-feedback' => ''}, label: "Supplier PO Number" %>
          </div>

          <div class="col-6">
            <%= f.association :po_request, disabled: true, collection: [f.object.po_request], label_method: :to_s, include_blank: "PO Request Number", input_html: {class: 'select2-ajax select2-wrap-text', :'data-source' => autocomplete_overseers_po_requests_path, :'data-parsley-errors-messages-disabled' => '', :'data-parsely-no-valid-feedback' => ''}, label: "PO Request Number" %>
          </div>
          <div class="col-6">
            <%= f.association :inquiry, disabled: true, collection: [f.object.inquiry], label_method: :to_s, include_blank: "Type Inquiry Number", input_html: {class: 'select2-ajax select2-wrap-text', :'data-source' => autocomplete_overseers_inquiries_path, :'data-parsley-errors-messages-disabled' => '', :'data-parsely-no-valid-feedback' => ''}, label: "Inquiry Number" %>
          </div>
          <div class="col-6">
            <%= f.input :request_owner, as: :select, :wrapper => :custom_multi_select, collection: enum_to_collection(PaymentRequest.request_owners, alphabetical: true, keep_raw: true), :include_blank => false, label: 'Transfer the ownership to ', disabled: (f.object.request_owner == "Accounts") %>
          </div>
          <div class="col-4">
            <%= f.input :po_date, disabled: true, input_html: {:'value' => f.object.purchase_order.metadata["PoDate"]}, include_blank: "Supplier PO Date", label: "Supplier PO Date" %>
          </div>
          <div class="col-8">
            <%= f.input :description, disabled: (f.object.request_owner == "Accounts") %>
          </div>

          <%= f.simple_fields_for :inquiry do |inquiry| %>
            <div class="col-4">
              <%= inquiry.input :account, disabled: true, label: 'Customer Account' %>
            </div>
            <div class="col-4">
              <%= inquiry.input :company, disabled: true, label: 'Customer Name' %>
            </div>
            <div class="col-4">
              <%= inquiry.input :created_by, disabled: true, label: 'Name of the Requestor / IS & P' %>
            </div>
            </div>
          <% end %>
          <!--      <div class="col-12">-->
          <%#= f.input :description %>
          <!--      </div>-->
          <div class="mt-3 card-alternative ">
            <div class="form-row">
              <div class="col-4">
                <%#= f.input :status, collection: enum_to_collection(PaymentRequest.statuses, alphabetical: false, keep_raw: true), input_html: {class: 'select2-ajax select2-wrap-text', :'data-source' => grouped_statuses_overseer_payment_requests_path, :'data-parsley-errors-messages-disabled' => '', :'data-parsely-no-valid-feedback' => ''}, :include_blank => false %>
                <%= f.input :status, collection: f.object.grouped_status, as: :grouped_select, :wrapper => :custom_multi_select, group_method: :last, include_blank: true %>
              </div>
              <div class="col-4">
                <%= f.input :due_date, as: :string, input_html: {:'data-toggle' => 'datepicker'}, label: "Payment Due Date" %>
              </div>

              <div class="col-4">
                <%= f.input :purpose_of_payment, as: :select, :wrapper => :custom_multi_select, collection: enum_to_collection(PaymentRequest.purpose_of_payments, alphabetical: false, keep_raw: true), :include_blank => true %>
              </div>

              <div class="col-12">
                <%= f.input :company_bank, as: :select, collection: f.object.inquiry.company.company_banks.collect {|x| [x, x.id]}, :include_blank => false, label: "Supplier Bank Details" %>
              </div>

              <div class="col-4">
                <%= f.input :payment_option, label: "Payment Terms", input_html: {:'value' => f.object.po_request.payment_option}, disabled: true %>
              </div>
              <div class="col-4 mt-1">
                <div class="form-group mb-0">
                  <label>Remaining amount to be Paid</label>
                </div>
                <h6 class="form-group text-uppercase text-black-50 form-text mb-1"><%= format_currency(f.object.remaining_amount) %></h6>
              </div>
              <div class="col-4 mt-1">
                <div class="form-group mb-0">
                  <label>Total amount paid in Percentage</label>
                </div>
                <h6 class="form-group text-uppercase text-black-50 form-text mb-1"><%= percentage(f.object.percent_amount_paid, precision: 2) %></h6>
              </div>
            </div>
          </div>
          <div class="mt-3">
            <h6 class="form-group text-uppercase text-black-50 mb-1">Payment Request Transactions</h6>
            <div class="form-row">
              <div class="col-2">
                <div class="form-group mb-0">
                  <label>Payment Type</label>
                </div>
              </div>
              <div class="col-3">
                <div class="form-group mb-0">
                  <label>UTR or Cheque Number</label>
                </div>
              </div>
              <div class="col-2">
                <div class="form-group mb-0">
                  <label>Cheque Issue Date</label>
                </div>
              </div>
              <div class="col-2">
                <div class="form-group mb-0">
                  <label>Cheque Date</label>
                </div>
              </div>
              <div class="col-2">
                <div class="form-group mb-0">
                  <label>Amount</label>
                </div>
              </div>
            </div>
            <%= f.nested_fields_for :transactions, wrapper_tag: :div do |transaction| %>
              <div class="form-row flex-row align-items-start">
                <div class="col-2">
                  <%= transaction.input :payment_type, placeholder: 'Payment Type', :label => false, placeholder: placeholder_for(transaction, :utr_or_cheque_no), :required => policy(@payment_request).edit_payment_queue?, as: :select, disabled: !policy(@payment_request).edit_payment_queue?, :wrapper => :custom_multi_select, collection: enum_to_collection(PaymentRequestTransaction.payment_types, alphabetical: true, keep_raw: true), :include_blank => 'Select a Payment Type' %>
                </div>
                <div class="col-3">
                  <%= transaction.input :utr_or_cheque_no, placeholder: 'UTR/Cheque Number', :label => false, :required => policy(@payment_request).edit_payment_queue?, disabled: !policy(@payment_request).edit_payment_queue? %>
                </div>
                <div class="col-2">
                  <%= transaction.input :issue_date, placeholder: 'Transaction/Issue Date', :label => false, as: :string, input_html: {:'data-toggle' => 'datepicker'}, placeholder: placeholder_for(transaction, :issue_date), disabled: !policy(@payment_request).edit_payment_queue? %>
                </div>
                <div class="col-2">
                  <%= transaction.input :cheque_date, placeholder: 'Transaction/Cheque Type', :label => false, as: :string, input_html: {:'data-toggle' => 'datepicker'}, disabled: !policy(@payment_request).edit_payment_queue? %>
                </div>
                <div class="col-3">
                  <div class="d-flex">
                    <div class="flex-grow-1">
                      <%= transaction.input :amount_paid, placeholder: 'Amount', :label => false, placeholder: placeholder_for(transaction, :amount_paid), :required => policy(@payment_request).payment_request_logistics_and_accounts?, disabled: !policy(@payment_request).payment_request_logistics_and_accounts? %>
                    </div>
                    <%= transaction.remove_nested_fields_link do %>
                      <span class="align-self-center ml-2">
                        <i class="far fa-times text-danger"></i>
                      </span>
                    <% end if policy(transaction.object).destroy? %>
                  </div>
                </div>
              </div>
            <% end %>
            <% if f.object.remaining_amount > 0.0 %>
              <div class="form-row">
                <div class="col-md-6">
                  <%= f.add_nested_fields_link :transactions, class: 'btn btn-outline-success btn-block mb-2 mb-md-0' do %>
                    <i class="fal fa-plus-circle mr-1"></i>Add payment transaction
                  <% end %>
                </div>
                <div class="col-md-6">
                  <%= button_tag(type: "submit", class: "btn btn-warning btn-block mb-2 payment_request_submit") do %>
                    <i class="fal fa-pen"></i>  Save payment transaction
                  <% end %>
                </div>
              </div>
            <% else %>
              <div class="form-row">
                <div class="col-md-6">
                  <%= f.add_nested_fields_link :transactions, class: 'btn btn-outline-success btn-block mb-2 mb-md-0 disabled' do %>
                    <i class="fal fa-plus-circle mr-1"></i>Add payment transaction
                  <% end %>
                </div>
                <div class="col-md-6">
                  <%= button_tag(type: "submit", class: "btn btn-warning btn-block mb-2 payment_request_submit disabled") do %>
                    <i class="fal fa-pen"></i>  Save payment transaction
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
          <div class="mt-3 card-alternative">
            <div class="form-row">
              <div class="col-12 col-md-12">
                <div class="d-block d-md-flex align-items-end">
                  <div class="flex-grow-1">
                    <%= f.input :attachments, wrapper: :custom_file, input_html: {multiple: true}, label: 'Attachments' %>
                  </div>
                  <div class="form-group">
                    <% f.object.attachments.each do |attachment| %>
                      <%= link_to url_for(attachment), class: 'ml-md-1 btn btn-success', target: '_blank', :"data-toggle" => 'tooltip', :status => attachment.filename do %>
                        <i class="fal fa-download"></i>
                        <%= link_to overseers_attachment_path(attachment.id), class: 'btn btn-outline-danger btn-sm ml-1 mr-1 mr-md-0', method: :delete, data: {confirm: 'Are you sure?'}, :"data-toggle" => 'tooltip', :status => ['Delete', ' ', attachment.filename, '?'].join('') do %>
                          <i class="fal fa-trash-alt"></i>
                        <% end if attachment.present? && policy(:attachment).destroy? %>
                      <% end %>
                    <% end if f.object.attachments.attached? %>
                  </div>
                </div>
              </div>

              <% if @payment_request.inquiry.attachments.present? %>
                <div class="form-row col-12 col-md-12">
                  <div class="col-6">
                    <strong class="d-block">Customer Purchase Order</strong>
                    <%= link_to @payment_request.inquiry.customer_po_sheet, target: '_blank' do %>
                      <%= @payment_request.inquiry.customer_po_sheet.filename %>
                    <% end if @payment_request.inquiry.customer_po_sheet.attached? %>
                  </div>
                  <% if @payment_request.purchase_order.present? %>
                    <div class="col-6">
                      <strong class="d-block">Supplier Purchase Order</strong>
                      <% if policy(@payment_request.purchase_order).show? %>
                        <%= link_to overseers_inquiry_purchase_order_path(@payment_request.inquiry, @payment_request.purchase_order, format: :pdf), target: '_blank' do %>
                          <%= @payment_request.purchase_order.filename(include_extension: true) %>
                        <% end %>
                      <% else %>
                        <%= @payment_request.purchase_order.filename(include_extension: true) %>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              <% end %>

              <div class="col-12 mt-2">
                <%= f.nested_fields_for :comments, f.object.comments.build(:overseer => current_overseer) do |payment_request_comment| %>
                  <%= payment_request_comment.hidden_field :created_by_id %>
                  <%= payment_request_comment.hidden_field :updated_by_id %>
                  <%= payment_request_comment.input :message, :placeholder => 'Type message', input_html: {:'data-parsely-no-valid-feedback' => ''} %>
                <% end %>
              </div>
            </div>
          </div>
          </div>
    </div>
    <div class="card-footer">
      <div class="form-row">
        <% if action_name.capitalize == "New" %>
          <%= button_tag(type: "submit", class: "btn btn-success btn-block payment_request_submit") do %>
            <i class="fal fa-plus-circle"></i> Create Payment Request
          <% end %>
        <% else %>
          <%= button_tag(type: "submit", class: "btn btn-warning btn-block mb-2 payment_request_submit") do %>
            <i class="fal fa-pen"></i> Update Payment Request
          <% end %>
        <% end %>
  <% end %>
  </div>
  </div>

  <% if action_name.capitalize != "New" %>
    <div class="card">
      <div class="card-body">
        <div class="flex-fill">
          <h6 class="text-uppercase text-black-50 mb-1">Comments History</h6>
        </div>

        <% if @payment_request.comments.persisted.size > 0 %>
          <div class="chats">
            <% @payment_request.comments.each do |comment| %>
              <% if comment.persisted? %>
                <%= format_comment(comment) %>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
