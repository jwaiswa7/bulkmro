<script>
  $(document).on('focusin','.due_datepicker',function(e) {
    $(this).datepicker();
    $(".gj-icon").hide();
  });
  
  $('.select_row').change(function() {
    if(this.checked) {
      let rows_total_amount = parseFloat($(".rows-total-amount").text())
      let rows_payable_amount = parseFloat($(".rows-payable-amount").text())      
      let row_amount = parseFloat($(this).closest('tr').find('.gross_price').text())       
      rows_total_amount = parseFloat(rows_total_amount + row_amount)            
      rows_payable_amount = parseFloat(rows_payable_amount + row_amount)
      
      $(".rows-total-amount").text(rows_total_amount)
      $(".rows-payable-amount").text(rows_payable_amount)
    }
    else{
      let rows_total_amount = parseFloat($(".rows-total-amount").text())
      let rows_payable_amount = parseFloat($(".rows-payable-amount").text())      
      let row_amount = parseFloat($(this).closest('tr').find('.gross_price').text())       
      rows_total_amount = parseFloat(rows_total_amount - row_amount)            
      rows_payable_amount = parseFloat(rows_payable_amount - row_amount)
      
      $(".rows-total-amount").text(rows_total_amount)
      $(".rows-payable-amount").text(rows_payable_amount)
    }
  });
</script>
