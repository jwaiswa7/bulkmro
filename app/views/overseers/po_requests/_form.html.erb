<% content_for :page_title do %>
  <%= @po_request.readable_status %>
<% end %>
<%= provide :container_fluid, true %>
<div class="col-lg-12">
  <div class="page-header">
    <h2><%= action_name.capitalize %> <%= @po_request.readable_status %> for
      Order <%= format_id(@po_request.sales_order.order_number) %></h2>
    <p>This will <em>'<%= @po_request.new_record? ? 'Create' : 'Update' %> <%= @po_request.readable_status %>'</em> and log it
      under
      <strong><%= current_overseer.full_name %></strong>.</p>
  </div>

  <%= simple_form_for([:overseers, @po_request], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= render 'shared/snippets/form_errors', f: f %>
    <div class="form-row">
      <div class="col-4">
        <%= f.association :sales_order, disabled: true, collection: [f.object.sales_order], label_method: :to_s, include_blank: "Type Order Number", input_html: {class: 'select2-ajax select2-wrap-text', :'data-source' => autocomplete_overseers_sales_orders_path, :'data-parsley-errors-messages-disabled' => '', :'data-parsely-no-valid-feedback' => ''}, label: "Order Number" %>
      </div>
      <div class="col-4">
        <%= f.association :inquiry, disabled: true, collection: [f.object.inquiry], label_method: :to_s, include_blank: "Type Inquiry Number", input_html: {class: 'select2-ajax select2-wrap-text', :'data-source' => autocomplete_overseers_inquiries_path, :'data-parsley-errors-messages-disabled' => '', :'data-parsely-no-valid-feedback' => ''}, label: "Inquiry Number" %>
      </div>
      <div class="col-4">
        <%= f.input :customer_committed_date, input_html: {value: f.object.sales_order.customer_committed_date}, label: 'Customer Committed Date', disabled: true, :wrapper => :custom_multi_select, include_blank: 'Committed Date' %>
      </div>
    </div>

    <div class="card mb-2">
      <div class="card-body">
        <div class="form-row">
          <a href="#" class="btn btn-default btn-danger align-self-center add-review col-2 mr-3" data-toggle="modal" data-target="#modalRatingForm" >Add/Edit Supplier Rating</a>
          <h5 class="text-uppercase mt-2">
            <strong><%= f.object.supplier.to_s %></strong>
          </h5>

        </div>

        <%= render 'overseers/po_requests/rows_form', f: f , product_path: service_autocomplete_overseers_products_path, stock: false%>
      </div>
    </div>
    <% if action_name.capitalize == "New" %>
      <%= button_tag(type: "submit", class: "btn btn-success btn-block") do %>
        <i class="fal fa-plus-circle"></i> Create PO Request
      <% end %>
    <% else %>
      <%= button_tag(type: "submit", class: "btn btn-warning btn-block mb-2") do %>
        <i class="fal fa-pen"></i> Update PO Request
      <% end %>
    <% end %>
  <% end %>

  <% if @po_request.comments.persisted.size > 0 %>
    <div class="col-lg-12">
      <div class="card">
        <div class="card-body">
          <div class="flex-fill">
            <h6 class="text-uppercase text-black-50 mb-1">Comments History</h6>
          </div>
          <div class="chats mb-3">
            <% @po_request.comments.each do |comment| %>
              <% if comment.persisted? %>
                <%= format_comment(comment) %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>