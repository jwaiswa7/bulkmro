<% content_for :page_title do %>
  <%= @po_request.readable_status %>
<% end %>
<%= provide :container_fluid, true %>
<div class="col-lg-12">
  <div class="page-header">
    <h2><%= action_name.capitalize %> <%= @po_request.readable_status %> for Order <%= format_id(@po_request.sales_order.order_number) %></h2>
    <p>This will <em>'<%= submit_text(@po_request, use_alias: @po_request.readable_status) %>'</em> and log it
      under
      <strong><%= current_overseer.full_name %></strong>.</p>
  </div>

  <%= simple_form_for([:overseers, @po_request], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= render 'shared/snippets/form_errors', f: f %>

    <%= f.hidden_field :id %>
    <%= f.hidden_field :sales_order_id %>
    <%= f.hidden_field :inquiry_id %>

    <div class="form-row">
      <div class="col-6">
        <%= f.association :sales_order, disabled: true, collection: [f.object.sales_order], label_method: :to_s, include_blank: "Type Order Number", input_html: {class: 'select2-ajax select2-wrap-text', :'data-source' => autocomplete_overseers_sales_orders_path, :'data-parsley-errors-messages-disabled' => '', :'data-parsely-no-valid-feedback' => ''}, label: "Order Number" %>
      </div>
      <div class="col-6">
        <%= f.association :inquiry, disabled: true, collection: [f.object.inquiry], label_method: :to_s, include_blank: "Type Inquiry Number", input_html: {class: 'select2-ajax select2-wrap-text', :'data-source' => autocomplete_overseers_inquiries_path, :'data-parsley-errors-messages-disabled' => '', :'data-parsely-no-valid-feedback' => ''}, label: "Inquiry Number" %>
      </div>
      <div class="col-6">
        <%= f.input :supplier_po_type, collection: enum_to_collection(PoRequest.supplier_po_types, alphabetical: false), as: :select, :wrapper => :custom_multi_select, :include_blank => false, label: 'Supplier PO Type' %>
      </div>

      <div class="col-6">
        <%= f.input :customer_committed_date, input_html: {value: f.object.sales_order.customer_committed_date}, label: 'Customer Committed Date', disabled: true, :wrapper => :custom_multi_select, include_blank: 'Committed Date' %>
      </div>

      <div class="col-6">
        <%#= f.input :purchase_order_number %>
        <%= f.association :purchase_order, collection: [f.object.purchase_order], label_method: :to_s, include_blank: "Type Supplier PO Number", input_html: {class: 'select2-ajax select2-wrap-text', :'data-source' => autocomplete_overseers_purchase_orders_path(:inquiry_number => f.object.inquiry.inquiry_number, :has_po_request => true), :'data-parsley-errors-messages-disabled' => '', :'data-parsely-no-valid-feedback' => ''}, label: "Supplier PO Number", disabled: !policy(@po_request).is_logistics? %>
      </div>

      <div class="col-6">
        <% if policy(@po_request).can_cancel? %>
          <%= f.input :status, as: :select, :wrapper => :custom_multi_select, collection: enum_to_collection(PoRequest.statuses.reject {|status| ["Requested", "Rejected"].include?(status)}, alphabetical: false, keep_raw: true), :include_blank => false %>
        <% elsif policy(@po_request).can_reject? %>
          <%= f.input :status, as: :select, :wrapper => :custom_multi_select, collection: enum_to_collection(PoRequest.statuses.reject {|status| ["PO Created", "Cancelled", "Amend"].include?(status)}, alphabetical: false, keep_raw: true), :include_blank => false %>
        <% elsif policy(@po_request).can_update_rejected_po_requests? %>
          <%= f.input :status, as: :select, :wrapper => :custom_multi_select, collection: enum_to_collection(PoRequest.statuses.reject {|status| ["PO Created", "Cancelled", "Amend"].include?(status)}, alphabetical: false, keep_raw: true), :include_blank => false, :disabled => ['Rejected'] %>
        <% elsif policy(@po_request).can_process_amended_po_requests? %>
          <%= f.input :status, as: :select, :wrapper => :custom_multi_select, collection: enum_to_collection(PoRequest.statuses.reject {|status| ["Requested", "Rejected", "Cancelled"].include?(status)}, alphabetical: false, keep_raw: true), :include_blank => false, :disabled => ['Rejected'] %>
        <% else %>
          <%= f.input :status, as: :select, :wrapper => :custom_multi_select, collection: enum_to_collection(PoRequest.statuses, alphabetical: false), disabled: true, :include_blank => false %>
        <% end %>
      </div>

      <div class="col-6">
        <%= f.input :supplier_committed_date, input_html: {:'data-toggle' => 'datepicker', value: f.object.supplier_committed_date.to_s}, as: :string, label: 'Supplier Committed Date', disabled: true %>
      </div>

      <div class="col-6 d-none status-rejected">
        <%= f.input :rejection_reason, as: :select, :wrapper => :custom_multi_select, collection: enum_to_collection(PoRequest.rejection_reasons, alphabetical: false), disabled: !policy(@po_request).can_reject?, :include_blank => true %>
      </div>
      <div class="col-6 d-none status-cancelled">
        <%= f.input :cancellation_reason, disabled: !(policy(@po_request).can_cancel?), :include_blank => true %>
      </div>
      <div class="col-12 col-md-6">
        <%= f.association :contact, as: :select, collection: f.object.supplier.contacts, :include_blank => false %>
      </div>
      <div class="col-12 col-md-6">
        <%= f.input :contact_email, label: 'Contact Email', required: false, placeholder: 'If left blank, above selected contact\'s email will be applied'   %>
      </div>
      <div class="col-12 col-md-6">
        <%= f.input :contact_phone, label: 'Contact Phone', required: false, placeholder: 'If left blank, above selected contact\'s number will be applied'  %>
      </div>
      <div class="col-md-6">
        <%= f.association :logistics_owner, as: :select, :include_blank => false %>
      </div>
      <div class="col-md-6">
        <div class="d-flex flex-row align-items-end">
          <div class="flex-grow-1">
            <%= f.input :attachments, wrapper: :custom_file, input_html: {multiple: true}, label: 'Attachments' %>
          </div>
          <div class="form-group">
            <% f.object.attachments.each do |attachment| %>
              <%= link_to url_for(attachment), class: 'ml-md-1 btn btn-success', target: '_blank', :"data-toggle" => 'tooltip', :status => attachment.filename do %>
                <i class="fal fa-download"></i>
                <%= link_to overseers_attachment_path(attachment.id), class: 'btn btn-outline-danger btn-sm ml-1 mr-1 mr-md-0', method: :delete, data: {confirm: 'Are you sure?'}, :"data-toggle" => 'tooltip', :status => ['Delete', ' ', attachment.filename, '?'].join('') do %>
                  <i class="fal fa-trash-alt"></i>
                <% end if attachment.present? && policy(:attachment).destroy? %>
              <% end %>
            <% end if f.object.attachments.attached? %>
          </div>
        </div>
      </div>

      <div class="col-12">
        <%= f.nested_fields_for :comments, f.object.comments.build(:overseer => current_overseer) do |po_request_comment| %>
          <%= po_request_comment.hidden_field :created_by_id %>
          <%= po_request_comment.hidden_field :updated_by_id %>
          <%= po_request_comment.input :message, :placeholder => 'Type message', input_html: {:'data-parsely-no-valid-feedback' => ''} %>
        <% end %>
      </div>

    </div>

    <div class="card mb-2">
      <div class="card-body">
        <div class="chats">
          <h5 class="text-uppercase">
            <strong><%= f.object.supplier.to_s %></strong>
          </h5>
          <div class="form-row">
            <div class="col-12 col-md-6">
              <%= f.association :bill_from, collection: Address.where(:company_id => f.object.supplier_id).map {|supplier_address| [supplier_address.to_s, supplier_address.id, {'data-supplier-state' => supplier_address.state.id}]}, input_html: {class: 'select2-single'}, required: true %>
            </div>
            <div class="col-12 col-md-6">
              <%= f.association :ship_from, collection: selected_option_or_nil(f, :ship_from), label_method: :to_s, input_html: {class: 'select2-ajax', :'data-source' => autocomplete_overseers_company_addresses_path(f.object.supplier)}, required: true %>
            </div>
            <div class="col-12 col-md-6">
              <%= f.association :bill_to, collection: Warehouse.all.map {|warehouse| [warehouse.to_s, warehouse.id, {'data-warehouse' => warehouse.address.city_name.try(:strip) || 'N/A', 'data-warehouse-state' => warehouse.address.state.id}]}, input_html: {class: 'select2-single', 'data-warehouse-list': Warehouse.all.map {|warehouse| [warehouse.address.state.id]}.uniq, 'data-parsley-locations': [f.object.inquiry.bill_from.address.city_name, f.object.inquiry.shipping_address.city_name, f.object.inquiry.bill_from.address.state.id].join(',')}, required: true %>
            </div>
            <div class="col-12 col-md-6">
              <%= f.association :ship_to, collection: Warehouse.all.map {|warehouse| [warehouse.to_s, warehouse.id, {'data-warehouse' => warehouse.address.city_name.try(:strip) || 'N/A', 'data-warehouse-state' => warehouse.address.state.id}]}, input_html: {class: 'select2-single', 'data-warehouse-list': Warehouse.all.map {|warehouse| [warehouse.address.state.id]}.uniq, 'data-parsley-locations': [f.object.inquiry.bill_from.address.city_name, f.object.inquiry.shipping_address.city_name, f.object.inquiry.bill_from.address.state.id].join(',')}, required: true %>
            </div>
          </div>
            <div class="col-6">
              <% if f.object.contact %>
                <div class="form-group">
                  <label class="form-control-label d-block">Contact</label>
                  <strong><%= f.object.contact %></strong><br>
                  <% if f.object.contact_email.present? %>
                    <strong>Email: </strong><%= f.object.contact_email %><br>
                  <% end %>
                  <% if f.object.contact_phone.present? %>
                    <strong>Phone: </strong><%= f.object.contact_phone %>
                  <% end %>
                </div>
              <% end %>
            </div>
            <div class="col-6">
              <div class="form-group">
                <label class="form-control-label d-block">Payment Terms: </label><%= f.object.payment_option %>
                <%#= f.association :payment_option, label: 'Payment terms', disabled: true, :wrapper => :custom_multi_select, include_blank: 'Select a Payment Option' %>
              </div>
            </div>
          </div>

            <%= render 'overseers/po_requests/rows_form', po_request: f %>
        </div>
      </div>
    </div>

    <% if action_name.capitalize == "New" %>
      <%= button_tag(type: "submit", class: "btn btn-success btn-block") do %>
        <i class="fal fa-plus-circle"></i> Create PO Request
      <% end %>
    <% else %>
      <%= button_tag(type: "submit", class: "btn btn-warning btn-block mb-2") do %>
        <i class="fal fa-pen"></i> Update PO Request
      <% end %>
    <% end %>
  <% end %>

  <% if @po_request.comments.persisted.size > 0 %>
    <div class="col-lg-12">
      <div class="card">
        <div class="card-body">
          <div class="flex-fill">
            <h6 class="text-uppercase text-black-50 mb-1">Comments History</h6>
          </div>
          <div class="chats mb-3">
            <% @po_request.comments.each do |comment| %>
              <% if comment.persisted? %>
                <%= format_comment(comment) %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>