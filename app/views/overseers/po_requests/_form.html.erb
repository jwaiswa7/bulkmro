<div class="col-lg-12">
  <div class="page-header">
    <h2><%= action_name.capitalize %> Purchase Order Request</h2>
    <p>This will <em>'<%= submit_text(@po_request).downcase %>'</em> and log it under
      <strong><%= current_overseer.full_name %></strong>.</p>
  </div>

  <%= simple_form_for([:overseers, @po_request], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= render 'shared/snippets/form_errors', f: f %>

    <%= f.hidden_field :id %>
    <%= f.hidden_field :sales_order_id %>
    <%= f.hidden_field :inquiry_id %>

    <div class="form-row">
      <div class="col-6">
        <%= f.association :sales_order, disabled: true, collection: [f.object.sales_order], label_method: :to_s, include_blank: "Type Order Number", input_html: {class: 'select2-ajax select2-wrap-text', :'data-source' => autocomplete_overseers_sales_orders_path, :'data-parsley-errors-messages-disabled' => '', :'data-parsely-no-valid-feedback' => ''}, label: "Order Number" %>
      </div>
      <div class="col-6">
        <%= f.association :inquiry, disabled: true, collection: [f.object.inquiry], label_method: :to_s, include_blank: "Type Inquiry Number", input_html: {class: 'select2-ajax select2-wrap-text', :'data-source' => autocomplete_overseers_inquiries_path, :'data-parsley-errors-messages-disabled' => '', :'data-parsely-no-valid-feedback' => ''}, label: "Inquiry Number" %>
      </div>
      <div class="col-6">
        <%= f.input :purchase_order_number %>
        <%#= f.association :purchase_order_number, collection: [PurchaseOrder.find_by_po_number(:purchase_order_number)], label_method: :to_s, include_blank: "Type Inquiry Number", input_html: {class: 'select2-ajax select2-wrap-text', :'data-source' => autocomplete_overseers_purchase_orders_path, :'data-parsley-errors-messages-disabled' => '', :'data-parsely-no-valid-feedback' => ''}, label: "Purchase Order Number" %>
      </div>
      <div class="col-6">
        <%= f.input :status, as: :select, :wrapper => :custom_multi_select, collection: enum_to_collection(PoRequest.statuses, alphabetical: false), :include_blank => false %>
      </div>

      <div class="col-12 col-md-12">
        <div class="d-block d-md-flex align-items-end">
          <div class="flex-grow-1">
            <%= f.input :attachments, wrapper: :custom_file, input_html: {multiple: true}, label: 'Attachments' %>
          </div>
          <div class="form-group">
            <% f.object.attachments.each do |attachment| %>
              <%= link_to url_for(attachment), class: 'ml-md-1 btn btn-success', target: '_blank', :"data-toggle" => 'tooltip', :title => attachment.filename do %>
                <i class="fal fa-download"></i>
                <%= link_to overseers_attachment_path(attachment.id), class: 'btn btn-outline-danger btn-sm ml-1 mr-1 mr-md-0', method: :delete, data: {confirm: 'Are you sure?'}, :"data-toggle" => 'tooltip', :title => ['Delete', ' ', attachment.filename, '?'].join('') do %>
                  <i class="fal fa-trash-alt"></i>
                <% end if attachment.present? && policy(:attachment).destroy? %>
              <% end %>
            <% end if f.object.attachments.attached? %>
          </div>
        </div>
      </div>

      <div class="col-12">
        <%= f.nested_fields_for :comments, f.object.comments.build(:overseer => current_overseer) do |purchase_order_comment| %>
          <%= purchase_order_comment.hidden_field :created_by_id %>
          <%= purchase_order_comment.hidden_field :updated_by_id %>
          <%= purchase_order_comment.input :message, :placeholder => 'Type message', input_html: {:'data-parsely-no-valid-feedback' => ''} %>
        <% end %>
      </div>

    </div>


    <% if @po_request.po_request_rows.present? %>
      <div class="mt-3">
        <h6 class="text-uppercase text-black-50 mb-1">Products</h6>
        <div class="form-row d-none d-md-flex">
          <div class="col-6">
            <div class="form-group mb-0">
              <label>Product</label>
            </div>
          </div>

          <div class="col-1">
            <div class="form-group mb-0">
              <label>Quantity</label>
            </div>
          </div>

        </div>

        <%= f.nested_fields_for :po_request_products, wrapper_tag: :div do |po_product| %>
          <div class="form-row flex-row align-items-start">
            <%= po_product.hidden_field :id %>
            <%= po_product.hidden_field :sales_order_row_id %>
            <div class="col-5">
              <div class="select2-wrap">
                <%= po_product.association :product, collection: [po_product.object.product], label_method: :to_s, include_blank: "Type SKU number, name, or brand", input_html: {class: 'select2-ajax select2-wrap-text', :'data-source' => autocomplete_overseers_products_path, :'data-parsley-errors-messages-disabled' => '', :'data-parsely-no-valid-feedback' => ''}, label: false %>
              </div>
            </div>

            <div class="col-5">
              <div class="d-flex flex-row align-items-center">
                <div class="col-2 ">
                  <%#= po_product.input :quantity, :label => false, placeholder: placeholder_for(po_product, :quantity), input_html: {:'data-parsley-errors-messages-disabled' => '', :'data-parsely-no-valid-feedback' => ''} %>
                </div>
                <div class="col-1 ">
                  <%= po_product.remove_nested_fields_link do %>
                    <div class="form-group align-self-center flex-grow-1 ml-2">
                      <i class="far fa-times text-danger"></i>
                    </div>
                  <% end if policy(po_product.object).destroy? %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <% if action_name.capitalize == "New" %>
      <%= button_tag(type: "submit", class: "btn btn-success btn-block") do %>
        <i class="fal fa-plus-circle"></i> Create PO Request
      <% end %>
    <% else %>
      <%= button_tag(type: "submit", class: "btn btn-warning btn-block mb-2") do %>
        <i class="fal fa-pen"></i> Update PO Request
      <% end %>
    <% end %>
  <% end %>

  <% if action_name.capitalize != "New" %>
    <div class="card">
      <div class="card-body">
        <div class="flex-fill">
          <h6 class="text-uppercase text-black-50 mb-1">Comments History</h6>
        </div>

        <% if @po_request.comments.persisted.size > 0 %>
          <div class="chats mb-3">
            <% @po_request.comments.each do |comment| %>
              <% if comment.persisted? %>
                <div class="media chat-item">
                  <div class="media-body">
                    <div class="chat-item-title">
                      <span class="chat-item-author"><%= comment.created_by.full_name if comment.created_by.present? %></span>
                      <span><%= time_ago_in_words(comment.created_at) if comment.created_at.present? %> ago</span>
                    </div>
                    <div class="chat-item-body">
                      <p><%= comment.message %></p>
                    </div>
                  </div>
                </div>
              <% end %>

            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
