<%= provide :container_fluid, true %>
<div class="col-lg-12">
  <section class="pt-3 pt-lg-4 pb-2">
    <div class="d-md-flex justify-content-between">
      <h3 class="display-5 d-flex align-items-center">
        <%= @sales_receipt %>
      </h3>
    </div>
  </section>
  <section class="mb-3">
    <div class="card">
      <div class="card-body">
        <h6 class="text-uppercase text-black-50 mb-1">Company Details</h6>
        <div class="form-row">
          <div class="col-6 col-md-4 mb-2">
            <strong class="d-block">
              SAP Reference No
            </strong>
            <%= @sales_receipt.remote_reference %>
          </div>
          <div class="col-6 col-md-4 mb-2">
            <strong class="d-block">
              Payment Type:
            </strong>
            <%= @sales_receipt.payment_type %>
          </div>
          <div class="col-6 col-md-4 mb-2">
            <strong class="d-block">
              Payment Method:
            </strong>
            <%= @sales_receipt.payment_method %>
          </div>
        </div>
        <div class="form-row">
          <div class="col-6 col-md-4 mb-2">
            <strong class="d-block">
              Amount Received
            </strong>
            <%= @sales_receipt.payment_amount_received %>
          </div>
          <div class="col-6 col-md-4 mb-2">
            <strong class="d-block">
              Payment Received Date
            </strong>
            <%= @sales_receipt.payment_received_date %>
          </div>
          <div class="col-6 col-md-4 mb-2">
            <strong class="d-block">
              Currency
            </strong>
            <%= @sales_receipt.currency %>
          </div>
          <div class="col-12 col-md-12 mb-2">
            <strong class="d-block">
              Comments
            </strong>
            <%= @sales_receipt.comments %>
          </div>
        </div>
      </div>
    </div>
  </section>

</div>