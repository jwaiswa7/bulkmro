<div class="col-lg-12">
  <div class="page-header">
    <h2><%= action_name.capitalize %> Warehouse</h2>
    <p>This will <em>'<%= submit_text(@warehouse).downcase %>'</em> and log it under
      <strong><%= current_overseer.full_name %></strong>.</p>
  </div>
  <%= simple_form_for([:overseers, @warehouse], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <div class="form-group">
      <%= f.input :name, label: 'Warehouse Name', :placeholder => 'e.g. Reliance Industries', :required => 'true', :class => 'form-control' %>
    </div>
    <%= f.simple_fields_for :address do |address| %>
       <div class="form-group">
          <%= address.input :street1, label:"Street1"  %>
        </div>
        <div class="form-group">
          <%= address.input :street2, label:"Street2"  %>
        </div>
        <div class="form-row">
          <div class="col-6 col-md-3">
            <%= address.input :country_code, as: :country, :required => true, :wrapper => :custom_multi_select, priority_countries: ["IN", "US"] %>
          </div>

            <div class="col-6 col-md-3">
              <%= address.association :state, :wrapper => :custom_multi_select, collection: AddressState.indian %>
            </div>

          <div class="col-6 col-md-3">
            <%= address.input :city_name %>
          </div>
          <div class="col-6 col-md-3">
            <%= address.input :pincode %>
          </div>
          <%= f.input :is_active %>
        </div>
    <% end %>

    <%= action_button(action_name, @warehouse) %>
  <% end %>
</div>