<div class="col-lg-12">
  <div class="page-header">
    <h2><%= action_name.capitalize %> Company Bank</h2>
<!--    <p>This will <em>'<%#= submit_text(@company_bank).downcase %>'</em> and log it under-->
<!--      <strong><%#= current_overseer.full_name %></strong>.</p>-->
  </div>

  <%= simple_form_for(@company_bank, url: action_name == 'edit' ? overseers_company_company_banks_path(@company.to_param) : overseers_company_company_banks_path(:company_id => @company.to_param), :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= f.hidden_field :company_id %>
    <%= render 'shared/snippets/form_errors', f: f %>

    <div class="form-row">
      <div class="col-12">
        <%= f.input :company, disabled: true %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-12">
        <%= f.input :country_code, as: :country, :required => true, :wrapper => :custom_multi_select, priority_countries: ["IN", "US"] %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-12">
        <%= f.input :name, required: true %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-4">
        <%= f.input :code, required: true %>
      </div>

      <div class="col-4">
        <%= f.input :branch, required: true %>
      </div>

      <div class="col-4">
        <%= f.input :ifsc_code, required: true, label: "IFSC Code" %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-6">
        <%= f.input :account_name, required: true, label: "Account Name" %>
      </div>

      <div class="col-6">
        <%= f.input :account_number, required: true, label: "Account Number" %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-12">
        <%= f.input :address_line_1, required: true, label: "Address Line 1" %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-12">
        <%= f.input :address_line_2, label: "Address Line 2" %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-6">
        <%= f.input :beneficiary_email, label: "Beneficiary Email" %>
      </div>

      <div class="col-6">
        <%= f.input :beneficiary_mobile, required: true, label: "Beneficiary Mobile Number", input_type: "number" %>
      </div>
    </div>

    <% if action_name.capitalize == "New" %>
      <%= button_tag(type: "submit", class: "btn btn-success btn-block") do %>
        <i class="fal fa-plus-circle"></i> <%= submit_text(@company_bank) %>
      <% end %>
    <% else %>
      <%= button_tag(type: "submit", class: "btn btn-warning btn-block") do %>
        <i class="fal fa-pen"></i> <%= submit_text(@company_bank) %>
      <% end %>
    <% end %>
  <% end %>
</div>