<div class="col-lg-12">
  <%= render 'shared/snippets/page_header', e: @company_bank %>

  <%= simple_form_for([:overseers, @company, @company_bank], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => '',:id => 'company_bank_form'}) do |f| %>
    <%= f.hidden_field :company_id %>
    <%= f.hidden_field :action_name, value: action_name %>
    <%= render 'shared/snippets/form_errors', f: f %>
    <div class="form-row">
      <div class="col-12">
        <%= f.input :company, disabled: true %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-6">
        <%= f.association :bank, collection: Bank.all, required: true, prompt: "Choose a bank" %>
      </div>

      <div class="col-6">
        <%= f.input :branch, required: true %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-12">
        <%= f.input :account_name, required: true, label: "Account Name" %>
      </div>
    </div>
    <div class="form-row">
      <div class="<% if action_name != 'edit'%>col-6<% else %> col-12<% end %>">
        <%= f.input :account_number, required: true, label: "Account Number" %>
      </div>
      <% if action_name != 'edit' %>
        <div class="col-6">
          <%= f.input :account_number_confirmation, required: true, label: "Confirm Account Number" %>
        </div>
      <% end %>
    </div>

    <div class="form-row">
      <div class="col-12">
        <%= f.input :address_line_1, required: true, label: "Address Line 1" %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-12">
        <%= f.input :address_line_2, label: "Address Line 2" %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-6">
        <%= f.input :beneficiary_email, label: "Beneficiary Email" %>
      </div>

      <div class="col-6">
        <%= f.input :beneficiary_mobile, label: "Beneficiary Mobile Number", input_type: "number", input_html: { placeholder: "+91" } %>
      </div>
    </div>

    <%= action_button(action_name, @company_bank) %>
  <% end %>
</div>