<div class="col-lg-12">
  <section class="pt-3 pt-lg-4 pb-2">
    <div class="d-md-flex justify-content-between">
      <h3 class="display-5 d-flex align-items-center">
        <%= @company_bank.bank.name %>
      </h3>
      <a href="<%= edit_overseers_company_company_bank_path(@company, @company_bank) %>" class="btn btn-warning btn-rounded align-self-center btn-block-sm-down bmro-button">
        <i class="fal fa-pen mr-1"></i>Edit Bank Details
      </a>
    </div>
  </section>

  <section class="mb-3">
    <div class="card">
      <div class="card-body">
        <div>
          <h6 class="text-uppercase text-black-50 mb-1">Bank Details</h6>
          <div class="form-row">
            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Name</strong>
              <%= @company_bank.bank.name %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Code</strong>
              <%= @company_bank.bank.code %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">IFSC Code</strong>
              <%= @company_bank.ifsc_code_number %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Account Name</strong>
              <%= @company_bank.account_name %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Account Number</strong>
              <%= @company_bank.account_number %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Branch</strong>
              <%= @company_bank.branch %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Swift Number</strong>
              <%= @company_bank.bank.swift_number %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Beneficiary Email</strong>
              <%= @company_bank.beneficiary_email %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Beneficiary Mobile</strong>
              <%= @company_bank.beneficiary_mobile %>
            </div>
          </div>
          <div class="form-row">
            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Address Line 1</strong>
              <%= @company_bank.address_line_1 %>
            </div>

            <% if @company_bank.address_line_2.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Address Line 2</strong>
                <%= @company_bank.address_line_2 %>
              </div>
            <% end %>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Country</strong>
              <%= @company_bank.bank.country_name %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>