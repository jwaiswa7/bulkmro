<div class="tab-pane fade active show" id="purchase-orders" role="tabpanel">
  <% content_for :ajax_url, flush: true do %><%= overseers_company_purchase_orders_path(company_id: company.id, via_sales_orders: true) %>
  <% end %>
  <!--          <p class="mt-md-1 d-none d-md-block">-->
  <!--            All inquiries filterable in any way that we want under <strong><%#= company.name %></strong>.-->
