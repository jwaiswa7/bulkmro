<%= provide :container_fluid, true %>
<div class="col-lg-12">
  <section class="pt-3 pt-lg-4 pb-2">
    <div class="d-md-flex justify-content-between">
      <h3 class="display-5 d-flex align-items-center bmro-form-heading">
        <a href="<%= overseers_account_path(@company.account) %>"><img src="https://ui-avatars.com/api/?size=128&name=<%= @company.account.name %>&rounded=true&font-size=0.5&background=0D8ABC&color=fff" height="35" class="pr-2"/></a><%= @company.name %>
        &nbsp;<%= format_star(@company.rating) if @company.rating.present? && @company.rating > 0 %>
      </h3>

      <% if is_authorized(@company, 'edit') %>
        <a href="<%= edit_overseers_account_company_path(@company.account, @company) %>" class="btn btn-warning bmro-button btn-rounded align-self-center btn-block-sm-down"><i class="bmro-update-icon"></i>Edit
          Company</a>
      <% end %>
    </div>
  </section>

  <section class="mb-3">
    <div class="card">
      <div class="form-row">
        <div class="col-lg-12">
          <% if @company.is_customer? %>
          <%= render partial: 'single_company_report', locals: {company: @company} %>
            <% end %>
        </div>
      </div>
    </div>
  </section>

  <section class="mb-3">
    <div class="card">
      <div class="card-body">
        <% if @company.logo.attached? %>
          <div class="form-row mb-3">
            <div class="col-md-2 col-xs-12">
              <img src="<%= url_for(@company.logo) %>" alt="<%= @company.name %>">
            </div>
          </div>
        <% end %>
        <% if @company.site? || @company.default_company_contact ||
            @company.industry || @company.company_type || @company.nature_of_business ||
            @company.priority || @company.default_payment_option || @company.credit_limit ||
            @company.pan %>
          <div>
            <h6 class="text-uppercase text-black-50 bmro-form-heading mb-1">Company Details</h6>
            <div class="form-row">
              <% if @company.account %>
                <div class="col-6 col-md-3 mb-2 bmro-summary-data">
                  <strong class="d-block bmro-summary-heading">Account</strong>
                  <a class="bmro-summary-link" href="<%= overseers_account_path(@company.account) %>" target="_blank"><%= @company.account %></a>
                </div>
              <% end %>

              <% if @company.site? %>
                <div class="col-6 col-md-3 mb-2 bmro-summary-data">
                  <strong class="d-block bmro-summary-heading">Site</strong>
                  <div class="bmro-summary-data">
                    <%= @company.site %>
                  </div>
                </div>
              <% end %>

              <% if @company.default_company_contact.present? %>
                <% if @company.default_company_contact.contact.mobile %>
                  <div class="col-6 col-md-3 mb-2 bmro-summary-data">
                    <strong class="d-block bmro-summary-heading">Mobile</strong>
                    <div class="bmro-summary-data">
                      <%= @company.default_company_contact.contact.mobile %>
                    </div>
                  </div>
                <% end %>

                <% if @company.default_company_contact.contact.email.present? %>
                  <div class="col-6 col-md-3 mb-2 bmro-summary-data">
                    <strong class="d-block bmro-summary-heading">Email address</strong>
                    <div class="bmro-summary-data">
                      <%= @company.default_company_contact.contact.email %>
                    </div>
                  </div>
                <% end %>

                <% if @company.default_company_contact.contact.telephone.present? %>
                  <div class="col-6 col-md-3 mb-2 bmro-summary-data">
                    <strong class="d-block bmro-summary-heading">Telephone</strong>
                    <div class="bmro-summary-data">
                      <%= @company.default_company_contact.contact.telephone %>
                    </div>
                  </div>
                <% end %>
              <% end %>

              <% if @company.industry.present? %>
                <div class="col-6 col-md-3 mb-2 bmro-summary-data">
                  <strong class="d-block bmro-summary-heading">Industry</strong>
                  <div class="bmro-summary-data">
                    <%= @company.industry %>
                  </div>  
                </div>
              <% end %>

              <% if @company.company_type.present? %>
                <div class="col-6 col-md-3 mb-2 bmro-summary-data">
                  <strong class="d-block bmro-summary-heading">Type</strong>
                  <div class="bmro-summary-data">
                    <%= @company.company_type.titleize %>
                   bmro-summary-heading</div>
                </div>
              <% end %>

              <% if @company.nature_of_business.present? %>
                <div class="col-6 col-md-3 mb-2 bmro-summary-data">
                  <strong class="d-block bmro-summary-heading">Nature of business</strong>
                  <div class="bmro-summary-data">
                    <%= @company.nature_of_business %>
                  </div>
                </div>
              <% end %>

              <% if @company.priority.present? %>
                <div class="col-6 col-md-3 mb-2 bmro-summary-data">
                  <strong class="d-block bmro-summary-heading">Priority</strong>
                  <div class="bmro-summary-data">
                    <%= @company.priority.titleize %>
                  </div>  
                </div>
              <% end %>


              <% if @company.remote_uid.present? %>
                <div class="col-6 col-md-3 mb-2 bmro-summary-data">
                  <strong class="d-block bmro-summary-heading">SAP Business Partner ID</strong>
                  <strong class="text-info bmro-summary-data"><%= @company.remote_uid %></strong>
                </div>
              <% end %>

              <div class="col-6 col-md-3 mb-2 bmro-summary-data">
                <strong class="d-block bmro-summary-heading">Active</strong>
                <strong class="text-info"><%= format_boolean(@company.is_active) %></strong>
              </div>


              <% if @company.default_payment_option.present? %>
                <div class="col-6 col-md-3 mb-2 bmro-summary-data">
                  <strong class="d-block bmro-summary-heading">Default payment option</strong>
                  <div class="bmro-summary-data">
                    <%= @company.default_payment_option %>
                  </div>
                </div>
              <% end %>

              <% if @company.credit_limit.present? %>
                <div class="col-6 col-md-3 mb-2 bmro-summary-data">
                  <strong class="d-block bmro-summary-heading">Credit limit</strong>
                  <div class="bmro-summary-data">
                     <%= @company.credit_limit %>
                  </div>
                </div>
              <% end %>
            </div>
            <div class="form-row">
              <div class="col-6 col-md-3 mb-2 bmro-summary-data">
                <strong class="d-block bmro-summary-heading">Is Supplier</strong>
                <%= format_boolean(@company.is_supplier?) %>
              </div>
              <div class="col-6 col-md-3 mb-2 bmro-summary-data">
                <strong class="d-block bmro-summary-heading">Is Customer</strong>
                <%= format_boolean(@company.is_customer?) %>
              </div>
            </div>
          </div>
        <% end %>

        <div class="mt-3">
          <h6 class="text-uppercase text-black-50 bmro-form-heading mb-1 d-block">Accounting</h6>
          <div class="form-row">
            <% if @company.pan != '' %>
              <div class="col-6 col-md-3 mb-2 bmro-summary-data">
                <strong class="d-block">PAN</strong>
                <%= @company.pan %>
              </div>
            <% end %>

            <div class="col-6 col-md-3 mb-2 bmro-summary-data">
              <strong class="d-block bmro-summary-heading">Is Valid Pan Card?</strong>
              <%= format_boolean(@company.validate_pan) %>
            </div>

            <div class="col-6 col-md-3 mb-2 bmro-summary-data">
              <strong class="d-block bmro-summary-heading">Is MSME?</strong>
              <%= format_boolean(@company.is_msme) %>
            </div>

            <div class="col-6 col-md-3 mb-2 bmro-summary-data">
              <strong class="d-block bmro-summary-heading">Is unregistered dealer?</strong>
              <%= format_boolean(@company.is_unregistered_dealer) %>
            </div>
          </div>
        </div>

        <% if @company.inside_sales_owner.present? || @company.outside_sales_owner.present? || @company.sales_manager.present? %>
          <div class="mt-3">
            <h6 class="text-uppercase text-black-50 mb-1 d-block">Default owners and managers</h6>
            <div class="form-row">
              <% if @company.inside_sales_owner.present? %>
                <div class="col-12 col-md-3 mb-2 bmro-summary-data">
                  <strong class="d-block bmro-summary-heading">Default inside sales</strong>
                  <div class="bmro-summary-data">
                    <%= @company.inside_sales_owner %>
                  </div>
                </div>
              <% end %>

              <% if @company.outside_sales_owner.present? %>
                <div class="col-12 col-md-3 mb-2 bmro-summary-data">
                  <strong class="d-block bmro-summary-heading">Default outside sales</strong>
                  <div class="bmro-summary-data">
                    <%= @company.outside_sales_owner %>
                  </div>
                </div>
              <% end %>

              <% if @company.sales_manager.present? %>
                <div class="col-12 col-md-3 mb-2 bmro-summary-data">
                  <strong class="d-block bmro-summary-heading">Default manager</strong>
                  <div class="bmro-summary-data">
                    <%= @company.sales_manager %>
                  </div>  
                </div>
              <% end %>

              <% if @company.logistics_owner.present? %>
                <div class="col-12 col-md-3 mb-2 bmro-summary-data">
                  <strong class="d-block bmro-summary-heading">Default Logistics Owner</strong>
                  <div class="bmro-summary-data">
                    <%= @company.logistics_owner %>
                  </div>  
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <% if @company.default_billing_address.present? || @company.default_shipping_address.present? %>
          <div class="mt-3">
            <h6 class="text-uppercase text-black-50 mb-1 d-block">Addresses</h6>
            <div class="form-row">
              <% if @company.default_billing_address.present? %>
                <div class="col-12 col-md-6 mb-2 mb-md-0">
                  <strong class="d-block bmro-summary-heading">Default billing address</strong>
                  <div class="bmro-summary-data">
                    <%= @company.default_billing_address %>
                  </div>
                </div>
              <% end %>

              <% if @company.default_shipping_address.present? %>
                <div class="col-12 col-md-6">
                  <strong class="d-block bmro-summary-heading">Default shipping address</strong>
                  <div class="bmro-summary-data">
                    <%= @company.default_shipping_address %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <% if @company.legacy_metadata.present? && (@company.legacy_metadata["sup_mail"] != "NULL" || @company.legacy_metadata["sup_tel"] != "NULL" || @company.legacy_metadata["sup_tel2"] != "NULL" || @company.legacy_metadata["sup_contact"] != "NULL") %>
      <a class="btn btn-light bmro-button text-left btn-lg btn-block mt-1 mt-lg-4" type="button" data-toggle="collapse" data-target="#dump">
        Legacy Data
      </a>

      <div id="dump" class="collapse bmro-minwidth-col">
        <div class="card bmro-card">
          <div class="card-body">
            <div class="form-row">
              <% if @company.legacy_metadata["sup_mail"] != "NULL" %>
                <div class="col-6 col-md-4">
                  <strong class="d-block">Email</strong>
                  <%= @company.legacy_metadata["sup_mail"] %>
                </div>
              <% end %>

              <% if @company.legacy_metadata["sup_tel"] != "NULL" || @company.legacy_metadata["sup_tel2"] != "NULL" %>
                <div class="col-6 col-md-4">
                  <strong class="d-block">Telephone</strong>
                  <%= (@company.legacy_metadata["sup_tel"] == "NULL" || @company.legacy_metadata["sup_tel"].nil? ? '' : @company.legacy_metadata["sup_tel"]) + (@company.legacy_metadata["sup_tel2"] == "NULL" || @company.legacy_metadata["sup_tel"].nil? ? '' : @company.legacy_metadata["sup_tel2"]) %>
                </div>
              <% end %>

              <% if @company.legacy_metadata["sup_contact"] != "NULL" %>
                <div class="col-6 col-md-4">
                  <strong class="d-block">Contact</strong>
                  <%= @company.legacy_metadata["sup_contact"] %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </section>

  <section class="pb-4 pb-lg-5">
    <ul class="nav nav-tabs nav-fill bmro-nav-ul bmro-ul-float-initial">
      <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#addresses" role="tab">Addresses</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#inquiries" role="tab">Inquiries</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#contacts" role="tab">Contacts</a>
      </li>

      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#banks" role="tab">Banks</a>
      </li>

      <% if @company.is_supplier? %>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#purchase-orders" role="tab">Purchase Orders</a>
        </li>
      <% end %>

      <% if @company.is_supplier? %>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#supplier-products" role="tab">Supplied Products</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#rating" role="tab">Ratings</a>
        </li>
      <% end %>
      <% if @company.is_customer? %>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#products" role="tab">Products</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#product_categories" role="tab">Product Categories</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#online-orders" role="tab">Online Orders</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#payments" role="tab">Online Payments</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#quotes" role="tab">Quotes</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#orders" role="tab">Fulfilled Orders</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#invoices" role="tab">Invoices</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#rating" role="tab">Ratings</a>
        </li>
      <% end %>
    </ul>

    <div class="tab-content">
      <div class="tab-pane fade active show" id="addresses" role="tabpanel">
        <% content_for :ajax_url, flush: true do %><%= overseers_company_addresses_path(company_id: @company.id) %>
        <% end %>
        <% content_for :header_row, flush: true do %>
          <th class="no-sort" width="98px">Quick Actions</th>
          <th class="no-sort" data-name="name">Address</th>
          <th class="no-sort" data-name="state">State</th>
          <th class="no-sort" data-name="city">City</th>
          <th class="no-sort" data-name="valid_gst">Valid GST</th>
          <th class="no-sort" data-name="gst">GST</th>
          <th class="no-sort text-right" data-name="pincode">Pincode</th>
          <th class="no-sort">SAP status</th>
          <th class="no-sort desktop text-right" data-name="created_at">Created</th>
        <% end %>
        <% content_for :heading_buttons, flush: true do %>
          <% if is_authorized(:address, 'new') && is_authorized(@company, 'new_address') %>
            <a href="<%= new_overseers_company_address_path(@company) %>" class="btn btn-success btn-rounded align-self-center btn-block-sm-down bmro-button mb-2 mb-md-0"><i class="fal fa-plus-circle mr-1"></i>New
              Address</a>
          <% end %>
        <% end %>
        <%= render 'shared/layouts/internal_datatable', entity: @company, children: 'addresses' %>
      </div>

      <div class="tab-pane fade" id="contacts" role="tabpanel">
        <% content_for :ajax_url, flush: true do %>
          <%= overseers_contacts_path(company_id: @company.id, via_company_contacts: true) %>
        <% end %>
        <% content_for :header_row, flush: true do %>
          <th class="no-sort all" width="98px">Quick Actions</th>
          <th class="all" data-name="name">Name</th>
          <th class="all" data-name="email">Email</th>
          <th class="all" data-name="account_id">Account</th>
          <th class="all" data-name="account_id">Role</th>
          <th class="no-sort desktop text-right">Inquiry</th>
          <th class="desktop text-right" data-name="created_at">Created</th>
        <% end %>
        <% content_for :heading_buttons, flush: true do %>
          <% if is_authorized(:contact, 'new') && is_authorized(@company, 'new_contact') %>
            <a href="<%= new_overseers_contact_path(company_id: @company.to_param) %>" class="btn btn-success btn-rounded align-self-center btn-block-sm-down mb-2 mb-md-0 bmro-button"><i class="fal fa-plus-circle mr-1"></i>New
              Contact</a>
          <% end %>
        <% end %>
        <%= render 'shared/layouts/internal_datatable', entity: @company, children: 'contacts' %>
      </div>

      <div class="tab-pane fade" id="banks" role="tabpanel">
        <% content_for :ajax_url, flush: true do %><%= overseers_company_company_banks_path(company_id: @company.id) %>
        <% end %>
        <% content_for :header_row, flush: true do %>
          <th class="no-sort all" width="98px">Quick Actions</th>
          <th class="all" data-name="name">Name</th>
          <th class="all" data-name="code">Code</th>
          <th class="all" data-name="branch">Branch</th>
          <th class="all" data-name="ifsc_code">IFSC Code</th>
          <th class="all" data-name="account_name">Account Name</th>
          <th class="all" data-name="account_number">Account Number</th>
          <th class="desktop" data-name="created_at">SAP Status</th>
          <th class="desktop text-right" data-name="created_at">Created</th>
        <% end %>
        <% content_for :heading_buttons, flush: true do %>
          <% if is_authorized(:contact, 'new') %>
            <a href="<%= new_overseers_company_company_bank_path(company_id: @company.to_param) %>" class="btn btn-success btn-rounded align-self-center btn-block-sm-down mb-2 mb-md-0 bmro-button"><i class="fal fa-plus-circle mr-1"></i>New
              Bank</a>
          <% end %>
        <% end %>
        <%= render 'shared/layouts/internal_datatable', entity: @company, children: 'banks' %>
      </div>
      <div class="tab-pane fade" id="rating" role="tabpanel">
        <% content_for :ajax_url, flush: true do %><%= overseers_company_company_reviews_path(company_id: @company.id) %>
        <% end %>
        <% content_for :header_row, flush: true do %>
          <th class="no-sort all" width="98px">Quick Actions</th>
          <th class="no-sort all">Overseer Name</th>
          <th class="no-sort all" data-name="company_id">Company Name</th>
          <th class="no-sort all" data-name="survey_type_id">Review Type</th>
          <th class="no-sort all">Rating</th>
        <% end %>
        <%= render 'shared/layouts/internal_datatable', entity: @company, children: 'Ratings' %>
      </div>
      <% if @company.is_customer? %>
        <div class="tab-pane fade" id="products" role="tabpanel">
          <% content_for :ajax_url, flush: true do %><%= overseers_company_customer_products_path(@company) %>
          <% end %>
          <% content_for :header_row, flush: true do %>
            <th class="no-sort" width="98px">Quick Actions</th>
            <th class="no-sort">Name</th>
            <th class="no-sort">SKU</th>
            <th class="no-sort desktop">Customer Price</th>
            <th class="no-sort desktop">SAP Status</th>
            <th class="desktop text-right" data-name="created_at">Created</th>
          <% end %>
          <% content_for :heading_buttons, flush: true do %>
            <div>
              <% if is_authorized(:customer_product, 'generate_catalog') %>
                <a href="<%= generate_catalog_overseers_company_customer_products_path(@company) %>" data-method="post" class="btn btn-success btn-rounded align-self-center btn-block-sm-down mb-2 mb-md-0 mr-1 bmro-button"><i class="fal fa-plus-circle mr-1"></i>Generate
                  Catalog</a>
              <% end %>
              <% if is_authorized(:customer_product, 'destroy_all') %>
                <a href="<%= destroy_all_overseers_company_customer_products_path(@company) %>" data-method="post" class="btn btn-danger btn-rounded align-self-center btn-block-sm-down mb-2 mb-md-0 mr-1 bmro-button"><i class="fal fa-minus-circle mr-1"></i>Destroy
                  Catalog</a>
              <% end %>
              <% if is_authorized(:customer_product, 'new') %>
                <a href="<%= new_overseers_company_customer_product_path(@company) %>" class="btn btn-success btn-rounded align-self-center btn-block-sm-down mb-2 mb-md-0 mr-1 bmro-button"><i class="fal fa-plus-circle mr-1"></i>New
                  Customer Product</a>
              <% end %>
              <a href="<%= new_excel_customer_product_import_overseers_company_imports_path(@company) %>" class="btn btn-success btn-rounded align-self-center btn-block-sm-down mb-2 mb-md-0 bmro-button"><i class="fal fa-file-excel mr-1"></i>Add
                products using excel</a>
              <% if @company.customer_products.count > 0 && is_authorized(:customer_product, 'export_customer_product') %>
                <a href="<%= export_customer_product_overseers_company_customer_products_path(@company, format: :csv) %>" class="btn btn-warning btn-rounded align-self-center btn-block-sm-down mb-2 mb-md-0"><i class="fal fa-download mr-1"></i>Company Product Export</a>
              <% end %>
            </div>
          <% end %>
          <%= render 'shared/layouts/internal_datatable', entity: @company, children: 'products' %>
        </div>
      <% end %>

      <div class="tab-pane fade" id="product_categories" role="tabpanel">
        <div class="d-md-flex justify-content-between">
          <h3 class="display-5 mb-1 d-none d-md-block">Product Categories</h3>
          <div>
            <% if is_authorized(:tag, 'new') %>
              <a href="<%= new_overseers_company_tag_path(@company) %>" class="btn btn-success btn-rounded align-self-center btn-block-sm-down mb-2 mb-md-0 bmro-button"><i class="fal fa-plus-circle mr-1"></i>New
                Product Category</a>
            <% end %>
          </div>
        </div>
        <p class="mt-md-1 d-none d-md-block">
          All product categories searchable with relevant term/keywords</strong>.
        </p>

        <table class="datatable table table-bordered dt-responsive" data-search="Enter search term/keywords" style="width:100%;" data-ajax="<%= overseers_company_tags_path(@company) %>">
          <thead>
          <tr>
            <th class="no-sort" width="98px">Quick Actions</th>
            <th class="no-sort">Name</th>
            <th class="desktop" data-name="created_at">Created</th>
          </tr>
          </thead>
          <tbody>

          </tbody>
        </table>
      </div>


      <div class="tab-pane fade" id="inquiries" role="tabpanel">
        <% content_for :ajax_url, flush: true do %><%= index_pg_overseers_inquiries_path(company_id: @company.id) %>
        <% end %>
        <% content_for :header_row, flush: true do %>
          <th class="no-sort" width="98px">Quick Actions</th>
          <th data-name="inquiry_number">IQ #</th>
          <th class="no-sort">Status</th>
          <th class="no-sort">Account</th>
          <th class="no-sort">Company</th>
          <th class="no-sort">Contact</th>
          <th class="no-sort">Inside Sales</th>
          <th class="no-sort">Outside Sales</th>
          <th class="no-sort">Total</th>
          <th data-name="created_at">Created</th>
