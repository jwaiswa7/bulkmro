
<h4>Addresses</h4>

<a href="<%= new_overseers_company_address_path(@company) %>">
  <button type="button" class="btn btn-primary m-t-10">+ Add Address</button>
</a>

<div class="table-responsive">
  <table id="datatable-buttons" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @company.addresses.each do |address| %>
      <tr>
        <td><%= address.id %></td>
        <td><%= address.to_s %></td>
        <td><a href="<%= edit_overseers_company_address_path(address.company, address) %>">Edit</a></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>