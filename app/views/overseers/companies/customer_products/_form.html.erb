<div class="col-lg-12">
  <div class="page-header">
    <h2><%= action_name.capitalize %> Customer Product</h2>
    <p>This will <em>'<%= submit_text(@customer_product).downcase %>'</em> and log it under
      <strong><%= current_overseer.full_name %></strong>.</p>
  </div>

  <%= simple_form_for([:overseers, @company, @customer_product], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= render 'shared/snippets/form_errors', f: f %>
    <%= f.hidden_field :company_id %>
    <div class="form-row">
      <div class="col-6 col-md-6">
        <%= f.input :company, as: :string, disabled: true %>
      </div>
      <div class="col-6 col-md-6">
        <%= f.association :product, collection: [f.object.product], include_blank: "Type SKU number, name, or brand", label_method: :to_s, input_html: {class: 'select2-ajax', :'data-source' => autocomplete_overseers_products_path, :'data-parsley-errors-messages-disabled' => '', :'data-parsely-no-valid-feedback' => ''} %>
      </div>
      <div class="col-12">
        <%= f.input :name %>
      </div>
      <div class="col-4">
        <%= f.input :sku %>
      </div>
      <div class="col-4">
        <%= f.input :customer_price %>
      </div>
      <div class="col-4">
        <%= f.input :moq, label: "Minimum Ordered Quantity" %>
      </div>
      <div class="col-4">
        <%= f.association :tax_code, collection: selected_option_or_nil(f, :tax_code), label_method: :to_s, include_blank: "Type to search", input_html: {class: 'select2-ajax', :'data-source' => autocomplete_for_product_overseers_tax_codes_path(product_id: ( f.object.product.present? ? f.object.product.id : nil))} %>
      </div>
      <div class="col-4">
        <%= f.association :tax_rate, collection: TaxRate.all.map {|tax_rate| [tax_rate.to_s, tax_rate.id, {'data-tax_rate' => tax_rate.tax_percentage}]}, input_html: {"data-bind": ""} %>
      </div>
      <div class="col-4">
        <%= f.association :measurement_unit, wrapper: :custom_multi_select, required: false %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-6 col-md-6">
        <%= f.association :brand, collection: selected_option_or_nil(f, :brand), include_blank: 'Select a brand', input_html: {class: 'select2-ajax', :'data-source' => autocomplete_overseers_brands_path} %>
      </div>
      <div class="col-6 col-md-6">
        <%= f.association :category, collection: selected_option_or_nil(f, :category), include_blank: 'Select a category', label_method: :to_s, input_html: {class: 'select2-ajax', :'data-source' => autocomplete_overseers_categories_path} %>
      </div>
      <div class="col-12 col-md-12 ">
        <div class="d-block d-md-flex align-items-end">
          <div class="flex-grow-1">
            <%= f.input :images, wrapper: :custom_file, input_html: {multiple: true}, label: 'Customer Product Images' %>
          </div>
          <div class="form-group">
            <% f.object.images.each do |image| %>
              <%= link_to url_for(image), class: 'ml-md-1 btn btn-success', target: '_blank', :"data-toggle" => 'tooltip', :title => image.filename do %>
                <i class="fal fa-download"></i>
                <%= link_to overseers_attachment_path(image.id), class: 'btn btn-outline-danger btn-sm ml-1 mr-1 mr-md-0', method: :delete, data: {confirm: 'Are you sure?'}, :"data-toggle" => 'tooltip', :title => ['Delete', ' ', image.filename, '?'].join('') do %>
                  <i class="fal fa-trash-alt"></i>
                <% end if image.present? && policy(:attachment).destroy? %>
              <% end %>
            <% end if f.object.images.attached? %>
          </div>
        </div>
      </div>
    </div>

    <%= action_button(action_name, @customer_product) %>
  <% end %>
</div>
