<div class="col-lg-12">
  <section class="pt-3 pt-lg-4 pb-2">
    <div class="d-md-flex justify-content-between">
      <h3 class="display-5 d-flex align-items-center">
        <%= @supplier_product.name %>
      </h3>
      <a href="<%= overseers_company_path(@company) %>" class="btn btn-success btn-rounded align-self-center btn-block-sm-down mb-2 mb-md-0 bmro-button">Back</a>
    </div>
  </section>

  <section class="mb-3">
    <div class="card">
      <div class="card-body">
        <div>
          <h6 class="text-uppercase text-black-50 mb-1">supplier_product Details</h6>
          <div class="form-row">

            <% if @supplier_product.supplier.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Supplier Name</strong>
                <%= @supplier_product.supplier.name %>
              </div>
            <% end %>

            <% if @supplier_product.name.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Name</strong>
                <%= @supplier_product.name %>
              </div>
            <% end %>

            <% if @supplier_product.sku? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">BM Number</strong>
                <%= @supplier_product.sku %>
              </div>
            <% end %>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Supplier Price</strong>
              <%= @supplier_product.supplier_price? ? format_currency(@supplier_product.supplier_price) : '0.0' %>
            </div>

            <% if @supplier_product.moq? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Minimum Ordered Quantity</strong>
                <%= @supplier_product.moq %>
              </div>
            <% end %>

            <% if @supplier_product.tax_code.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Tax Code</strong>
                <%= @supplier_product.tax_code.code %>
              </div>
            <% end %>

            <% if @supplier_product.tax_rate.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Tax Rate</strong>
                <%= @supplier_product.tax_rate.tax_percentage %>
              </div>
            <% end %>

            <% if @supplier_product.measurement_unit.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Measurement Unit</strong>
                <%= @supplier_product.measurement_unit.name %>
              </div>
            <% end %>

            <% if @supplier_product.brand.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Brand</strong>
                <%= @supplier_product.brand %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
