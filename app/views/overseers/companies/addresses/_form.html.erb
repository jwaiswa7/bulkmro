<div class="col-lg-12">
  <div class="page-header">
    <h2><%= action_name.capitalize %> Address</h2>
    <p>This will <em>'<%= submit_text(@address).downcase %>'</em> and log it under <strong><%= current_overseer.full_name %></strong>.</p>
  </div>

  <%= simple_form_for([:overseers, @company, @address], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= f.hidden_field :company_id %>

    <%= f.input :name %>
    <%= f.input :street1, label: 'Address Line 1' %>
    <%= f.input :street2, label: 'Address Line 2'  %>

    <div class="form-row">
      <div class="col-6 col-md-3">
        <%= f.association :state, :wrapper => :custom_multi_select %>
      </div>
      <div class="col-6 col-md-3">
        <%= f.input :city_name %>
      </div>
      <div class="col-6 col-md-3">
        <%= f.input :pincode %>
      </div>
      <div class="col-6 col-md-3">
        <%= f.input :country_code, as: :country, :wrapper => :custom_multi_select, priority_countries: ["IN", "US"] %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-6">
        <%= f.input :telephone  %>
      </div>
      <div class="col-6">
        <%= f.input :mobile  %>
      </div>
    </div>

    <%= f.input :tan, label: 'TAN'  %>

    <div class="form-row">
      <div class="col-6 col-md-4">
        <%= f.input :gst, label: 'GST Number' %>
      </div>
      <div class="col-6 col-md-4">
        <%= f.input :gst_type, :wrapper => :custom_multi_select, as: :select, collection: enum_to_collection(Address.gst_types), label: 'GST Type' %>
      </div>
      <div class="col-12 col-md-4">
        <div class="form-group">
          <label>GST Number Proof</label>
          <div class="input-group">
            <div class="custom-file">
              <%= f.file_field :gst_proof, :class => 'custom-file-input', required: true, accept: 'image/png, application/pdf, image/jpeg' %>
              <label class="custom-file-label">GST Number Proof</label>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="form-row">
      <div class="col-6">
        <%= f.input :cst, label: 'CST Number'  %>
      </div>
      <div class="col-6">
        <div class="form-group">
          <label>CST Number Proof</label>
          <div class="input-group">
            <div class="custom-file">
              <%= f.file_field :cst_proof, :class => 'custom-file-input', required: true, accept: 'image/png, application/pdf, image/jpeg' %>
              <label class="custom-file-label">CST Number Proof</label>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="form-row">
      <div class="col-6">
        <%= f.input :vat, label: 'VAT Number'  %>
      </div>
      <div class="col-6">
        <div class="form-group">
          <label>VAT Number Proof</label>
          <div class="input-group">
            <div class="custom-file">
              <%= f.file_field :vat_proof, :class => 'custom-file-input', required: true, accept: 'image/png, application/pdf, image/jpeg' %>
              <label class="custom-file-label">VAT Number Proof</label>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="form-row">
      <div class="col-6">
        <%= f.input :excise, label: 'Excise Number'  %>
      </div>
      <div class="col-6">
        <div class="form-group">
          <label>Excise Number Proof</label>
          <div class="input-group">
            <div class="custom-file">
              <%= f.file_field :cst_proof, :class => 'custom-file-input', required: true, accept: 'image/png, application/pdf, image/jpeg' %>
              <label class="custom-file-label">Excise Number Proof</label>
            </div>
          </div>
        </div>
      </div>
    </div>

    <% if action_name.capitalize == "New" %>
      <%= button_tag(type: "submit", class: "btn btn-success btn-block") do %>
        <i class="fal fa-plus-circle"></i> <%= submit_text(@address) %>
      <% end %>
    <% else %>
      <%= button_tag(type: "submit", class: "btn btn-warning btn-block") do %>
        <i class="fal fa-pen"></i> <%= submit_text(@address) %>
      <% end %>
    <% end %>
  <% end %>
</div>