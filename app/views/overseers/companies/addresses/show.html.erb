<div class="col-lg-12">
  <section class="pt-3 pt-lg-4 pb-2">
    <div class="d-md-flex justify-content-between">
      <h3 class="display-5 d-flex align-items-center">
        <%= @address.name %>
      </h3>
      <% if policy(@address).edit? %>
        <a href="<%= edit_overseers_company_address_path(@company, @address) %>" class="btn btn-warning btn-rounded align-self-center btn-block-sm-down"><i class="fal fa-pen mr-1"></i>Edit
          Address</a>
      <% end %>
    </div>
  </section>

  <section class="mb-3">
    <div class="card">
      <div class="card-body">
        <div>
          <h6 class="text-uppercase text-black-50 mb-1">Address Details</h6>
          <div class="form-row">
            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Address Line 1</strong>
              <%= @address.street1 %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Address Line 2</strong>
              <%= @address.street2 %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Country Code</strong>
              <%= @address.country_code %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">State</strong>
              <%= @address.state.name %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">City Name</strong>
              <%= @address.city_name %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Pincode</strong>
              <%= @address.pincode %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">GST</strong>
              <%= @address.gst %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">GST Type</strong>
              <%= @address.gst_type %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">SAP ID</strong>
              <%= @address.remote_uid %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
