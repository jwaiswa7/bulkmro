<div class="col-lg-12">
  <section class="pt-3 pt-lg-4 pb-2">
    <div class="d-md-flex justify-content-between">
      <h3 class="display-5 d-flex align-items-center">
        <%= @tag.name %>
      </h3>
      <% if policy(@tag).edit? %>
        <a href="<%= edit_overseers_company_tag_path(@company) %>" class="btn btn-warning btn-rounded align-self-center btn-block-sm-down"><i class="fal fa-pen mr-1"></i>Edit
          tag</a>
      <% end %>
    </div>
  </section>

  <section class="mb-3">
    <div class="card">
      <div class="card-body">
        <div>
          <h6 class="text-uppercase text-black-50 mb-1">tag Details</h6>
          <div class="form-row">
            <% if @tag.company.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Company Name</strong>
                <%= @tag.company.name %>
              </div>
            <% end %>

            <% if @tag.name.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Name</strong>
                <%= @tag.name %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
