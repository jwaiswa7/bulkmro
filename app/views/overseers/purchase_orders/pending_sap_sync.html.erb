<%= provide :container_fluid, true %>
<% provide :can_be_ajaxed, true %>
<% provide :wrap_whitespace, true %>
<% if is_authorized(:purchase_order, 'resync_all_purchase_orders') %>
  <% provide :heading_buttons do %>
    <a href="<%= resync_all_purchase_orders_overseers_purchase_orders_path %>" class="btn btn-success btn-rounded align-self-center btn-block-sm-down ml-1 mt-2"><i class="fal fa-retweet mr-1"></i>Resync
      All Purchase Orders</a>
  <% end %>
<% end %>

<% content_for :header_row do %>
  <th class="no-sort all"></th>
  <th class="no-sort desktop">Inquiry No.#</th>
  <th class="no-sort desktop">SO No.#</th>
  <th class="no-sort all">Purchase Order</th>
  <th class="no-sort all">Line Count</th>
  <th class="no-sort all" data-name="sku" data-toggle="tooltip" title="Inside Sales & Procurement">IS&P</th>
  <th class="sort desktop" data-name="created_at">Created At</th>
<% end %>

<div class="col-lg-12">
  <%= render layout: 'shared/layouts/datatable' do %>
  <% end %>
</div>