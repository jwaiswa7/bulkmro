    <th class="no-sort desktop text-left" width="97px" data-name="material_status">Material Status</th>
    <th class="no-sort desktop text-left" width="52px" data-name="payment_status">Payment Status</th>
    <th class="no-sort desktop text-right" width="52px" data-name="percentage">Percentage</th>
    <th class="sort desktop text-left" width="52px" data-name="created_at">Created</th>
