<% provide :container_fluid, true %>

<div class="col-lg-12">
  <section class="pt-3 pt-lg-4 pb-2">
    <div class="d-md-flex justify-content-between">
      <h3 class="display-5 d-flex align-items-center">
        Edit Material Followup: <%= format_id(@purchase_order.po_number) %>
      </h3>
      <span>
        <% if policy(@purchase_order).new_pickup_request? %>
          <a href="<%= new_overseers_purchase_order_material_readiness_followup_path(@purchase_order) %>" class=" btn btn-success btn-rounded align-self-center btn-block-sm-down " >
            <i class="fal fa-plus-circle mr-1"></i>New Pickup Request
          </a>
        <% end %>
      </span>
    </div>
  </section>

  <%= simple_form_for(@purchase_order, url: update_material_followup_overseers_purchase_order_path(@purchase_order), :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= render 'shared/snippets/form_errors', f: f %>
    <% if @po_request.present? %>
      <section class="mb-3">
        <div class="card mb-2">
          <div class="card-body">
            <div>
              <h6 class="text-uppercase text-black-50 mb-1">PO Request Details</h6>
              <div class="form-row">
                <% if @po_request.sales_order.present? %>
                  <div class="col-6 col-md-3 mb-2">
                    <strong class="d-block">Sales Order #</strong>
                    <%= link_to overseers_inquiry_sales_order_path(@po_request.inquiry, @po_request.sales_order), target: '_blank' do %>
                      <%= format_id(@po_request.sales_order.order_number) %>
                    <% end %>
                  </div>
                <% end %>

                <% if @po_request.inquiry.present? %>
                  <div class="col-6 col-md-3 mb-2">
                    <strong class="d-block">Inquiry #</strong>
                    <% if policy(@po_request.inquiry).edit? %>
                      <%= link_to overseers_inquiry_path(@po_request.inquiry), target: '_blank' do %>
                        <%= format_id(@po_request.inquiry.inquiry_number) %>
                      <% end %>
                    <% else %>
                      <%= format_id(@po_request.sales_order.order_number) %>
                    <% end %>
                  </div>
                <% end %>

                <% if @po_request.status.present? %>
                  <div class="col-6 col-md-3 mb-2">
                    <strong class="d-block">Status</strong>
                    <%= status_badge(@po_request.status) %>
                  </div>
                <% end %>

                <% if @po_request.inquiry.present? && @po_request.inquiry.inside_sales_owner.present? %>
                  <div class="col-6 col-md-3 mb-2">
                    <strong class="d-block">Inside Sales</strong>
                    <%= @po_request.inquiry.inside_sales_owner.to_s %>
                  </div>
                <% end %>

                <% if @po_request.purchase_order.present? %>
                  <div class="col-6 col-md-3 mb-2">
                    <strong class="d-block">PO #</strong>
                    <%= @po_request.purchase_order.po_number %>
                  </div>
                <% end %>

                <% if @po_request.payment_request.present? %>
                  <div class="col-6 col-md-3 mb-2">
                    <strong class="d-block">Payment Request</strong>
                    <a href="<%= overseers_po_request_path(@po_request.payment_request) %>"><%= format_id(@po_request.id) %></a>
                  </div>
                <% end %>

                <% if @po_request.logistics_owner.present? %>
                  <div class="col-6 col-md-3 mb-2">
                    <strong class="d-block">Logistics Owner</strong>
                    <%= @po_request.logistics_owner.to_s %>
                  </div>
                <% end %>
              </div>

              <% if @po_request.attachments.attached? %>
                <div class="form-row">
                  <div class="col-md-12">
                    <strong class="d-block">Attachments </strong>
                    <% @po_request.attachments.each do |attachment| %>
                      <%= link_to url_for(attachment), class: 'ml-2 btn btn-success', target: '_blank', :"data-toggle" => 'tooltip', :status => attachment.filename do %>
                        <i class="fal fa-download"></i>
                        <%= link_to overseers_attachment_path(attachment.id), class: 'btn btn-outline-danger btn-sm ml-1 mr-1 mr-md-0', method: :delete, data: {confirm: 'Are you sure?'}, :"data-toggle" => 'tooltip', :status => ['Delete', ' ', attachment.filename, '?'].join('') do %>
                          <i class="fal fa-trash-alt"></i>
                        <% end if attachment.present? && policy(:attachment).destroy? %>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </section>
    <% end %>
    <div class="card">
      <div class="card-header">
        <div class="form-row">
          <div class="col-12 col-md-6">
            <%= f.input :material_status, as: :select, :wrapper => :custom_multi_select, collection: enum_to_collection(PurchaseOrder.material_statuses, alphabetical: false, keep_raw: true), :disabled => true %>
          </div>

          <div class="form-row col-12">
            <div class="col-6">
              <%= f.input :supplier_dispatch_date, as: :string, input_html: {:'data-toggle' => 'datepicker', value: f.object.supplier_dispatch_date.try(:strftime, "%d-%b-%Y")}, required: true %>
            </div>

            <div class="col-6">
              <%= f.input :revised_supplier_delivery_date, as: :string, input_html: {:'data-toggle' => 'datepicker', value: f.object.revised_supplier_delivery_date.try(:strftime, "%d-%b-%Y")}, required: true %>
            </div>
          </div>

          <div class="col-12">
            <%= f.nested_fields_for :comments, f.object.comments.build(:overseer => current_overseer) do |purchase_order_comment| %>
              <%= purchase_order_comment.hidden_field :created_by_id %>
              <%= purchase_order_comment.hidden_field :updated_by_id %>
              <%= purchase_order_comment.input :message, :placeholder => 'Type message', input_html: {:'data-parsely-no-valid-feedback' => ''} %>
            <% end %>
          </div>

          <div class="col-12 col-md-12">
            <div class="d-block d-md-flex align-items-end">
              <div class="flex-grow-1">
                <%= f.input :attachments, wrapper: :custom_file, input_html: {multiple: true}, label: 'Attachments' %>
              </div>
              <div class="form-group">
                <% f.object.attachments.each do |attachment| %>
                  <%= link_to url_for(attachment), class: 'ml-md-1 btn btn-success', target: '_blank', :"data-toggle" => 'tooltip', :status => attachment.filename do %>
                    <i class="fal fa-download"></i>
                    <%= link_to overseers_attachment_path(attachment.id), class: 'btn btn-outline-danger btn-sm ml-1 mr-1 mr-md-0', method: :delete, data: {confirm: 'Are you sure?'}, :"data-toggle" => 'tooltip', :status => ['Delete', ' ', attachment.filename, '?'].join('') do %>
                      <i class="fal fa-trash-alt"></i>
                    <% end if attachment.present? && policy(:attachment).destroy? %>
                  <% end %>
                <% end if f.object.attachments.attached? %>
              </div>
            </div>
          </div>

          <%= button_tag(type: "submit", class: "btn btn-success btn-block") do %>
            <i class="fal fa-plus-circle"></i> Update Status
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="card mt-2">
    <div class="card-body">
      <div>
        <h6 class="text-uppercase text-black-50 mb-1">Comments History</h6>
        <div class="form-row">
          <% if @purchase_order.comments.persisted.size > 0 %>
            <div class="col-12">
              <div class="chats mb-3">
                <% @purchase_order.comments.each do |comment| %>
                  <% if comment.persisted? %>
                    <%= format_comment(comment) %>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>