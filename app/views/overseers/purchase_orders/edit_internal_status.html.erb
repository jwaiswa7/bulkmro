<div class="col-lg-12">
  <div class="page-header">
    <h2>Edit Internal Status: <%= format_id(@purchase_order.po_number) %></h2>
    <p>This will <em>update internal status</em> and log it under
      <strong><%= current_overseer.full_name %></strong>.</p>
  </div>

  <%= simple_form_for(@purchase_order, url: update_internal_status_overseers_purchase_order_path(@purchase_order), :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= render 'shared/snippets/form_errors', f: f %>

    <div class="form-row">
      <div class="col-12 col-md-6">
        <%= f.input :internal_status, as: :select, :wrapper => :custom_multi_select, collection: enum_to_collection(PurchaseOrder.internal_statuses, alphabetical: false, keep_raw: true), :include_blank => false %>
      </div>
      <%= button_tag(type: "submit", class: "btn btn-success btn-block") do %>
        <i class="fal fa-plus-circle"></i> Update Status
      <% end %>
    </div>
  <% end %>
</div>