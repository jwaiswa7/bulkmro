<div class="col-lg-12">
  <div class="page-header">
    <h2>Edit Internal Status: <%= format_id(@purchase_order.po_number) %></h2>
    <p>This will <em>update internal status</em> and log it under
      <strong><%= current_overseer.full_name %></strong>.</p>
  </div>

  <%= simple_form_for(@purchase_order, url: update_internal_status_overseers_purchase_order_path(@purchase_order), :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= render 'shared/snippets/form_errors', f: f %>

    <div class="card">
      <div class="card-header">
        <div class="form-row">
          <div class="col-12 col-md-6">
            <%= f.input :internal_status, as: :select, :wrapper => :custom_multi_select, collection: enum_to_collection(PurchaseOrder.internal_statuses, alphabetical: false, keep_raw: true), :include_blank => false %>
          </div>

          <div class="col-12">
            <%= f.nested_fields_for :comments, f.object.comments.build(:overseer => current_overseer) do |purchase_order_comment| %>
              <%= purchase_order_comment.hidden_field :created_by_id %>
              <%= purchase_order_comment.hidden_field :updated_by_id %>
              <%= purchase_order_comment.input :message, :placeholder => 'Type message', input_html: {:'data-parsely-no-valid-feedback' => ''} %>
            <% end %>
          </div>

          <%= button_tag(type: "submit", class: "btn btn-success btn-block") do %>
            <i class="fal fa-plus-circle"></i> Update Status
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="card mt-2">
    <div class="card-body">
      <div>
        <h6 class="text-uppercase text-black-50 mb-1">Comments History</h6>
        <div class="form-row">
          <% if @purchase_order.comments.persisted.size > 0 %>
            <div class="col-12">
              <div class="chats mb-3">
                <% @purchase_order.comments.each do |comment| %>
                  <% if comment.persisted? %>
                    <%= format_comment(comment) %>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>