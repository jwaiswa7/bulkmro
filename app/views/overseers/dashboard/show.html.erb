<div class="col-lg-12">
  <div class="row mt-3 mt-lg-4">
    <div class="col-md-3">
      <div class="card mb-3 ">
        <div class="card-body">
          <div class="text-center">
            <p class="text-uppercase text-black-50 mb-1"><strong>Inquiries Created</strong>
            </p>
            <h3 class="mb-0"><%= Inquiry.all.size %></h3>
          </div>
        </div>

        <% if policy(:inquiry).index? %>
          <div class="card-footer">
            <a href="<%= overseers_inquiries_path %>" class="btn btn-lg btn-block btn-success">See Inquiries</a>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card mb-3 ">
        <div class="card-body">
          <div class="text-center">
            <p class="text-uppercase text-black-50 mb-1"><strong>Companies Created</strong>
            </p>
            <h3 class="mb-0"><%= Company.all.size %></h3>
          </div>
        </div>

        <% if policy(:company).index? %>
          <div class="card-footer">
            <a href="<%= overseers_companies_path %>" class="btn btn-lg btn-block btn-success">See Companies</a>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card mb-3 ">
        <div class="card-body">
          <div class="text-center">
            <p class="text-uppercase text-black-50 mb-1"><strong>Companies w/ Inquiries</strong>
            </p>
            <h3 class="mb-0"><%= Company.joins(:inquiries).uniq.size %></h3>
          </div>
        </div>
        <% if policy(:company).index? %>
          <div class="card-footer">
            <a href="<%= overseers_companies_path %>" class="btn btn-lg btn-block btn-success">See Companies</a>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card mb-3 ">
        <div class="card-body">
          <div class="text-center">
            <p class="text-uppercase mb-1"><strong>Products</strong></p>
            <h3 class="mb-0"><%= Product.all.size %></h3>
          </div>
        </div>
        <% if policy(:product).index? %>
          <div class="card-footer">
            <a href="<%= overseers_products_path %>" class="btn btn-lg btn-block btn-success">See Products</a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>