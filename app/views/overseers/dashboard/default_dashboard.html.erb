          </div>
          <div class="card-footer">
            <a href="<%= overseers_overseers_path %>" class="btn btn-lg btn-block btn-success">See Overseers</a>
          </div>
        </div>
      </div>
    <% end %>
    <% if policy(:category).index? %>
      <div class="col-md-3">
        <div class="card mb-3 ">
          <div class="card-body">
            <div class="text-center">
              <p class="text-uppercase mb-1"><strong>Categories</strong></p>
