      <div class="col-md-3">
        <div class="card mb-3 ">
          <div class="card-body">
            <div class="text-center">
              <p class="text-uppercase mb-1"><strong>Warehouse</strong></p>
              <h3 class="mb-0"><%= number_with_delimiter(Warehouse.all.size, delimiter: ',') %></h3>
            </div>
          </div>
        </div>
      </div>

    <% end %>
    <div class="col-3 d-none">
      <div class="card">
        <ul class="nav nav-tabs nav-fill rounded-0">
          <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#one" role="tab">Chart 1</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#two" role="tab">Chart 2</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#three" role="tab">Chart 3</a>
          </li>
        </ul>
        <div class="card-body">
          <div class="tab-content">
            <div class="tab-pane fade show active" id="one">
              <canvas class="chart-bar" data-chart-axis='["Red", "Blue", "Yellow", "Green", "Purple", "Orange"]' data-chart-labels='["Mumbai", "Delhi"]' data-chart-data='[[12, 19, 3, 5, 2, 3], [2, 3, 12, 19, 3, 5]]'></canvas>
            </div>
            <div class="tab-pane fade" id="profile">...</div>
            <div class="tab-pane fade" id="contact">...</div>
          </div>
        </div>
