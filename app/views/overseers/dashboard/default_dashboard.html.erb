<%= render layout: 'overseers/dashboard/show' do %>

  <div class="form-row mt-3 mt-lg-4">

    <% if policy(:inquiry).index? %>
      <div class="col-md-3">
        <div class="card mb-3 ">
          <div class="card-body">
            <div class="text-center">
              <p class="text-uppercase text-black-50 mb-1"><strong>Inquiries Created</strong>
              </p>
              <h3 class="mb-0"><%= number_with_delimiter(Inquiry.all.size, delimiter: ',') %></h3>
            </div>
          </div>

          <div class="card-footer">
            <a href="<%= overseers_inquiries_path %>" class="btn btn-lg btn-block btn-success">See Inquiries</a>
          </div>
        </div>
      </div>
    <% end %>

    <% if policy(:company).index? %>
      <div class="col-md-3">
        <div class="card mb-3 ">
          <div class="card-body">
            <div class="text-center">
              <p class="text-uppercase text-black-50 mb-1"><strong>Companies Created</strong>
              </p>
              <h3 class="mb-0"><%= number_with_delimiter(Company.all.size, delimiter: ',') %></h3>
            </div>
          </div>
          <div class="card-footer">
            <a href="<%= overseers_companies_path %>" class="btn btn-lg btn-block btn-success">See Companies</a>
          </div>
        </div>
      </div>
