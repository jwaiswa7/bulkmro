            </div>
          </div>
          <div class="card-footer">
            <a href="<%= overseers_categories_path %>" class="btn btn-lg btn-block btn-success">See Categories</a>
          </div>
        </div>
      </div>
    <% end %>
    <% if policy(:account).index? %>
