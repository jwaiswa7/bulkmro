    <% if policy(:address_state).index? %>

      <div class="col-md-3">
        <div class="card mb-3 ">
          <div class="card-body">
            <div class="text-center">
              <p class="text-uppercase mb-1"><strong>Address State</strong></p>
              <h3 class="mb-0"><%= number_with_delimiter(AddressState.all.size, delimiter: ',') %></h3>
            </div>
