
  <div class="<%= current_overseer.acl_role.role_name == 'Inside Sales and Logistic Manager' ? 'bmro-sales-dash-leftside' : 'bmro-dash-leftside' %>">
    <div class="bmro-width100 leftside">
      <div class="bmro-width100 status-height">
        <div class="bmro-dash-box">
          <% if @dashboard.main_statuses.is_a?(Array) %>
            <% @dashboard.main_statuses.each do |status| %>
              <div class="bmro-same-box col status-box" data-status="<%= status %>">
                <label><%= status %></label>
                <h5><%= @dashboard.get_status_metrics(status)[:'count'] %></h5>
                <span><%= format_currency(@dashboard.get_status_metrics(status)[:'value']) %></span>
              </div>
            <% end %>
          <% else %>
            <% @dashboard.main_statuses.each do |box_name, status_names| %>
              <div class="bmro-same-box col status-box" data-status="<%= box_name %>">
                <label><%= box_name %></label>
                <h5><%= @dashboard.get_status_metrics_for_sales_manager(status_names)[:'count'] %></h5>
                <span><%= format_currency(@dashboard.get_status_metrics_for_sales_manager(status_names)[:'value']) %></span>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="bmro-width100 bmro-main-pedding  <%= current_overseer.acl_role.role_name == 'Inside Sales and Logistic Manager' ? 'main-sales-pedding' : 'main-pedding' %>">
        <div class="<%= current_overseer.acl_role.role_name == 'Inside Sales and Logistic Manager' ? 'bmro-sales-dash-inqu' : 'bmro-dash-inqu' %> h-100">
          <div class="bmro-width100 bmro-inquries-main inquiries-card h-100">
            <div class="inquiry-list-wrapper h-100">
              <% if current_overseer.acl_role.role_name == 'Inside Sales and Logistic Manager' %>
                <%= render partial: 'overseers/dashboard/sales_manager/inquiry_list_sales_manager_wrapper', locals:{inq_for_dash: @dashboard.inq_for_dash, inq_for_sales_manager_dash: @dashboard.inq_for_sales_manager_dash_by_name } %>
              <% else %>
                <%= render partial: 'overseers/dashboard/common/inquiry_list_wrapper', locals:{inq_for_dash: @dashboard.inq_for_dash} %>
              <% end %>
            </div>
          </div>

        </div>
        <div class="bmro-dash-task h-100" id="bmro-dash-task">
          <div class="bmro-width100 accordion bmro-all-task-action h-100">
            <div class="bmro-width100 bmro-pl-pr task-ht">
              <p class="bmro-big-heading bmro-fl bmro-cursol bmro-font-size-dash dropdown-toggle"  data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" role="button">
                All Tasks
            </div>

            <% if current_overseer.acl_role.role_name == 'Inside Sales Executive' || current_overseer.acl_role.role_name == 'Inside Sales and Logistic Manager' %>
              <div class="bmro-width100 bmro-mt-collas subhead-height">
                <div class="bmro-width100 bmro-pl-pr">
                  <div class="bmro-all-task-th bmro-task-td-width">
                    <span class="bmro-task-th">Inquiry</span>
                  </div>
                  <div class="bmro-all-task-th bmro-task-width">
                    <span class="bmro-task-th bmro-task-th-p0">Task</span>
                  </div>
                  <div class="bmro-all-task-th bmro-action-width bmro-text-left">
                    <span class="bmro-task-th d-flex justify-content-end">Actions</span>
                  </div>
                </div>
              </div>
              <div class="bmro-width100 bmro-mt-collas content-mid-height">
                <div class="task-list-wrapper h-100">
                  <%= render partial: 'overseers/dashboard/sales_executive/task_list_wrapper', locals:{inq_for_dash: @dashboard.inq_for_dash, show_all_tasks: true, show_inquiry_tasks: false, inquiry_has_tasks: false} %>
                </div>
              </div>
            <% elsif current_overseer.acl_role.role_name == 'Accounts' %>
              <div class="bmro-width100 bmro-mt-collas subhead-height">
                <div class="bmro-width100 bmro-pl-pr">
                  <div class="bmro-all-task-th bmro-fl bmro-task-td-inquiry-width">
                    <span class="bmro-task-th bmro-task-th-p0">Inquiry</span>
                  </div>
                  <div class="bmro-all-task-th bmro-fl bmro-task-td-width-new-account">
                    <span class="bmro-task-th bmro-task-th-p0">SO</span>
                  </div>
                  <div class="bmro-all-task-th bmro-fl bmro-task-td-width-new-account">
                    <span class="bmro-task-th bmro-task-th-p0">PO</span>
                  </div>
                  <div class="bmro-all-task-th bmro-fl bmro-task-width-new-account">
                    <span class="bmro-task-th bmro-task-th-p0">Task</span>
                  </div>
                  <div class="bmro-all-task-th bmro-fr bmro-task-td-action-width">
                    <span class="bmro-task-th d-flex justify-content-end bmro-right-pad4">Action</span>
                  </div>
                </div>
              </div>
              <div class="bmro-width100 bmro-mt-collas content-mid-height">
                <div class="task-list-wrapper h-100">
                  <%= render partial: 'overseers/dashboard/accounts/account_task_list_wrapper', locals:{inq_for_dash: @dashboard.inq_for_dash, show_all_tasks: true, show_inquiry_tasks: false, inquiry_has_tasks: false} %>
                </div>
              </div>
            <% end %>

          </div>
          <div class="bmro-width100 bmro-order-hide bmro-order-action inquiry-tasks">

          </div>
        </div>
      </div>
    </div>
  </div>

  <%= render partial: 'overseers/dashboard/common/email_template' %>