<% if show_inquiry_tasks %>
  <div class="bmro-width100 bmro-pl-pr">
    <div class="bmro-task-header">
      <span class="bmro-small-heading bmro-width100 bmro-small-heading-mb">Inquiry No</span>
      <h5 class="bmro-big-heading bmro-fl">
        <%= inq_for_dash[0].inquiry_number %> - Tasks
      </h5>
    </div>
    <div class="bmro-task-header bmr-text-right">
      <span class="bmro-small-heading bmro-width100 bmro-small-heading-mb">Company</span>
      <h5 class="bmro-big-heading">
        <%= inq_for_dash[0].company.name %>
      </h5>
    </div>
  </div>
  <div class="bmro-width100 bmro-pl-pr bmro-order-border-top">
  </div>
<% end %>

<div id="collapseOne" class="collapse show bmro-width100">
  <% if show_all_tasks || (show_inquiry_tasks && inquiry_has_tasks) %>
    <% inq_for_dash.each do |inquiry| %>

      <% inquiry.invoice_requests.each do |invoice_req| %>
        <% if (invoice_req.status == 'GRPO Pending' ||  invoice_req.status == 'Pending AR Invoice') && !invoice_req.grpo_number.present? %>
          <div class="bmro-width100 bmro-padding-task">
            <div class="bmro-task-no-td bmro-task-td-width bmro-fl bmro-position-relative" >
              <span class="bmro-big-heading bmro-fl bmro-no-mrl bmro-td-span"><%= inquiry.inquiry_number %></span>
            </div>

            <div class="bmro-task-no-td bmro-task-td-width bmro-fl" >
              <span class="bmro-big-heading bmro-fl bmro-no-mrl bmro-td-span"><%= invoice_req.sales_order.present? ? invoice_req.sales_order.order_number : '-----------' %></span>
            </div>

            <div class="bmro-task-no-td bmro-task-td-width bmro-fl" >
              <span class="bmro-big-heading bmro-fl bmro-no-mrl bmro-td-span"><%= invoice_req.purchase_order.po_number %></span>
            </div>

            <div class="bmro-task-print bmro-task-width bmro-fl" >
              <div class="bmro-commited-data bmro-task-td">
                Add GRPO SAP number.
              </div>
            </div>
            <div class="bmro-action-button-parent bmro-action-width bmro-fl">
              <%= simple_form_for :invoice_request, html: {class: 'sales-form-inline'}, :url => update_invoice_request_overseers_dashboard_path do |f| %>
                <%= f.hidden_field :inquiry_number, value: inquiry.inquiry_number %>
                <%= f.hidden_field :invoice_request_id, value: invoice_req.id %>
                <%= f.input :grpo_number, placeholder: "SAP GRPO No", :as => :string, input_html: {class: "form-control bmro-new-submit-input",:maxlength => 9}, label: false %>
                <%= f.submit :submit, class: "btn bmro-button btn-dashboard" %>
              <% end %>
            </div>
          </div>
        <% end %>

        <% if invoice_req.status == 'Pending AP Invoice' && !invoice_req.ap_invoice_number.present? %>
          <div class="bmro-width100 bmro-padding-task">
            <div class="bmro-task-no-td bmro-task-td-width bmro-fl bmro-position-relative" >
              <span class="bmro-big-heading bmro-fl bmro-no-mrl bmro-td-span"><%= inquiry.inquiry_number %></span>
            </div>

            <div class="bmro-task-no-td bmro-task-td-width bmro-fl" >
              <span class="bmro-big-heading bmro-fl bmro-no-mrl bmro-td-span"><%= invoice_req.sales_order.present? ? invoice_req.sales_order.order_number : '-----------' %></span>
            </div>

            <div class="bmro-task-no-td bmro-task-td-width bmro-fl" >
              <span class="bmro-big-heading bmro-fl bmro-no-mrl bmro-td-span"><%= invoice_req.purchase_order.po_number %></span>
            </div>

            <div class="bmro-task-print bmro-task-width bmro-fl" >
              <div class="bmro-commited-data bmro-task-td">
                Add AP SAP number.
              </div>
            </div>
            <div class="bmro-action-button-parent bmro-action-width bmro-fl">
              <%= simple_form_for :invoice_request, html: {class: 'sales-form-inline'}, :url => update_invoice_request_overseers_dashboard_path do |f| %>
                <%= f.hidden_field :inquiry_number, value: inquiry.inquiry_number %>
                <%= f.hidden_field :invoice_request_id, value: invoice_req.id %>
                <%= f.input :ap_invoice_number, placeholder: "SAP AP No", :as => :string, input_html: {class: "form-control bmro-new-submit-input"}, label: false %>
                <%= f.submit :submit, class: "btn bmro-button btn-dashboard" %>
              <% end %>
            </div>
          </div>
        <% end %>

        <% if invoice_req.status == 'Pending AR Invoice' %>
          <div class="bmro-width100 bmro-padding-task">
            <div class="bmro-task-no-td bmro-task-td-width bmro-fl bmro-position-relative" >
              <span class="bmro-big-heading bmro-fl bmro-no-mrl bmro-td-span"><%= inquiry.inquiry_number %></span>
            </div>

            <div class="bmro-task-no-td bmro-task-td-width bmro-fl" >
              <span class="bmro-big-heading bmro-fl bmro-no-mrl bmro-td-span"><%= invoice_req.sales_order.present? ? invoice_req.sales_order.order_number : '-----------' %></span>
            </div>

            <div class="bmro-task-no-td bmro-task-td-width bmro-fl">
              <span class="bmro-big-heading bmro-fl bmro-no-mrl bmro-td-span"><%= invoice_req.purchase_order.po_number %></span>
            </div>

            <div class="bmro-task-print bmro-task-width bmro-fl" >
              <div class="bmro-commited-data bmro-task-td">
                Add AR number.
              </div>
            </div>
            <div class="bmro-action-button-parent bmro-action-width bmro-fl">
              <%= link_to 'AR pending invoice', edit_overseers_ar_invoice_request_path(invoice_req.ar_invoice_number ), class: "btn bmro-button btn-dashboard", target: "_blank" %>
            </div>
          </div>
        <% end %>


      <% end %>
      <% if inquiry.status == 'SO Draft: Pending Accounts Approval' %>

        <div class="bmro-width100 bmro-padding-task">
          <div class="bmro-task-no-td bmro-task-td-width bmro-fl bmro-position-relative" >
            <span class="bmro-big-heading bmro-fl bmro-no-mrl bmro-td-span"><%= inquiry.inquiry_number %></span>
          </div>

          <div class="bmro-task-no-td bmro-task-td-width bmro-fl" >
            <span class="bmro-big-heading bmro-fl bmro-no-mrl bmro-td-span"> <%= inquiry.sales_orders.last.order_number if inquiry.sales_orders.present? %> </span>
          </div>

          <div class="bmro-task-no-td bmro-task-td-width bmro-fl" >
            <span class="bmro-big-heading bmro-fl bmro-no-mrl bmro-td-span"> ------------ </span>
          </div>

          <div class="bmro-task-print bmro-task-width bmro-fl" >
            <div class="bmro-commited-data bmro-task-td">
              Sales Order Approve / Reject
            </div>
          </div>

          <div class="bmro-action-button-parent bmro-action-width bmro-fl">
            <%= link_to 'Approve / Reject', new_accounts_confirmation_overseers_inquiry_sales_order_path(inquiry_id: inquiry.to_param, id: inquiry.sales_orders.last.to_param), class: "btn bmro-button btn-dashboard", target: "_blank" if inquiry.sales_orders.present? %>
          </div>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <div class="bmro-width100 bmro-padding-task">
      <div class="bmro-task-print text-center">
        No tasks available
      </div>
    </div>
  <% end %>
</div>