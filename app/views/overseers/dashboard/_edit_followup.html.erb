<%= form_tag update_followup_date_overseers_inquiry_path, method: 'post', class: 'my-2 form-row' do %>
  <div class="message-in-order">
    <div id="update-followup-date" class="modal hide fade" role="dialog" aria-hidden="true">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Order filters</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="form-group mt-3">
              <label>Follow-up Date</label>
              <input type="text" id="date" name="date" class="form-control" data-toggle="datepicker" data-direction="right" placeholder="Select follow-up date">
              <small style="font-size: 10px;">Select a new follow-up date</small>
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-success">Apply</button>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>