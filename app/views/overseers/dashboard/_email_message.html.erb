<div class="col-lg-12">
  <%= simple_form_for([:overseers, inquiry, email_message], :html => {:class => 'card needs-validation mt-3', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <div class="card-body">
      <div class="form-group">
        <%= f.input :from, disabled: true %>
      </div>

      <div class="form-group">
        <%= f.input :to %>
      </div>

      <div class="form-group">
        <%= f.input :cc %>
      </div>
      <div class="form-group">
        <%= f.input :bcc %>
      </div>

      <div class="form-group">
        <%= f.input :subject %>
      </div>

      <div class="form-group">
        <%= f.input :files, wrapper: :custom_file, input_html: {multiple: true} %>
      </div>

      <div class="form-group" style="overflow: auto !important;">
        <%= f.input :body, input_html: {class: 'html-editor'} %>
      </div>
    </div>
    <div class="card-footer bmro-card-footer">
      <div class="row">
        <div class="col-md-6">
          <%= button_tag(type: "submit", class: "bmro-button btn btn-success btn-block") do %>
            <i class="bmro-fa-paper-plane"></i> Send Email
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
