<div class="col-lg-12">
  <div class="page-header">
    <h2><%= action_name.capitalize %> Review Question</h2>
    <!-- <p>This will <em>'<%= submit_text(@review_question).downcase %>'</em> and log it under
      <strong><%= current_overseer.full_name %></strong>.</p> -->
  </div>
  <%= simple_form_for([:overseers, @review_question], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= render 'shared/snippets/form_errors', f: f %>
    <div class="bmro-card bmro-card-padding">
      <div class="form-group">
        <%= f.input :question, :placeholder => 'e.g. Product Technical Expertise', :required => 'true',  input_html: { class: 'bmro-form-input bmro-bg' },:class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.input :weightage, :placeholder => 'e.g. 30', :required => 'true', input_html: { class: 'bmro-form-input bmro-bg' }, :class => 'form-control' %>
      </div>

  <!--    <div class="form-group">-->
        <%#= f.input :rating, :placeholder => '', :required => 'true', :class => 'form-control' %>
  <!--    </div>-->

      <div class="form-group">
        <%= f.input :question_type, :wrapper => :custom_multi_select, input_html: { class: 'bmro-form-input bmro-dropdown-icon bmro-bg' }, as: :select, include_blank: "Select Review Question Type",collection: enum_to_collection(ReviewQuestion.question_types) %>
      </div>

      <div class="mt-3">
        <% if action_name.capitalize == "New" %>
          <%= button_tag(type: "submit", class: "btn btn-success btn-block bmro-button") do %>
            <i class="fal fa-plus-circle"></i> Create Review Question
          <% end %>
        <% else %>
          <%= button_tag(type: "submit", class: "btn btn-warning btn-block mb-2 bmro-button") do %>
            <i class="fal fa-pen"></i> Update Review Question
          <% end %>
        <% end %>
      </div>
    </div> 
  <% end %>
</div>