<% provide :container_fluid, true %>
<% provide :can_be_directly_created, true %>
<% provide :can_be_ajaxed, true %>

<% content_for :notice_message do %>
  <ul class="list-group text-primary mb-3">
  <% if ReviewQuestion.overall_weightage('Sales').to_i != 100 %>
      <li class="list-group-item">
        <i class="fal fa-exclamation-triangle mr-2"></i>Overall weightage of Sales Type Questions is not 100. Please adjust weightage.
      </li>
  <% end %>
  <% if ReviewQuestion.overall_weightage('Logistics').to_i != 100 %>
      <li class="list-group-item">
        <i class="fal fa-exclamation-triangle mr-2"></i>Overall weightage of Logistics Type Questions is not 100. Please adjust weightage.
      </li>
  <% end %>
  </ul>
<% end %>

<% content_for :header_row do %>
  <th class="no-sort"></th>
  <th class="no-sort">Question</th>
  <th class="no-sort">Type</th>
  <th class="no-sort">Weightage</th>
<% end %>

<div class="col-lg-12">
  <%= render layout: 'shared/layouts/datatable' do %>
  <% end %>
</div>