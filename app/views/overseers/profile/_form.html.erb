<div class="col-lg-12">
  <div class="page-header">
    <h2><%= action_name.capitalize %> Overseer</h2>
    <p>This will <em>'<%= submit_text(@overseer).downcase %>'</em> and log it under <strong><%= current_overseer.full_name %></strong>.</p>
  </div>

  <%= simple_form_for(@overseer, url: overseers_profile_path, :method => :patch, :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <div class="form-row">
      <div class="col-6">
        <%= f.input :first_name, :required => true %>
      </div>
      <div class="col-6">
        <%= f.input :last_name, :required => true %>
      </div>
    </div>

     <div class="form-row">
      <div class="col-6">
        <%= f.input :smtp_password, as: :string %>
      </div>
      <div class="col-6">
        <%= f.input :slack_uid %>
      </div>
    </div>


    <% if action_name.capitalize == "New" %>
      <%= button_tag(type: "submit", class: "btn btn-success btn-block") do %>
        <i class="fal fa-plus-circle"></i> <%= submit_text(@overseer) %>
      <% end %>
    <% else %>
      <%= button_tag(type: "submit", class: "btn btn-warning btn-block") do %>
        <i class="fal fa-pen"></i> <%= submit_text(@overseer) %>
      <% end %>
    <% end %>
  <% end %>
</div>