<div class="col-lg-12">
  <%= render 'shared/snippets/page_header', e: @overseer %>

  <%= simple_form_for(@overseer, url: overseers_profile_path, :method => :patch, :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <div class="form-row">
      <div class="col-6">
        <%= f.input :first_name, :required => true, placeholder: 'e.g. Jon' %>
      </div>
      <div class="col-6">
        <%= f.input :last_name, :required => true, placeholder: 'e.g. Snow' %>
      </div>
      <div class="col-6">
        <%= f.input :mobile %>
      </div>
      <div class="col-6">
        <%= f.input :telephone %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-6">
        <%= f.input :smtp_password, as: :string, label: 'SMTP Password', placeholder: 'e.g. password@1337' %>
      </div>
      <div class="col-6">
        <%= f.input :slack_uid, label: 'Slack UID', placeholder: 'e.g. amit.goyal' %>
      </div>
    </div>

    <%= action_button(action_name, @overseer) %>
  <% end %>
</div>