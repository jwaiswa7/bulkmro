<div class="col-lg-12">
  <section class="pt-3 pt-lg-4 pb-2">
    <div class="d-md-flex justify-content-between">
      <h3 class="display-5 d-flex align-items-center">
        <% if @freight_request.sales_order.present? %>
          Freight Request for Order <%= format_id(@freight_request.sales_order.order_number) %>
          :&nbsp;<%= status_badge(@freight_request.status) %>
        <% else %>
          Freight Request for Inquiry <%= format_id(@freight_request.inquiry.inquiry_number) %>
          :&nbsp;<%= status_badge(@freight_request.status) %>
        <% end %>
      </h3>
      <% if policy(@freight_request).edit? %>
        <a href="<%= edit_overseers_freight_request_path(@freight_request) %>" class="btn btn-warning btn-rounded align-self-center btn-block-sm-down"><i class="fal fa-pen mr-1"></i>Edit</a>
      <% end %>

      <% if policy(@freight_request).new_freight_quote? %>
        <a href="<%= new_overseers_freight_request_freight_quote_path(@freight_request) %>" class="btn btn-success btn-rounded align-self-center btn-block-sm-down"><i class="fal fa-plus-circle mr-1"></i>New Freight Quote</a>
      <% end %>

    </div>
  </section>

  <section class="mb-3">
    <div class="card mb-2">
      <div class="card-body">
        <div>
          <h6 class="text-uppercase text-black-50 mb-1">Freight Request Type</h6>
          <div class="form-row">
            <% if @freight_request.request_type.present? %>
              <div class="col-6">
                <%= @freight_request.request_type %>
              </div>
            <% end %>

            <% if @freight_request.delivery_type.present? %>
              <div class="col-6">
                <strong class="d-block">Delivery Type</strong>
                <%= @freight_request.delivery_type %>
              </div>
            <% end %>
          </div>
        </div>

        <div class="mt-3 card-alternative">
          <h6 class="text-uppercase text-black-50 mb-1">Freight Details</h6>
          <div class="form-row">
            <% if @freight_request.sales_order.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Sales Order #</strong>
                <%= link_to overseers_inquiry_sales_order_path(@freight_request.inquiry, @freight_request.sales_order), target: '_blank' do %>
                  <%= format_id(@freight_request.sales_order.order_number) %>
                <% end %>
              </div>
            <% end %>

            <% if @freight_request.inquiry.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Inquiry #</strong>
                <% if policy(@freight_request.inquiry).edit? %>
                  <%= link_to overseers_inquiry_path(@freight_request.inquiry), target: '_blank' do %>
                    <%= format_id(@freight_request.inquiry.inquiry_number) %>
                  <% end %>
                <% else %>
                  <%= format_id(@freight_request.sales_order.order_number) %>
                <% end %>
              </div>
            <% end %>

            <% if @freight_request.status.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Status</strong>
                <%= status_badge(@freight_request.status) %>
              </div>
            <% end %>

            <% if @freight_request.inquiry.present? && @freight_request.inquiry.inside_sales_owner.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Inside Sales</strong>
                <%= @freight_request.inquiry.inside_sales_owner.to_s %>
              </div>
            <% end %>

          </div>

          <% if @freight_request.attachments.attached? %>
            <div class="form-row">
              <div class="col-12 col-md-3 mb-2">
                <strong class="d-block">Attachments </strong>
                <% @freight_request.attachments.each do |attachment| %>
                  <%= link_to url_for(attachment), class: 'ml-md-1 btn btn-success', target: '_blank', :"data-toggle" => 'tooltip', :status => attachment.filename do %>
                    <i class="fal fa-download"></i>
                    <%= link_to overseers_attachment_path(attachment.id), class: 'btn btn-outline-danger btn-sm ml-1 mr-1 mr-md-0', method: :delete, data: {confirm: 'Are you sure?'}, :"data-toggle" => 'tooltip', :status => ['Delete', ' ', attachment.filename, '?'].join('') do %>
                      <i class="fal fa-trash-alt"></i>
                    <% end if attachment.present? && policy(:attachment).destroy? %>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <div class="mt-3">
          <h6 class="text-uppercase text-black-50 mb-1">Address Details</h6>
          <div class="form-row">
            <% if @freight_request.supplier.present? %>
              <div class="col-6">
                <strong class="d-block">Supplier</strong>
                <%= @freight_request.supplier.name %>
              </div>
            <% end %>

            <% if @freight_request.company.present? %>
              <div class="col-6">
                <strong class="d-block">Company</strong>
                <%= @freight_request.company.name %>
              </div>
            <% end %>
          </div>

          <div class="form-row mt-1">
            <% if @freight_request.pick_up_address.present? %>
              <div class="col-6">
                <strong class="d-block">Pick Up Address</strong>
                <%= @freight_request.pick_up_address.to_s %>
              </div>
            <% end %>

            <% if @freight_request.delivery_address.present? %>
              <div class="col-6">
                <strong class="d-block">Delivery Address</strong>
                <%= @freight_request.delivery_address.to_s %>
              </div>
            <% end %>
          </div>
        </div>

        <div class="mt-3 card-alternative">
          <h6 class="text-uppercase text-black-50 mb-1">Delivery Data</h6>
          <div class="form-row">
            <% if @freight_request.weight.present? %>
              <div class="col-4">
                <strong class="d-block">Weight</strong>
                <%= @freight_request.weight %>
              </div>
            <% end %>

            <% if @freight_request.length.present? %>
              <div class="col-4">
                <strong class="d-block">Length</strong>
                <%= @freight_request.length %>
              </div>
            <% end %>

            <% if @freight_request.breadth.present? %>
              <div class="col-4">
                <strong class="d-block">Breadth</strong>
                <%= @freight_request.breadth %>
              </div>
            <% end %>

            <% if @freight_request.width.present? %>
              <div class="col-4">
                <strong class="d-block">Width</strong>
                <%= @freight_request.width %>
              </div>
            <% end %>
          </div>
          <div class="form-row mt-1">
            <% if @freight_request.measurement.present? %>
              <div class="col-4">
                <strong class="d-block">Measurement</strong>
                <%= @freight_request.measurement %>
              </div>
            <% end %>

            <% if @freight_request.volumetric_weight.present? %>
              <div class="col-4 ">
                <strong class="d-block">Volumetric Weight in Kilograms</strong>
                <%= @freight_request.volumetric_weight %>
              </div>
            <% end %>

            <div class="col-4">
              <strong class="d-block">Is Hazardous</strong>
              <%= format_boolean(@freight_request.hazardous) %>
            </div>
          </div>
          <div class="form-row mt-1">
            <div class="col-4">
              <strong class="d-block">Loading</strong>
              <%= @freight_request.loading %>
            </div>
            <div class="col-4">
              <strong class="d-block">Unloading</strong>
              <%= @freight_request.unloading %>
            </div>
            <div class="col-4">
              <strong class="d-block">Pickup Date</strong>
              <%= @freight_request.pickup_date %>
            </div>
          </div>
        </div>

      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <div class="flex-fill">
          <h6 class="text-uppercase text-black-50 mb-1">Comments History</h6>
        </div>

        <% if @freight_request.comments.persisted.size > 0 %>
          <div class="chats">
            <% @freight_request.comments.each do |comment| %>
              <%= format_comment(comment) %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</div>