<div class="col-lg-12">
  <div class="page-header">
    <h2><%= action_name.capitalize %> Freight Request for
      Inquiry <%= format_id(@freight_request.inquiry.inquiry_number) %>
      :&nbsp;<%= status_badge(@freight_request.status) %></h2>
    <p>This will <em>'<%= submit_text(@freight_request).downcase %>'</em> and log it under
      <strong><%= current_overseer.full_name %></strong>.</p>
  </div>

  <%= simple_form_for([:overseers, @freight_request], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <div class="card">
      <%= render 'shared/snippets/form_errors', f: f %>
      <div class="card-body">
        <% if policy(@freight_request).edit_request? %>
          <div>
            <%= f.hidden_field :id %>
            <%= f.hidden_field :sales_order_id %>
            <%= f.hidden_field :sales_quote_id %>
            <%= f.hidden_field :inquiry_id %>
            <%= f.hidden_field :company_id %>
            <div class="form-row">
              <div class="col-6">
                <%= f.input :request_type, as: :select, :wrapper => :custom_multi_select, collection: enum_to_collection(FreightRequest.request_types, alphabetical: false), :include_blank => false, label: "International / Domestic" %>
              </div>
              <div class="col-6">
                <%= f.input :delivery_type, as: :select, :wrapper => :custom_multi_select, collection: enum_to_collection(FreightRequest.delivery_types, alphabetical: false), :include_blank => false, label: "Delivery Type" %>
              </div>
            </div>
          </div>
        <% end %>

        <div class="mt-3 card-alternative">
          <h6 class="text-uppercase text-black-50 mb-1">Freight Details</h6>
          <% if policy(@freight_request).edit_request? %>
            <div class="form-row">
              <div class="col-6">
                <%= f.association :sales_order, collection: [f.object.sales_order], label_method: :to_s, include_blank: "Type Order Number", input_html: {class: 'select2-ajax select2-wrap-text', :'data-source' => autocomplete_overseers_inquiry_sales_orders_path(f.object.inquiry), :'data-parsley-errors-messages-disabled' => '', :'data-parsely-no-valid-feedback' => ''}, label: "Order Number" %>
              </div>
              <div class="col-6">
                <%= f.association :inquiry, disabled: true, collection: [f.object.inquiry], label_method: :to_s, include_blank: "Type Inquiry Number", input_html: {class: 'select2-ajax select2-wrap-text', :'data-source' => autocomplete_overseers_inquiries_path, :'data-parsley-errors-messages-disabled' => '', :'data-parsely-no-valid-feedback' => ''}, label: "Inquiry Number" %>
              </div>

              <div class="col-6">
                <%= f.association :sales_quote, collection: [f.object.sales_quote], label_method: :to_s, include_blank: "Type Quote Number", input_html: {class: 'select2-ajax select2-wrap-text', :'data-source' => overseers_inquiry_sales_quotes_path(f.object.inquiry), :'data-parsley-errors-messages-disabled' => '', :'data-parsely-no-valid-feedback' => ''}, label: "Quote Number" %>
              </div>

              <div class="col-6">
                <%= f.input :status, as: :select, :wrapper => :custom_multi_select, collection: enum_to_collection(FreightRequest.statuses, alphabetical: false, keep_raw: true), :include_blank => false %>
              </div>

              <div class="col-6">
                <%= f.association :supplier, :wrapper => :custom_multi_select, label_method: :to_s, include_blank: "Select Supplier Company", required: true %>
              </div>

              <div class="col-6">
                <%= f.association :company, :wrapper => :custom_multi_select, label_method: :to_s, include_blank: "Select Company", disabled: true %>
              </div>

              <div class="col-6">
                <%= f.association :pick_up_address, collection: selected_option_or_nil(f, :pick_up_address), required: true, label_method: :to_s, include_blank: "Select Pick up address", input_html: {class: 'select2-ajax', :'data-source' => autocomplete_overseers_addresses_path(company_id: f.object.supplier_id)} %>
              </div>

              <div class="col-6">
                <%= f.association :delivery_address, collection: selected_option_or_nil(f, :delivery_address), required: true, label_method: :to_s, include_blank: "Select Delivery address", input_html: {class: 'select2-ajax', :'data-source' => autocomplete_overseers_addresses_path(company_id: f.object.company_id)} %>
              </div>

              <div class="col-12 col-md-12">
                <div class="d-block d-md-flex align-items-end">
                  <div class="flex-grow-1">
                    <%= f.input :attachments, wrapper: :custom_file, input_html: {multiple: true}, label: 'Attachments' %>
                  </div>
                  <div class="form-group">
                    <% f.object.attachments.each do |attachment| %>
                      <%= link_to url_for(attachment), class: 'ml-md-1 btn btn-success', target: '_blank', :"data-toggle" => 'tooltip', :status => attachment.filename do %>
                        <i class="fal fa-download"></i>
                        <%= link_to overseers_attachment_path(attachment.id), class: 'btn btn-outline-danger btn-sm ml-1 mr-1 mr-md-0', method: :delete, data: {confirm: 'Are you sure?'}, :"data-toggle" => 'tooltip', :status => ['Delete', ' ', attachment.filename, '?'].join('') do %>
                          <i class="fal fa-trash-alt"></i>
                        <% end if attachment.present? && policy(:attachment).destroy? %>
                      <% end %>
                    <% end if f.object.attachments.attached? %>
                  </div>
                </div>
              </div>
            </div>
          <% else %>
            <div class="form-row">
              <div class="col-6">
                <%= f.input :status, as: :select, :wrapper => :custom_multi_select, collection: enum_to_collection(FreightRequest.statuses, alphabetical: false, keep_raw: true), :include_blank => false %>
              </div>
            </div>
          <% end %>
        </div>
        <% if policy(@freight_request).edit_request? %>
          <div class="mt-3">
            <h6 class="text-uppercase text-black-50 mb-1">Delivery Data</h6>
            <div class="form-row">
              <div class="col-3">
                <%= f.input :weight, input_type: "number" %>
              </div>

              <div class="col-3">
                <%= f.input :length, input_html: {class: 'calculate-metric'} %>
              </div>

              <div class="col-3">
                <%= f.input :breadth, input_html: {class: 'calculate-metric'} %>
              </div>

              <div class="col-3">
                <%= f.input :width, input_html: {class: 'calculate-metric'} %>
              </div>

              <div class="col-6">
                <%= f.input :measurement, as: :select, :wrapper => :custom_multi_select, collection: enum_to_collection(FreightRequest.measurements, alphabetical: false), :include_blank => false %>
              </div>

              <div class="col-6">
                <%= f.input :volumetric_weight, readonly: true, label: "Volumetric Weight in Kilograms" %>
              </div>

              <div class="col-3">
                <%= f.input :hazardous, as: :select, :wrapper => :custom_multi_select, :include_blank => false, label: "Hazardous" %>
              </div>
            </div>
          </div>
        <% end %>

        <div class="mt-3 card-alternative">
          <div class="form-row">
            <div class="col-12">
              <%= f.nested_fields_for :comments, f.object.comments.build(:overseer => current_overseer) do |freight_request_comment| %>
                <%= freight_request_comment.hidden_field :created_by_id %>
                <%= freight_request_comment.hidden_field :updated_by_id %>
                <%= freight_request_comment.input :message, :placeholder => 'Type message', input_html: {:'data-parsely-no-valid-feedback' => ''} %>
              <% end %>
            </div>
          </div>
        </div>

        <div class="mt-3">
          <% if action_name.capitalize == "New" %>
            <%= button_tag(type: "submit", class: "btn btn-success btn-block") do %>
              <i class="fal fa-plus-circle"></i> Create Freight Request
            <% end %>
          <% else %>
            <%= button_tag(type: "submit", class: "btn btn-warning btn-block mb-2") do %>
              <i class="fal fa-pen"></i> Update Freight Request
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <% if action_name.capitalize != "New" %>
    <div class="card mt-3">
      <div class="card-body">
        <div class="flex-fill">
          <h6 class="text-uppercase text-black-50 mb-1">Comments History</h6>
        </div>

        <% if @freight_request.comments.persisted.size > 0 %>
          <div class="chats mb-3">
            <% @freight_request.comments.each do |comment| %>
              <% if comment.persisted? %>
                <%= format_comment(comment) %>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
