<% provide :container_fluid, true %>
<% provide :can_be_ajaxed, true %>
<% provide :wrap_whitespace, true %>

<% content_for :heading do %>
  <% ['Freight Quotes', @status].compact.join(': ') %>
<% end %>

<% content_for :header_row do %>
  <th class="no-sort all" data-width="70px"></th>
  <th class="no-sort desktop text-right">Req. No.</th>
  <th class="no-sort desktop text-right">Inquiry #</th>
  <th class="no-sort all text-right">Freight Request #</th>
  <th class="no-sort desktop text-left">Requested At</th>
  <th class="no-sort desktop text-left">Updated At</th>
  <th class="no-sort desktop">Latest Comment</th>
<% end %>

<div class="col-lg-12">
  <%= render layout: 'shared/layouts/datatable' do %>
  <% end %>
</div>