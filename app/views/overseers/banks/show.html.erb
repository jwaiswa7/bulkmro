<div class="col-lg-12">
  <section class="pt-3 pt-lg-4 pb-2">
    <div class="d-md-flex justify-content-between">
      <h3 class="display-5 d-flex align-items-center">
        <%= @bank.name %>
      </h3>
      <a href="<%= edit_overseers_bank_path(@bank) %>" class="btn btn-warning bmro-button btn-rounded align-self-center btn-block-sm-down">
        <i class="bmro-update-icon"></i>Edit Bank Details
      </a>
    </div>
  </section>

  <section class="mb-3">
    <div class="card">
      <div class="card-body">
        <div>
          <h6 class="text-uppercase text-black-50 mb-1 bmro-form-heading">Bank Details</h6>
          <div class="form-row">
            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block bmro-summary-heading">Name</strong>
              <div class="bmro-summary-data">
                <%= @bank.name %>
              </div>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block bmro-summary-heading">Code</strong>
              <div class="bmro-summary-data">
                <%= @bank.code %>
              </div>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block bmro-summary-heading">Swift Number</strong>
              <div class="bmro-summary-data">
                <%= @bank.swift_number %>
              </div>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block bmro-summary-heading">IBAN</strong>
              <div class="bmro-summary-data">
                <%= @bank.iban %>
              </div>  
              </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block bmro-summary-heading">Country</strong>
              <div class="bmro-summary-data">
                <%= @bank.country_name %>
              </div>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block bmro-summary-heading">SAP ID</strong>
              <div class="bmro-summary-data">
              <%= @bank.remote_uid %>
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>