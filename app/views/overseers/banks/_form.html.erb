<div class="col-lg-12">
  <div class="page-header">
    <h2><%= action_name.capitalize %>Bank</h2>
<!--    <p>This will <em>'<%#= submit_text(@company_bank).downcase %>'</em> and log it under-->
<!--      <strong><%#= current_overseer.full_name %></strong>.</p>-->
  </div>
  <%= simple_form_for([:overseers, @bank], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= render 'shared/snippets/form_errors', f: f %>

    <div class="form-row">
      <div class="col-12">
        <%= f.input :country_code, as: :country, :required => true, :wrapper => :custom_multi_select, priority_countries: ["IN", "US"] %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-6">
        <%= f.input :name, required: true %>
      </div>

      <div class="col-6">
        <%= f.input :code, required: true %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-6">
        <%= f.input :swift_number, required: true, label: "Swift Number" %>
      </div>

      <div class="col-6">
        <%= f.input :iban, label: "IBAN" %>
      </div>
    </div>

    <%= action_button(action_name, @bank) %>
  <% end %>
</div>