
<div class="table-responsive">
  <table id="datatable-buttons" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Companies</th>
      <th>Products</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.id %></td>
        <td><%= brand.name %></td>
        <td><%= format_collection(brand.suppliers) %></td>
        <td><%= format_size(brand.products) %></td>
        <td>
          <a href="<%= edit_overseers_brand_path(brand) %>">Edit</a>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>