<% content_for :page_title do %>
  IFSC Codes
<% end %>
<div class="col-lg-12">
  <section class="pt-3 pt-lg-4 pb-2">
    <div class="d-md-flex justify-content-between">
      <h3 class="display-5 d-flex align-items-center">
        IFSC Code Details for <%= @ifsc_code.bank.name %>
      </h3>
      <a href="<%= edit_overseers_ifsc_code_path(@ifsc_code) %>" class="btn btn-warning btn-rounded align-self-center bmro-button btn-block-sm-down">
        <i class="fal fa-pen mr-1"></i>Edit IFSC Code Details
      </a>
    </div>
  </section>

  <section class="mb-3">
    <div class="card">
      <div class="card-body">
        <div>
          <h6 class="text-uppercase text-black-50 mb-2">IFSC Code Details </h6>
          <div class="form-row">
            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Bank Name</strong>
              <%= @ifsc_code.bank.name %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">IFSC Code</strong>
              <%= @ifsc_code.ifsc_code %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Branch</strong>
              <%= @ifsc_code.branch %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Country</strong>
              <%= @ifsc_code.bank.country_name %>
            </div>
          </div>
          <div class="form-row">
            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Address</strong>
              <%= @ifsc_code.address %><br>
              <% if @ifsc_code.contact.present?%><strong>Contact: </strong><%= @ifsc_code.contact %><br><% end %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">City</strong>
              <%= @ifsc_code.city %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">District</strong>
              <%= @ifsc_code.district %>
            </div>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">State</strong>
              <%= @ifsc_code.state %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </section>
</div>