<div class="col-lg-12">
  <div class="page-header">
    <h2><%= action_name.capitalize %> Category</h2>
    <p>This will <em>'<%= submit_text(@category).downcase %>'</em> and log it under
      <strong><%= current_overseer.full_name %></strong>.</p>
  </div>
  <%= simple_form_for([:overseers, @category], :html => {:class => 'needs-validation', :'novalidate' => '', :'data-parsley-validate' => ''}) do |f| %>
    <%= f.input :name %>
    <%= f.input :is_service %>

    <% if @category.persisted? %>
      <%= f.association :parent, :wrapper => :custom_multi_select, :label_method => :to_s, collection: selected_option_or_nil(f,:parent), input_html: { class: 'select2-ajax', :'data-source' => autocomplete_closure_tree_overseers_categories_path(calling_category_id: @category.to_param) } %>
    <% else %>
      <%= f.association :parent, :wrapper => :custom_multi_select, :label_method => :to_s, input_html: { class: 'select2-ajax', :'data-source' => autocomplete_overseers_categories_path }  %>
    <% end %>

    <% if action_name.capitalize == "New" %>
      <%= button_tag(type: "submit", class: "btn btn-success btn-block") do %>
        <i class="fal fa-plus-circle"></i> <%= submit_text(@category) %>
      <% end %>
    <% else %>
      <%= button_tag(type: "submit", class: "btn btn-warning btn-block") do %>
        <i class="fal fa-pen"></i> <%= submit_text(@category) %>
      <% end %>
    <% end %>
  <% end %>
</div>