<%= simple_form_for([:overseers, @category]) do |f| %>
  <%= f.input :created_by, disabled: true %>
  <%= f.input :created_at, disabled: true %>
  <%= f.input :updated_by, disabled: true %>
  <%= f.input :updated_at, disabled: true %>

  <% if @category.persisted? %>
    <%= f.association :parent, :label_method => :to_s, collection: Category.except_objects(@category.self_and_descendants) %>
  <% else %>
    <%= f.association :parent, :label_method => :to_s %>
  <% end %>

  <%= f.input :name %>

  <%= f.submit %>
<% end %>