<a href="<%= new_overseers_category_path %>">
  <button type="button" class="btn btn-primary m-t-10">+ Create New Category</button>
</a>

<hr />

<div class="table-responsive">
  <table id="datatable-buttons" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.id %></td>
          <td><%= category.to_s %></td>
          <td>
            <a href="<%= edit_overseers_category_path(category) %>">Edit</a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>