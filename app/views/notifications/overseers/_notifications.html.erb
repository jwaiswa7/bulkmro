<%= link_to polymorphic_url(notification.notifiable_url.tableize, :id => notification.notifiable_id), class: "dropdown-item #{"unread" if !notification.read_at?}" do %>
  <%= notification.message %><br>
  <small>By <%= notification.overseer.name %></small>
  <small> <%= time_ago_in_words(notification.created_at) %> ago</small>
<% end %>