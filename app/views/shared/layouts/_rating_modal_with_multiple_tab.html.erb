<div class="modal fade" id="multipleRatingForm">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content bmro-bg bmro-modal-margin">
      <div class="modal-header text-center pb-0">
        <button class="bmro-rating-reset">Reset</button>
        <button class="close bmro-rate-close" type="button" data-dismiss="modal"><i class="bmro-btn-cancel-icon"></i></button>
        <h4 class="modal-title bmro-form-heading text-black-50 text-left w-100 text-small pt-1">
          <span class="bmro-rating-head">Company Review</span><br>
          <span class="bmro-rating-desc">Please rate on all parameters before submitting.</span>
        </h4>
<!--        <button type="button" class="btn btn-danger mr-1" data-dismiss="modal" aria-hidden="true"><i class="fal fa-times "></i> Skip</button>-->
<!--        <button type="button" class="btn btn-warning review-later " data-dismiss="modal" aria-hidden="true"><i class="fal fa-clock "></i> Review Later</button>-->
      </div>
      <div class="modal-body mx-0 px-0 pb-0 bmro-model-line"><!--
        <ul class="nav bmro-nav-ul bmro-new-nav nav-tabs nav-fill mx-2"> -->
          <% @company_reviews.each_with_index do |company_review, index| %>
           <!--  <li class="nav-item"> -->
            <label class="bmro-rating-desc bmro-rate-margin">Name Of Company</label>
              <a class="nav-link custom-tab bmro-rating-head disabled <%= index == 0 ? 'active' : '' %>" data-index='<%= index %>' data-toggle="tab" href="<%= '#company-' + index.to_s %>" role="tab" data-id='<%= company_review.id %>'><%= company_review.company.name %></a>
           <!--  </li> -->
          <% end %>
       <!--  </ul> -->
        <div class="tab-content mt-0 bmro-rate-stars">
          <% @company_reviews.each_with_index do |company_review, index| %>
            <div class="tab-pane fade <%= index == 0 ? 'active show' : '' %>" id="<%= 'company-' + index.to_s %>" role="tabpanel">
              <div id=<%= "form-render-div-#{company_review.id}" %>></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="rating-modal bmro-card-footer bmro-bg">
  <a href="#" class="btn btn-default bmro-rate-btn btn-rounded mb-4 d-none" data-toggle="modal" data-target="#multipleRatingForm" data-backdrop="static" data-keyboard="false" data-rating= <%=@company_reviews.map(&:rating).compact.present? %>></a>
</div>

