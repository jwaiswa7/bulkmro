<div class="bmro-float">
  <div class="bmro-invoice-heading">
    <div class="dropdown">
      <span class="bmro-downimg"></span>
      <h4 class="dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%= klass %></h4>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item" href="#">dropdown 1</a>
        <a class="dropdown-item" href="#">dropdown 2</a>
        <a class="dropdown-item" href="#">dropdown 3</a>
      </div>
    </div>
    <input class="form-control is-valid string required bmro-form-ar-invoice bmro-date-bag" data-toggle="daterangepicker" required="required" aria-required="true" type="text" value="25-Sep-2019">
  </div>

  <a class="btn btn-light text-left btn-lg btn-block mt-1 mt-lg-4 bmro-click-toggle bmro-invoice-one collapsed bmro-collapse-button-bg" type="button" data-toggle="collapse" data-target="#summary">
    <% if alias_name.present? %>
      <%= alias_name.titleize %> Summary&nbsp;&nbsp;&nbsp;
    <% else %>
      <%= klass.name.titleize.pluralize %> Summary&nbsp;&nbsp;&nbsp;
      <% end %><!--
    <i class="fa fa-chevron-down" aria-hidden="true"></i> -->
  </a>
  <% if main_summary_statuses.present? %>
    <div class="bmro-float">
        <% main_summary_statuses.each do |status| %>
          <div class="bmro-collaps2">
            <div class="bmro-invoice-data">
              <div class="bmro-invoice-edit">
                <label><%= klass.main_summary_statuses.key(status[0]) %></label>
                <span><%= status[1] %></span>
              </div>
            </div>
          </div>
        <% end %>
    </div>
  <% end %>
</div>
<div id="summary" class="collapse bmro-float bmro-collaps-bg">
  <div class="mt-2 form-row d-flex flex-row align-content-stretch">
    <% if statuses.present? %>
      <% statuses.each do |status, status_id| %>
        <div class="col-4 col-md-3 col-lg-3 col-xl-2 d-flex flex-row align-content-stretch">
          <a data-value="<%= status_id %>" name="status" class="summary_box card w-100 mb-2 rim rim-bottom bmro-border-bottom border-<%= status_color(status) %> status-<%= status_id %>" href="#">
            <div class=" px-2 pt-2 brmo-inward-card">
              <div class="d-flex flex-column h-100">
                <p class="mb-1 text-small bmro-ar-report-head text-uppercase text-<%= status_color(status) %>">
                  <strong><%= format_enum(status) %></strong>
                </p>
                <h5 class="mb-0 bmro-ar-report-data mt-auto text-<%= status_color(status) %> status-count-<%= status_id %>"></h5>
                <h5 class="my-0 bmro-ar-report-subdata text-small text-<%= status_color(status) %> status-value-<%= status_id %>">&#8377;0</h5>
              </div>
            </div>
          </a>
        </div>
      <% end %>
    <% end %>
  </div>
</div>