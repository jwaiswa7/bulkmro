<!DOCTYPE html>
<html lang="en">
<head>
  <%= render 'shared/layouts/components/meta' %>
  <%= render 'shared/layouts/components/fonts' %>
  <%= render 'shared/layouts/components/stylesheets' %>
  <%= render 'shared/layouts/components/ga' %>
  <%= render 'shared/layouts/components/scripts' %>
</head>

<body data-controller="<%= controller_name %>" data-controller-action="<%= action_name %>">
  <%= navigation %>
  <div class="layout layout-nav-top">
    <div class="main-container">
      <%= render 'shared/layouts/components/breadcrumbs' %>

      <div class="container<% if content_for?(:container_fluid) %>-fluid<% end %>">
        <div class="row justify-content-center">
          <%= yield %>

          <% flash.each do |message_type, message| %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
              <%= message %>
              <button class="close" data-dismiss="alert" aria-label="Close">
                <i class="fal fa-times"></i>
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <% if overseer_signed_in? && Rails.env.production? %>
    <%= render 'shared/layouts/components/usersnap' %>
  <% end %>
  </body>
</html>