                    <%= locals[:supplier].name if locals[:supplier].name.present? %><br>
                    <%= locals[:supplier].billing_address&.to_multiline_s %>
                    <br>
                    Tel: <%= record.billing_address&.phone || locals[:supplier]&.phone || (locals[:supplier].default_company_contact.present? ? locals[:supplier].default_company_contact.contact&.phone : '') %>
                    <br>
                    GST No.: <%= record.billing_address&.gst %><br>
                  <% end %>
                </td>
                <td style="width: 2%;"></td>
                <td class="address-wrapper" style="height: auto;width: 49%;">
                  <% if locals[:supplier].present? %>
                    <%= locals[:supplier].name if locals[:supplier].name.present? %><br>
                    <%= locals[:supplier].shipping_address&.to_multiline_s %>
                    <br>
                    Tel: <%= record.shipping_address&.phone || locals[:supplier]&.phone || (locals[:supplier].default_company_contact.present? ? locals[:supplier].default_company_contact.contact&.phone : '') %>
                    <br>
                    GST No.: <%= record.shipping_address&.gst %><br>
                  <% end %>
                </td>
              </tr>
              </tbody>
            </table>
          </div>
          <br clear="all">
          <div class="address-blocks">
            <div style=" " class="heading heading-left">
              <b><span>Bulk MRO - Bill to:</span></b>
            </div>
            <div class="heading heading-right">
              <b><span>Bulk MRO - Ship to:</span></b>
            </div>
            <br clear="all">
            <table border="0" cellspacing="0" style="width: 100%; margin-top: 10px;">
              <tbody>
              <tr>
                <td class="address-wrapper" style="height: auto;width: 49%;">
                  <%= (locals[:inquiry].bill_from.address.name.to_s + '<br>').html_safe if locals[:inquiry].bill_from.address.name.present? %>
                  <% if locals[:inquiry].bill_from.present? %>
                    <%= locals[:inquiry].bill_from.address.to_multiline_s %><br>
                    GST No.: <%= locals[:inquiry].bill_from.address.gst %><br>
                  <% end %>
                  PAN No.: AAGCB7343G
                </td>
                <td style="width: 2%;"></td>
                <td class="address-wrapper" style="height: auto;width: 49%;">
                  <%= (locals[:inquiry].ship_from.address.name.to_s + '<br>').html_safe if locals[:inquiry].ship_from.address.name.present? %>
                  <% if locals[:inquiry].ship_from.present? %>
                    <%= locals[:inquiry].ship_from.address.to_multiline_s %><br>
                    GST No.: <%= locals[:inquiry].ship_from.address.gst %><br>
                  <% end %>
                  PAN No.: AAGCB7343G
                </td>
              </tr>
              </tbody>
            </table>
          </div>
          <br clear="all">
          <div style="width: 100%;">
            <table border="0" cellspacing="0" class="pdf-table" style="font-size: 12px;">
              <thead>
              <tr>
                <th align="center" valign="center">
                  <b><span>Sr.<br>
                    No.</span></b></th>
                <th align="center" valign="center">
                  <b><span>SKU</span></b></th>
                <th align="center" valign="center">
                  <b><span>Mfr<br>
                    Model</span></b></th>
                <th align="center" valign="center">
                  <b><span>Description</span></b></th>
                <th align="center" valign="center">
                  <b><span>Make</span></b></th>
                <th align="center" valign="center">
                  <b><span>HSN/<br>
                    SAC<br>
                    Code</span></b></th>
                <th align="center" valign="center">
                  <b><span>UOM</span></b></th>
                <th align="center" valign="center">
                  <b><span>Qty</span></b></th>
                <th align="center" valign="center">
                  <b><span>Unit Price<br>
                    (INR)</span></b></th>
                <th align="center" valign="center">
                  <b><span>Subtotal<br>
                    (INR)</span></b></th>
                <th align="center" valign="center">
                  <b><span>Tax<br>
                    Rate</span></b></th>
                <% if (locals[:metadata][:PopTaxRate].to_s.include? "IG") || (locals[:metadata][:ItemLine][0][:PopTaxRate].to_s.include? "IG") %>
                  <th align="center" valign="center">
                    <b><span>IGST<br>
                    Rate</span></b></th>
                  <th align="center" valign="center">
                    <b><span>IGST<br>
                    Amt</span></b></th>
                <% else %>
                  <th align="center" valign="center">
                    <b><span>CGST<br>
                    Rate</span></b></th>
                  <th align="center" valign="center">
                    <b><span>CGST<br>
                    Amt</span></b></th>
                  <th align="center" valign="center">
                    <b><span>SGST<br>
                    Rate</span></b></th>
                  <th align="center" valign="center">
                    <b><span>SGST<br>
                    Amt</span></b></th>

