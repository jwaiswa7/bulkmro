                <th align="center" style="text-align: center;border-top: 1px solid #3c3c3c;border-right: 1px solid #3c3c3c;border-top-right-radius: 5px; background: #d3d3d3;border-bottom:1px solid #3c3c3c;border-left:1px solid #3c3c3c;" valign="center">
                  <b><span style="color:#000000">Total<br>
                    (INR)</span></b></th>
              </tr>
              </thead>
              <tbody>
              <% locals[:purchase_order].rows.order(:created_at).each_with_index do |item, index| %>
                <tr>
                  <td align="center" valign="top">
                    <span><%= index + 1 %></span>
                  </td>
                  <td align="center" valign="top">
                    <span><%= item.product.present? ? item.product.sku : item.sku %></span>
                  </td>
                  <td align="center" valign="top">
                    <span><%= item.product.present? ? item.product.mpn : '' %></span>
                  </td>
                  <td align="left" valign="top">
                    <span><%= item.metadata['PopProductName'] %></span>
                  </td>
                  <td align="center" valign="top">
                    <span><%= item.product.present? ? item.product.brand.to_s : item.brand %></span>
                  </td>
                  <td align="center" valign="top">
                    <span><%= item.metadata['PopHsn'].present? ? item.metadata['PopHsn'] : item.po_request_row.tax_code.try(:code) %></span>
                  </td>
                  <td align="center" valign="top">
                    <span><%= item.uom  %></span>
                  </td>
                  <td align="center" valign="top">
                    <span><%= number_to_currency(item.quantity, precision: 2, unit: '') %></span>
                  </td>
