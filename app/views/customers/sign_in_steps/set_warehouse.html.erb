<div class="col-lg-6 col-md-7 my-md-5 my-2">
  <p>Please choose a warehouse below to proceed.</p>
  <%= simple_form_for(current_contact, url: update_warehouse_customers_dashboard_path, method: :PATCH) do |f| %>
    <%= f.input :warehouse_id, as: :select, collection: @warehouses, include_blank: false, label: 'Choose a Warehouse', input_html: {class: "select2-single"} %>
    <%= f.submit 'Choose Warehouse', class: 'btn btn-rounded btn-success btn-block' %>
    <span class="d-block text-center text-black-50 my-3">- OR -</span>
    <%= link_to destroy_contact_session_path, method: :delete, :class => 'btn btn-outline-danger btn-block btn-sm' do %>
      <i class="fal fa-power-off"></i>&nbsp;Sign Out
    <% end %>
  <% end %>
</div>