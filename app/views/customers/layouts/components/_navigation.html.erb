<div class="navbar navbar-expand-lg bg-light navbar-light sticky-top">
  <!-- Drawer Toggle -->
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-collapse" aria-controls="navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <!-- Drawer Toggle -->

  <!-- Logo -->
  <a class="navbar-brand" href="<%= customers_dashboard_path %>">
    <img alt="BulkMRO" src="<%= image_path('BMIS_Logo_PNG.png') %>" height="22"/>
  </a>
  <!-- Logo -->

  <!-- Navigation Bar -->
  <div class="collapse navbar-collapse justify-content-between" id="navbar-collapse">
    <ul class="navbar-nav">
      <%= nav_item 'Dashboard', customers_dashboard_path, true %>
      <%= nav_item 'Quotes', customers_quotes_path, true %>
      <%= nav_item 'Orders', customers_orders_path, true %>
      <%= nav_item 'Products', customers_products_path, true %>
    </ul>
  </div>
  <!-- Navigation Bar -->

  <!-- Settings Dropdown DESKTOP -->
  <div class="d-block">
    <div class="dropdown d-inline mr-2">
      <a href="#" role="button" data-toggle="dropdown">
        <i class="fal fa-shopping-cart"></i> <span class="text-primary"><%= current_cart.cart_items.count %></span>
      </a>
      <% if current_cart.present? %>
        <div class="dropdown-menu dropdown-menu-right cart-dropdown">
          <h6 class="dropdown-header">Cart</h6>
          <div class="cart-items">
            <% current_cart.cart_items.each do |cart_item| %>
              <div class="dropdown-item text-dark text-wrap">
                <a class="ml-2 text-danger d-block float-right" href="#">
                  <i class="fal fa-times"></i>
                </a>
                <span class="d-block text-small"><a href="<%= customers_product_path(Product.find(cart_item.product_id)) %>"><%= Product.find(cart_item.product_id).try(:name) %></a></span>
                <span class="d-block text-black-50">x <%= cart_item.quantity %></span>
              </div>
              <div class="dropdown-divider"></div>
            <% end %>
          </div>
          <div class="cart-footer">
            <%= link_to "Cart", customers_cart_path, :class => "btn btn-dark btn-sm w-50" %>
            <%= link_to "Checkout", customers_customer_orders_path(cart_id: current_cart.id, contact_id: current_contact.id), method: :post, :class => "btn btn-success btn-sm w-50" %>
          </div>
        </div>
      <% end %>
    </div>


    <div class="dropdown d-inline">
      <a href="#" role="button" data-toggle="dropdown">
        <i class="fal fa-cog"></i>
      </a>
      <span class="dropdown-menu dropdown-menu-right">
        <%= link_to destroy_contact_session_path, method: :delete, :class => 'ml-lg-2' do %>
          <i class="fal fa-power-off"></i>&nbsp;Sign Out
        <% end %>
      </span>
    </div>
  </div>
  <!-- Settings Dropdown DESKTOP -->
</div>
