<% provide :container_fluid, true %>
<% provide :can_be_ajaxed, true %>
<% provide :wrap_whitespace, true %>

<div class="buttons">
  <br>
  <a href="<%= customers_products_path(view: 'list_view') %>" class="btn btn-lg btn-info">List View</a>
  <a href="<%= customers_products_path(view: 'grid_view') %>" class="btn btn-lg btn-info">Grid View</a>
</div>

<% content_for :header_row do %>
  <th class="no-sort"></th>
  <th class="no-sort">Name</th>
  <th class="no-sort">SKU</th>
  <th class="no-sort">Category</th>
  <th class="no-sort">Created</th>
  <th class="no-sort">Approved</th>
<% end %>

<div class="col-lg-12" class="products_index">
  <% if params[:view] == "grid_view" %>
    <%= render layout: 'shared/layouts/grid' do %>
    <% end %>
  <% else %>
    <%= render layout: 'shared/layouts/datatable' do %>
    <% end %>
  <% end %>
</div>