<div class="col-lg-12">
  <section class="pt-3 pt-lg-4 pb-2">
    <div class="d-md-flex justify-content-between">
      <h3 class="display-5 d-flex align-items-center">
        <%= @product.name %>
      </h3>
    </div>
  </section>

  <section class="mb-3">
    <div class="card">
      <div class="card-body">
        <div>
          <h6 class="text-uppercase text-black-50 mb-1">Product Details</h6>
          <div class="form-row">
            <% if @product.images.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Image</strong>
                <%= @product.sku %>
                <img class="" src="<%= url_for(@product.images.first)%>" width="60" />
              </div>
            <% end %>

            <% if @product.sku? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">BM Number</strong>
                <%= @product.sku %>
              </div>
            <% end %>

            <% if @product.category.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Category</strong>
                <%= @product.category %>
              </div>
            <% end %>

            <% if @product.brand.present? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Brand</strong>
                <%= @product.brand %>
              </div>
            <% end %>

            <% if @product.mpn? %>
              <div class="col-6 col-md-3 mb-2">
                <strong class="d-block">Manufacturer Part Number</strong>
                <%= @product.mpn %>
              </div>
            <% end %>

            <div class="col-6 col-md-3 mb-2">
              <strong class="d-block">Created</strong>
              <%= format_date(@product.created_at) %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-body">
        <div>
          <h6 class="text-uppercase text-black-50 mb-1">Add Product to Cart</h6>
          <%= simple_form_for([:customers, @cart_item], :url => customers_cart_items_path(), :method => :post, :remote => true) do |f| %>
            <div class="form-row">
              <div class="col-2">
                <%= f.input :quantity %>
                <%= f.hidden_field :product_id, value: @product.id %>
              </div>
              <div class="col-2" style="margin-top: 25px">
                <%= f.submit 'Add to Cart', class: "btn btn-block btn-success" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>
</div>
