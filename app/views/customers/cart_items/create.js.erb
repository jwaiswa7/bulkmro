var quantityInput = $('.cart-items-count');
quantityInput.html(<%= current_cart.items.size %>);

<% if @cart_item.errors.empty? %>
  $.notify({
      message: 'Product was successfully added to cart.'
  }, {
      type: 'success'
  });
<% else %>
  $.notify({
      message: 'Quantity should be a multiple of the product MOQ.'
  }, {
      type: 'danger'
  });
<% end %>