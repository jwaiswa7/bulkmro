<div class="col-12">
  <section class="pt-3 pt-lg-4 pb-2 pb-lg-3">
    <div class="d-md-flex justify-content-between">
      <h1 class="display-5 mb-1">Aggregate Reports</h1>
    </div>
    <p class="lead mt-1">
      Reports generated using aggregated sales data and sales history.
    </p>
  </section>

  <section class="pb-4 pb-lg-5 my-1">
    <ul class="nav nav-tabs nav-fill" data-toggle="sticky">
      <%= nav_item('Monthly Purchase Data', customers_reports_path(:graph => 'monthly_purchase_data'), policy(:report).show_aggregate_reports?) %>
      <%= nav_item('Revenue Trend', customers_reports_path(:graph => 'revenue_trend'), policy(:report).show_aggregate_reports?) %>
      <%= nav_item('Order Count', customers_reports_path(:graph => 'orders_count'), policy(:report).show_aggregate_reports?) %>
      <%= nav_item('Unique SKUs', customers_reports_path(:graph => 'unique_skus'), policy(:report).show_aggregate_reports?) %>
      <%#= nav_item('Categorywise Revenue', customers_reports_path(:graph => 'category_wise_revenue'), policy(:report).show_aggregate_reports?) %>
    </ul>

    <%= form_tag customers_reports_path, method:'get', class:'my-2 form-row' do %>
      <div class="col-md-10">
        <input type="hidden" id="graph" name="graph" value = <%= params['graph'] %>>
        <div class="form-group">
          <input type="text" id="daterange" name="daterange" class="form-control" data-toggle="daterangepicker" data-direction="right" placeholder="Pick a daterange">
        </div>
      </div>
      <div class="col-md-2">
        <%= submit_tag "Apply", class: "btn btn-sm btn-block btn-success"%>
      </div>
    <% end %>

    <div class="tab-content">
      <div class="tab-pane fade active show" role="tabpanel">
        <%= yield %>
      </div>
    </div>
  </section>
</div>