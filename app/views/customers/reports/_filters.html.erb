<%= form_tag path, method:'get', class:'my-2 form-row' do %>
  <div class="col-md-5">
    <div class="form-group">
      <input type="text" id="daterange" name="daterange" value="<%= daterange %>" class="form-control" data-toggle="daterangepicker" data-direction="right" placeholder="Pick a daterange">
    </div>
  </div>
  <div class="col-md-5">
    <div class="form-group">
      <%= select_tag "company_id", options_from_collection_for_select(current_account_companies, "id", "name", @company_id), class: 'select select2-single bmro-form-input bmro-dropdown-icon',include_blank: 'Select Company' %>
    </div>
  </div>
  <div class="col-md-2">
    <%= submit_tag "Apply", class: "btn btn-sm btn-block btn-success bmro-button"%>
  </div>
<% end %>
