<% provide :container_fluid, true %>
<% provide :can_be_ajaxed, true %>
<% provide :wrap_whitespace, true %>
<% provide :use_url_as_page_title, true %>
<% provide :can_be_directly_exported_partial, true %>
<% provide :show_date_filter, true %>
<% content_for :heading do %>
  Quotes
<% end %>

<div class="col-lg-12">
  <% content_for :header_row do %>
    <th class="no-sort all"></th>
    <% if policy(current_customers_contact).admin_columns? %>
      <th class="no-sort desktop" data-name="company_id">Company</th>
      <th class="no-sort desktop" data-name="contact_id">Contact</th>
    <% end %>
    <th class="no-sort all" data-name="inquiry_number">Inquiry #</th>
    <th class="sort all " data-name="created_at">Inquiry Date</th>
    <% if current_customers_contact.customer_admin? %>
      <th class="no-sort desktop">Company</th>  
    <% end %>
    <th class="no-sort desktop">Line Items</th>
    <th class="no-sort desktop">Total</th>
    <th class="no-sort desktop " data-name="inside_sales_executive">Sales Person</th>
    <th class="no-sort desktop " data-name="status">Status</th>
    <th class="no-sort desktop text-left" data-name="created_at">Quotation Date</th>
    <th class="no-sort desktop" >Valid Upto</th>
  <% end %>

  <% content_for :filter_row do %>
    <td data-filter="false"></td>
    <% if policy(current_customers_contact).admin_columns? %>
      <td data-filter="dropdown"></td>
      <td data-filter="ajax"></td>
    <% end %>
    <td data-filter="false"></td>
    <td data-filter="false"></td>
    <td data-filter="false"></td>
    <td data-filter="false"></td>
    <td data-filter="false"></td>
    <td data-filter="false"></td>
    <td data-filter="daterange"></td>
    <td data-filter="false"></td>
  <% end %>

  <%= render layout: 'shared/layouts/datatable' do %>
  <% end %>
</div>