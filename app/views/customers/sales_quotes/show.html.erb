<div class="col-12">
  <div class="page-header">
    <div class="">
      <h2>
        Quotes
      </h2>
    </div>
  </div>
    <div class="card">

      <div class="card-body">
        <div class="form-row">
          <div class="col-6">
            <strong>Currency</strong>
            <br> <%= @sales_quote.currency %>
          </div>
          <div class="col-6">
            <strong>Conversion rate</strong>
            <br> <%= @sales_quote.inquiry_currency.conversion_rate %>
          </div>

        </div>
        <div class="card-alternative mt-3">
          <div class="form-row">
            <div class="col-md-6">
              <strong>Supplier - Bill From</strong>
              <%= @sales_quote.inquiry.ship_from.address.name.to_s %><br>
              <%= @sales_quote.inquiry.ship_from.address.to_compact_multiline_s if @sales_quote.inquiry.ship_from.present? %><br>
              <% if @sales_quote.inquiry.ship_from.address.mobile || @sales_quote.inquiry.ship_from.address.telephone %>
                Contact: <%= @sales_quote.inquiry.ship_from.address.mobile || @sales_quote.inquiry.ship_from.address.telephone %><br>
              <% end %>
              GST no: <%= @sales_quote.inquiry.ship_from.address.gst %><br>
            </div>
            <div class="col-md-6 mt-2 mt-md-0">
              <strong>Supplier - Ship From</strong>
              <%= @sales_quote.inquiry.bill_from.address.name.to_s %><br>
              <%= @sales_quote.inquiry.bill_from.address.to_compact_multiline_s if @sales_quote.inquiry.bill_from.present? %><br>
              <% if @sales_quote.inquiry.bill_from.address.phone.present? %>
                Contact: <%= @sales_quote.inquiry.contact.full_name %> - <%= @sales_quote.inquiry.bill_from.address.phone %><br>
              <% end %>
              GST no: <%= @sales_quote.inquiry.bill_from.address.gst %><br>
            </div>
          </div>
          <br>


          <div class="form-row">
            <div class="col-md-6">
              <strong>Customer Bill To</strong><br>
              <%= (@sales_quote.inquiry.company.name) %><br>
              <%= @sales_quote.inquiry.shipping_address.to_compact_multiline_s %><br>
              <% if @sales_quote.inquiry.contact.mobile || @sales_quote.inquiry.contact.telephone %>
                Contact: <%= @sales_quote.inquiry.contact.full_name %> - <%= @sales_quote.inquiry.contact.phone %><br>
              <% end %>
              GST no: <%= @sales_quote.inquiry.shipping_address.gst || @sales_quote.inquiry.company.default_shipping_address.gst %><br>
              Email: <%= @sales_quote.inquiry.contact.email if @sales_quote.inquiry.contact.email.present? %>
            </div>
            <div class="col-md-6 mt-2 mt-md-0">
              <strong>Customer Ship To</strong><br>
              <%= (@sales_quote.inquiry.company.name) %><br>
              <%= @sales_quote.inquiry.billing_address.to_compact_multiline_s %><br>
              <% if @sales_quote.inquiry.contact.phone.present? %>
                Contact: <%= @sales_quote.inquiry.contact.full_name %> - <%= @sales_quote.inquiry.contact.phone %><br>
              <% end %>
              GST no: <%= @sales_quote.inquiry.billing_address.gst || @sales_quote.inquiry.company.default_billing_address.gst %><br>
              Email: <%= @sales_quote.inquiry.contact.email if @sales_quote.inquiry.contact.email.present? %>
            </div>
          </div>
        </div>

        <div class="form-row mb-1 mt-3">
          <div class="col-6">
            <strong>Bulk MRO Sales Person</strong>
            <br><%= @sales_quote.inquiry.inside_sales_owner.first_name %> <%= @sales_quote.inquiry.inside_sales_owner.last_name %>
          </div>
          <div class="col-6">
            <strong>Bulkmro Contact No</strong>
            <br> +91-22-4921-4921
          </div>
        </div>

        <div class="form-row mb-1 mt-3">
          <div class="col-6">
            <strong>Date of Inquiry</strong>
            <br><%= format_date(@sales_quote.inquiry.created_at) %>
          </div>
          <div class="col-6">
            <strong>Quotation Validity</strong>
            <br><%= format_date(@sales_quote.inquiry.valid_end_time) %>
          </div>
        </div>
        <div class="form-row mb-1">
          <div class="col-6">
            <strong>Date of Inquiry</strong><br/>
            <%= format_date(@sales_quote.inquiry.quotation_date) %>
          </div>
          <div class="col-6">
            <strong>Customer Inquiry Ref</strong><br/>
            <p><%= @sales_quote.inquiry.subject %></p>
          </div>
        </div>
        <div class="form-row mb-1">
          <div class="col-6">
            <strong>Freight</strong><br/>
            <%= @sales_quote.inquiry.freight_option %>
          </div>
          <div class="col-6">
            <strong>Price Quoted</strong><br/>
            <p><%= @sales_quote.inquiry.calculated_total %></p>
          </div>
        </div>
        <div class="form-row mb-1">
          <div class="col-6">
            <strong>Packing & Forwarding</strong><br/>
            <%= @sales_quote.inquiry.packing_and_forwarding_option %>
          </div>
          <div class="col-6">
            <strong>Payment Terms</strong><br/>
            <%= @sales_quote.inquiry.payment_option.name %>
          </div>
        </div>
        <% @sales_quote.sales_quote_rows.each do |row| %>
          <div>
            <h6 class="text-uppercase mb-0 mt-3">
              <span class="lead text-black-50 text-small mr-1 mt-1">#<%= row.sr_no %></span>
              <strong><%= row %></strong>
            </h6>
            <div class="form-row my-2">
              <div class="col-md-3">
                <strong>SKU</strong><br>
                <span><%= row.product.sku %></span>
              </div>
              <div class="col-md-3 mt-2 mt-md-0">
                <strong>Mfr Model</strong><br>
                <span>
                  <% if row.product.mpn %>
                    <%= row.product.mpn %>
                  <% else %>
                    -
                  <% end %>
                </span>
              </div>
              <div class="col-md-3 mt-2 mt-md-0">
                <strong>Description</strong><br>
                <span>
                  <% if row.product.description %>
                    <%= row.product.description %>
                  <% else %>
                    -
                  <% end %>
                </span>
              </div>
              <div class="col-md-3 mt-2 mt-md-0">
                <strong>Make</strong><br>
                <span>
                  <% if row.product.brand %>
                    <%= row.product.brand %>
                  <% else %>
                    -
                  <% end %>
                </span>
              </div>
            </div>
            <div class="form-row my-2">
              <div class="col-md-3 mt-2 mt-md-0">
                <strong>HSN/SAC Code</strong><br>
                <span>
                  <% if row.product.remote_uid %>
                    <%= row.product.remote_uid %>
                  <% else %>
                    -
                  <% end %>
                </span>
              </div>
              <div class="col-md-3 mt-2 mt-md-0">
                <strong>Lead Time</strong><br>
                <span>
                  <% if row.lead_time_option %>
                    <%= row.lead_time_option %>
                  <% else %>
                    -
                  <% end %>
                 </span>
              </div>
              <div class="col-md-3 mt-2 mt-md-0">
                <strong>UOM</strong><br>
                <span>
                  <% if row.product.measurement_unit %>
                    <%= row.product.measurement_unit %>
                  <% else %>
                    -
                  <% end %>
                </span>
              </div>

              <div class="col-md-3 mt-2 mt-md-0">
                <strong>Qty</strong><br>
                <span>
                  <% if row.quantity %>
                    <%= row.quantity %>
                  <% else %>
                    -
                  <% end %>
                </span>
              </div>
            </div>
            <div class="form-row my-2">
              <div class="col-md-3 mt-2 mt-md-0">
                <strong>Unit Price (INR)</strong><br>
                <span>
                  <% if row.unit_selling_price %>
                    <%= row.unit_selling_price %>
                  <% else %>
                    -
                  <% end %>
                </span>
              </div>
              <div class="col-md-3 mt-2 mt-md-0">
                <strong>Tax</strong><br>
                <span><%= row.best_tax_code %></span>
              </div>
              <div class="col-md-3 mt-2 mt-md-0">
                <strong>Total (INR)</strong><br>
                <span><%= row.total_selling_price %></span>
              </div>
            </div>
          </div>
          <hr class="my-2">
        <% end %>
      </div>
      <div class="card-footer">
        <div class=form-row>
          <div class="col-8 col-md-3">
            Total Selling Price (Excl. tax)<br>
            <strong><%= format_currency(@sales_quote.calculated_total) %></strong>
          </div>
          <!--<div class="col-8 col-md-3 mt-2 mt-md-0">Shipping Cost<br>
            <strong></strong>
          </div>-->
          <div class="col-4 col-md-3">
            Total Tax<br>
            <strong><%= format_currency(@sales_quote.calculated_total_tax) %></strong>
          </div>
          <div class="col-8 col-md-3 mt-2 mt-md-0">Total Selling Price (Incl. tax)<br>
            <strong><%= format_currency(@sales_quote.calculated_total_with_tax) %></strong>
          </div>

        </div>
      </div>
    </div>
