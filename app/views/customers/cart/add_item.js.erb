<% if @cart_item.errors.empty? %>
  $.notify({
      message: 'Product was successfully added to cart.'
  }, {
      type: 'success'
  });
  document.getElementById("count-cart-items").innerHTML = "<%= @cart.items.count %>"
<% else %>
  $.notify({
      message: 'Item could not be added to the cart'
  }, {
      type: 'danger'
  });
<% end %>