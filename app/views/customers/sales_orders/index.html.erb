<% provide :container_fluid, true %>
<% provide :can_be_ajaxed, true %>
<% provide :wrap_whitespace, true %>
<% provide :use_url_as_page_title, true %>
<% provide :show_date_filter, true %>
<% content_for :heading do %>
  Orders
<% end %>


<%= render partial: 'customers/sales_orders/order_filters' %>

<% content_for :header_row do %>
  <th class="no-sort all"></th>
  <% if policy(current_customers_contact).admin_columns? %>
    <th class="no-sort all" data-name="company_id">Company</th>
  <% end %>
  <th class="no-sort all" data-name="order_number">Order #</th>
  <th class="no-sort all " data-name="created_at">Order Date</th>
  <th class="no-sort all" data-name="customer_po_number">PO #</th>
  <th class="no-sort all " data-name="cp_order_date">PO Date</th>
  <th class="no-sort all" data-name="inquiry_number">Inquiry #</th>
  <th class="no-sort desktop " data-name="cp_ship_to">User</th>
  <th class="no-sort desktop" data-name="">Order Total</th>
  <th class="no-sort desktop " data-name="customer_committed_date">Expected Delivery Date</th>
  <th class="no-sort desktop " data-name="">Actual Delivery Date</th>
  <th class="no-sort desktop " data-name="order_status">Order Status</th>
  <th class="no-sort all text-left" data-name="created_at">Created</th>
  <% if policy(current_customers_contact).amat_columns? %>
    <!-- amat columns -->
    <th class="no-sort all text-left">Customer order date</th>
    <th class="no-sort all text-left">Actual PO received date</th>
    <th class="no-sort all text-left">Customer PO delivery date</th>
    <th class="no-sort all text-left">Bulk MRO Revised delivery date</th> 
    <th class="no-sort all text-left">Vendor name</th> 
    <th class="no-sort all text-left">Vendor PO number</th> 
    <th class="no-sort all text-left">Vendor PO sent date</th> 
  <% end %>
  
<% end %>

