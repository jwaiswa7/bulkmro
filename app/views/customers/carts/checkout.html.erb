<!DOCTYPE html>
<html lang="en">
<body class="grey lighten-3">
<!--Main layout-->
  <div class="container wow fadeIn">
    <!-- Heading -->
    <h2 class="my-5 h2 text-center">Checkout</h2>
    <!--Grid row-->
    <div class="row">
      <div style="width: 100%">
        <!-- Heading -->
        <h4 class="d-flex justify-content-between align-items-center mb-3">
          <span class="text-muted">Your cart</span>
          <span class="badge badge-secondary badge-pill"><%= current_cart.cart_items.count %></span>
        </h4>
      <!-- Cart -->
        <ul class="list-group mb-3 z-depth-1">
          <% @cart_items.each do |cart_item| %>
            <li class="list-group-item d-flex justify-content-between lh-condensed">
              <div>
                <h5 title="<%= cart_item.product.name %>"><%= truncate(cart_item.product.name, :length => 100) %></h5>
              </div>
              <span class="text-muted">Quantity: <%= cart_item.quantity %></span>
            </li>
          <% end %>
          <li class="list-group-item d-flex justify-content-between">
            <span></span>
            <div class="cart-footer">
              <%= link_to "Place Order", customers_customer_orders_path(contact_id: current_contact.id), method: :post, :class => "btn btn-dark btn-sm w-100" %>
            </div>
          </li>
        </ul>
        <!-- Cart -->
      </div>
      <!--Grid column-->
    </div>
    <!--Grid row-->
  </div>
</body>

</html>