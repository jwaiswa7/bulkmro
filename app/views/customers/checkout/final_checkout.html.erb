<div class="col-12">
  <section class="pt-3 pt-lg-4 pb-2 pb-lg-3">
    <div class="d-md-flex justify-content-between">
      <h1 class="display-5 mb-1">Checkout</h1>
    </div>
    <p class="lead mt-1">
      You have <strong><%= @cart.items.size %></strong> product(s) in your cart worth
      <strong><%= format_currency(grand_total(current_cart.items)) %></strong>.
    </p>
  </section>

  <div class="row flex-lg-row-reverse">
    <div class="col-lg-3">
      <div class="card mb-3">
        <div class="card-header">
          <h5 class="mb-0"><strong>Summary</strong></h5>
        </div>
        <div class="card-body">
          <% if @cart.default_billing_address_id.present? %>
            <strong class="d-block">Billing Address <a data-toggle="collapse" data-parent="#checkout" href="#checkout-billing" class="float-right">Change</a></strong>
            <em class="d-block mt-1"><%= current_contact.name %></em>
            <%= get_billing_address(@cart.default_billing_address_id).to_multiline_s %><br/>
            <% if current_contact.telephone.present? %>
              T: <%= current_contact.telephone %><br/>
            <% end %>
            GST No: <%= get_gst_no(@cart.default_billing_address_id) %>
          <% end %>
          <% if @cart.default_shipping_address_id.present? %>
            <hr>
            <strong class="d-block">Shipping Address <a data-toggle="collapse" data-parent="#checkout" href="#checkout-shipping" class="float-right">Change</a></strong>
            <em class="d-block mt-1"><%= current_contact.name %></em>
            <%= get_shipping_address(@cart.default_shipping_address_id) %><br/>
            <% if current_contact.telephone.present? %>
              T: <%= current_contact.telephone %><br/>
            <% end %>
            GST No: <%= get_gst_no(@cart.default_shipping_address_id) %>
          <% end %>
          <% if @cart.po_reference.present? %>
            <hr>
            <strong class="d-block">Purchase Order Details<a data-toggle="collapse" data-parent="#checkout" href="#checkout-reference" class="float-right">Change</a></strong>
            <%= @cart.po_reference %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="accordion col-lg-9" id="checkout">
      <div class="card">
        <div class="card-header">
          <a data-toggle="collapse" data-parent="#checkout" href="<%= @cart.default_billing_address_id? ? "#checkout-billing" : "" %>">
            <h5 class="mb-0">
              <strong>Billing Details</strong>
            </h5>
          </a>
        </div>

        <div id="checkout-billing" class="collapse <%= show_if(params[:next_step].blank?) %>" data-parent="#checkout">
          <div class="card-body">
            <p>Select a billing address from your address book.</p>
            <%= simple_form_for [:customers, @cart], :url => update_billing_address_customers_cart_path, :method => :patch do |f| %>
              <% current_contact_companies.each do |company| %>
                <% if company.default_billing_address_id.present? %>
                  <label class="d-flex justify-content-center align-items-center flex-row">
                    <span class="h-100">
                      <%= f.radio_button :default_billing_address_id, company.default_billing_address_id %>
                    </span>
                    <span class="flex-grow-1 ml-2">
                      <%= company.default_billing_address.try(:to_multiline_s) %><br/>
                      <% if current_contact.telephone.present? %>
                        T: <%= current_contact.telephone %><br/>
                      <% end %>
                      GST No: <%= company.default_billing_address.gst %>
                    </span>
                  </label>
                <% end %>
              <% end %>
              <%= f.button :submit, 'Continue', class: 'btn btn-success btn-block mt-4' %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          <a class="collapsed" data-toggle="collapse" data-parent="#checkout" href="<%= @cart.default_billing_address_id? ? "#checkout-shipping" : "" %>">
            <h5 class="mb-0"><strong>Shipping Details</strong></h5>
          </a>
        </div>

        <div id="checkout-shipping" class="collapse <%= show_if(params[:next_step] == 'shipping') %>" data-parent="#checkout">
          <div class="card-body">
            <p>Select a shipping address from your address book.</p>
            <%= simple_form_for [:customers, @cart], :url => update_shipping_address_customers_cart_path, :method => :patch do |f| %>
              <% current_contact_companies.each do |company| %>
                <% if company.default_shipping_address_id.present? %>
                  <label class="d-flex justify-content-center align-items-center flex-row">
                    <span class="h-100">
                      <%= f.radio_button :default_shipping_address_id, company.default_shipping_address_id %>
                    </span>
                    <span class="flex-grow-1 ml-2">
                      <%= company.default_shipping_address.try(:to_multiline_s) %><br/>
                      <% if current_contact.telephone.present? %>
                        T: <%= current_contact.telephone %><br/>
                      <% end %>
                      GST No: <%= company.default_shipping_address.gst %>
                    </span>
                  </label>
                <% end %>
              <% end %>
              <%= f.button :submit, 'Continue', class: 'btn btn-success btn-block mt-4' %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          <a class="collapsed" data-toggle="collapse" data-parent="#checkout" href="<%= (@cart.default_billing_address_id? &&
              @cart.default_shipping_address_id?) ? "#checkout-reference" : "" %>">
            <h5 class="mb-0"><strong>Purchase Order Details</strong></h5>
          </a>
        </div>
        <div id="checkout-reference" class="collapse <%= show_if(params[:next_step] == 'po_reference') %>" data-parent="#checkout">
          <div class="card-body">
            <%= simple_form_for [:customers, @cart], :url => add_po_number_customers_cart_path, :method => :patch do |f| %>
              <%= f.input :po_reference, label: 'PO Reference Number', placeholder: 'e.g. 4591519126' %>
              <%= f.button :submit, 'Continue', class: 'btn btn-success btn-block mt-4' %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          <a class="collapsed" data-toggle="collapse" data-parent="#checkout" href="<%= (@cart.default_billing_address_id? &&
              @cart.default_shipping_address_id?) ? "#checkout-summary" : "" %>">
            <h5 class="mb-0"><strong>Products Summary</strong></h5>
          </a>
        </div>

        <div id="checkout-summary" class="collapse <%= show_if(params[:next_step] == 'summary') %>" data-parent="#checkout">
          <div class="card-body pt-0">
            <div class="col-12">
              <div class="text-left">
                <table class="datatable table table-bordered dt-responsive wrap-whitespace" style="width: 100%;">
                  <thead>
                  <tr>
                    <th class="no-sort desktop">Image</th>
                    <th class="no-sort all">Product</th>
                    <th class="all">Price</th>
                    <th class="all">Qty</th>
                    <th class="all">Subtotal</th>
                  </tr>
                  </thead>
                  <tbody>
                  <% current_cart.items.each do |cart_item| %>
                    <tr>
                      <td><img src="<%= url_for(cart_item.customer_product.images.first) %>" alt="<%= cart_item.product.sku %>" /></td>
                      <td><%= cart_item.product.name.truncate(80) %></td>
                      <td><%= format_currency(cart_item.customer_product.customer_price.to_f) %></td>
                      <td>x <%= cart_item.quantity %></td>
                      <td><%= format_currency(cart_item.customer_product.customer_price.to_f * cart_item.quantity) %></td>
                    </tr>
                  <% end %>
                  <tr>
                    <table style="width: 100%;">
                      <tbody style="float: right">
                        <tr>
                          <td><strong>Subtotal:</strong></td>
                          <td style="float: right"><%= format_currency(get_order_total(current_cart.items)) %></td>
                        </tr>
                        <% if @cart.default_billing_address_id? %>
                          <% calculate_tax(current_cart.items).each do |key, value| %>
                            <tr>
                              <td><strong><%= TaxRateString.for(get_billing_address(@cart.default_billing_address_id ), default_warehouse_address, default_warehouse_address, key) %>:</strong></td>
                              <td style="float: right"><%= format_currency(value) %></td>
                            </tr>
                          <% end %>
                          <tr>
                            <td><strong>Total Tax:</strong></td>
                            <td style="float: right"><%= format_currency(total_tax(current_cart.items)) %></td>
                          </tr>
                          <tr>
                            <h5>
                              <td><h5>Grand Total:</h5></td>
                              <td style="float: right"><h5><%= format_currency(grand_total(current_cart.items)) %></h5></td>
                            </h5>
                          </tr>
                        <% else %>
                          <tr>
                            <td><i class="fas fa-info-circle" title="Taxes will be displayed after you select a billing address"></i><strong>Total Tax:</strong></td>
                            <td style="float: right">-</td>
                          </tr>
                          <tr>
                            <td><h5>Grand Total:</h5></td>
                            <td style="float: right"><h5><%= format_currency(grand_total(current_cart.items)) %></h5></td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <div class="card-footer">
            <div class="form-row">
              <% if @cart.items.any? %>
                <div class="col-12 <%= (@cart.default_billing_address_id? && @cart.default_shipping_address_id?) ? "col-md-6" : "col-md-12" %>">
                  <%= link_to customers_cart_path, :class => "btn btn-warning btn-block" do %>
                    Modify Cart
                  <% end %>
                </div>
                <% if @cart.default_billing_address_id? && @cart.default_shipping_address_id? %>
                  <div class="col-12 col-md-6 mt-2 mt-md-0">
                    <%= link_to customers_customer_orders_path(contact_id: current_contact.id), method: :post, :class => "btn btn-success btn-block" do %>
                      Place Order
                    <% end %>
                  </div>
                <% end %>
              <% else %>
                <div class="col-12 col-md-12">
                  <%= link_to customers_products_path, :class => "mt-2 btn btn-outline-success btn-block btn-sm" do %>
                    Add Products
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>