<div class="col-12">
  <div class="form-row mt-3 mt-lg-4">
      <div class="col-md-6">
        <div class="card mb-2">
          <div class="card-body">
            <div class="text-left">
              <p class="text-uppercase text-black-50 mb-0"><strong>Quotes</strong></p>
              <h1 class="mb-0 display-4"><%= @sales_quotes_count %></h1>
            </div>

            <div class="text-left">
              <p class="text-uppercase text-black-50 mt-3"><strong>Recent Quotes</strong>
              <div class="list-group list-group-flush">
                <% @recent_sales_quotes.each do |sales_quote| %>
                  <a href="<%= customers_quote_path(sales_quote) %>" class="list-group-item list-group-item-action p-1">
                    <span class="float-right"><%= status_helper_format_label(sales_quote.inquiry.status) %></span>
                    <strong>#<%= sales_quote.inquiry.inquiry_number %></strong> - <%= sales_quote.inquiry.subject.truncate(40) %>
                  </a>
                <% end %>
              </div>
            </div>
          </div>
          <div class="card-footer">
            <a href="<%= customers_quotes_path %>" class="btn btn-lg btn-block btn-info"><i class="fal fa-eye mr-1"></i> All Quotes</a>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card mb-2">
          <div class="card-body">
            <div class="text-left">
              <p class="text-uppercase text-black-50 mb-0"><strong>Orders</strong></p>
              <h1 class="mb-0 display-4"><%= @sales_orders_count %></h1>
            </div>

            <div class="text-left">
              <p class="text-uppercase text-black-50 mt-3"><strong>Recent Orders</strong>
              <div class="list-group list-group-flush">
                <% @recent_sales_orders.each do |sales_order| %>
                  <a href="<%= customers_order_path(sales_order) %>" class="list-group-item list-group-item-action p-1">
                    <span class="float-right"><%= status_helper_format_label(sales_order.inquiry.status) %></span>
                    <strong>#<%= sales_order.inquiry.inquiry_number %></strong> - <%= sales_order.inquiry.subject.truncate(40) %>
                  </a>
                <% end %>
              </div>
            </div>
          </div>
          <div class="card-footer">
            <a href="<%= customers_orders_path %>" class="btn btn-lg btn-block btn-info"><i class="fal fa-eye mr-1"></i> All Orders</a>
          </div>
        </div>
      </div>
      <div class="col-12">
        <div class="card mb-3">
          <div class="card-body">
            <div class="text-left">
              <p class="text-uppercase text-black-50 mb-0"><strong>Products</strong></p>
              <h1 class="mb-0 display-4"><%= @products_count %></h1>
            </div>

            <div class="text-left">
              <p class="text-uppercase text-black-50 mt-3"><strong>Most Ordered Products</strong>
              <div class="list-group list-group-flush">
                <% @most_ordered_products.each do |product, count| %>
                  <a href="<%= customers_order_path(product) %>" class="list-group-item list-group-item-action p-1">
                    <span class="float-right"><%= count %></span>
                    <strong><%= product.name.truncate(40) %></strong>
                  </a>
                <% end %>
              </div>
            </div>
          </div>
          <div class="card-footer">
            <a href="<%= customers_products_path %>" class="btn btn-lg btn-block btn-info"><i class="fal fa-eye mr-1"></i> All Products</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>