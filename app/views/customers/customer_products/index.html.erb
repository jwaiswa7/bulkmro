<% provide :container_fluid, true %>
<% provide :can_be_ajaxed, true %>
<% provide :wrap_whitespace, true %>

<% content_for :heading do %>
  Products
<% end %>

<% content_for :heading_buttons do %>
  <a href="<%= customers_products_path(view: 'list_view') %>" class="btn btn-lg btn-light" data-toggle="tooltip" title="List View"><i class="fal fa-list-ul"></i></a>
  <a href="<%= customers_products_path(view: 'grid_view') %>" class="btn btn-lg btn-light" data-toggle="tooltip" title="Grid View"><i class="fal fa-grip-horizontal"></i></a>
<% end %>

<%= render partial: 'sort'%>

<% content_for :header_row do %>
  <th class="no-sort"></th>
  <th class="no-sort">Name</th>
  <th class="no-sort">SKU</th>
  <th class="no-sort">Brand</th>
  <th class="no-sort desktop">Customer Price</th>
  <th class="no-sort desktop">Stock</th>
  <th class="desktop" data-name="created_at">Created</th>
<% end %>

<div class="col-lg-12" id="customer_products_index">
  <% if params[:view] == "list_view" %>
    <%= render partial: 'shared/layouts/datatable' %>
  <% elsif @is_henkel %>
    <%= render partial: 'grid_henkel', locals: {customer_products: @customer_products, customer_products_paginate: @customer_products_paginate} %>
  <% elsif @is_saint_gobain %>
    <%= render partial: 'grid_saint_gobain' %>
  <% else %>
    <%= render partial: 'grid' %>
  <% end %>
</div>

<div id="to_cart_modal_content"></div>