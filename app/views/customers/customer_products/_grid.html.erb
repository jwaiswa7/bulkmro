<% if content_for?(:heading) || (content_for?(:can_be_directly_created) && policy(current_model.singularize.to_sym).new?) || !content_for?(:hide_table_desc) %>

  <section class="pt-3 pt-lg-4 pb-2 pb-lg-3">
    <div class="d-md-flex justify-content-between">
      <% if content_for?(:heading) %>
        <h1 class="display-5 mb-1"><%= yield :heading %></h1>
      <% else %>
        <h1 class="display-5 mb-1"><%= current_model.humanize %></h1>
      <% end unless content_for?(:hide_table_heading) %>

      <div>
        <a href="<%= customers_customer_products_path(view: 'list_view') %>" class="btn btn-lg btn-light" data-toggle="tooltip" title="List View"><i class="fal fa-list-ul"></i></a>
        <a href="<%= customers_customer_products_path(view: 'grid_view') %>" class="btn btn-lg btn-light" data-toggle="tooltip" title="Grid View"><i class="fal fa-grip-horizontal"></i></a>
      </div>
    </div>

    <% unless content_for?(:hide_table_desc) %>
      <p class="lead mt-1">
        All <%= current_model.humanize.downcase %> filterable in any way that we want.
      </p>
    <% end %>
  </section>
<% end %>

<div class="input-group input-group-round">
  <div class="input-group-prepend">
    <span class="input-group-text"><i class="material-icons">filter_list</i></span>
  </div>
  <input type="search" name="q" class="form-control filter-list-input" placeholder="Filter by anything [press ENTER to SEARCH]" value="<%= params[:q] %>" onchange="searchsubmit(this.value)">
</div>

<div class="form-row mt-2" id="grid_container">
  <% if @customer_products.count > 0 %>
    <% @customer_products.each do |customer_product| %>
      <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-xs-12">
        <div class="card mb-2">
          <div class="card-body">
            <a href="<%= customers_customer_product_path(customer_product) %>">
              <span class="text-center d-block">
                <% if customer_product.images.first.present? %>
                  <img src="<%= url_for(customer_product.images.first) %>" style="max-height: 180px;" />
                <% elsif customer_product.product.images.first.present? %>
                  <img src="<%= url_for(customer_product.product.images.first) %>" style="max-height: 180px;" />
                <% else %>
                  <img src="<%= image_path('coming_soon.png') %>" />
                <% end %>
              </span>
              <h5 class="mb-0 text-small mt-2"><strong><%= truncate(customer_product.name, :length => 25) %></strong></h5>
              <h5 class="mb-0 text-small"><strong>(#<%= customer_product.sku %>)</strong></h5>
              <h5 class="mb-0 mt-1 text-small text-black-50"><strong><%= format_currency(customer_product.customer_price) %></strong></h5>

              <hr class="my-2">
              <p class="mb-0 text-small text-black-50">
                <strong class="d-block"><%= customer_product.best_brand.name if  customer_product.best_brand.present? %></strong>
                <!--              <em class="d-block">MOQ - 50</em>-->
              </p>
            </a>
          </div>
          <div class="card-footer p-2">
            <div class="form-row">
              <!--              <div class="col-4">-->
              <!--                <input type="text" class="form-control" placeholder="1" id="quantity_<%#= product.id %>" />-->
              <!--              </div>-->
              <div class="col-12">
                <%= link_to "Add to Cart", customers_cart_items_path(customer_product_id: customer_product.id, product_id: customer_product.product.id, quantity: 1), method: :post, remote: true, class: "btn btn-block btn-success" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="col-12">
      <div class="card mb-12">
        <div class="card-body">
          <p class="text-small text-black-50 ">
            <strong class="d-block ">No matching record found</strong>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="col-12">
  <%= paginate @customer_products_paginate, remote: true, :params => {:view => "grid_view", :q => params[:q]} %>
</div>